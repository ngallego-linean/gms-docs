@model ApplicationListViewModel

@{
    ViewData["Title"] = "Review Queue";

    // MOCK DATA: Completed submissions for demonstration
    var completedSubmissions = new List<dynamic>
    {
        new { Id = 101, LEAName = "San Jose Unified School District", SubmissionMonth = new DateTime(2025, 10, 1), CompletedDate = DateTime.Now.AddDays(-5), ApprovedCount = 8 },
        new { Id = 102, LEAName = "Santa Clara Unified School District", SubmissionMonth = new DateTime(2025, 10, 1), CompletedDate = DateTime.Now.AddDays(-8), ApprovedCount = 12 },
        new { Id = 103, LEAName = "Stockton Unified School District", SubmissionMonth = new DateTime(2025, 9, 1), CompletedDate = DateTime.Now.AddDays(-15), ApprovedCount = 5 },
        new { Id = 104, LEAName = "Bakersfield City School District", SubmissionMonth = new DateTime(2025, 9, 1), CompletedDate = DateTime.Now.AddDays(-20), ApprovedCount = 15 },
        new { Id = 105, LEAName = "Modesto City Schools", SubmissionMonth = new DateTime(2025, 8, 1), CompletedDate = DateTime.Now.AddDays(-30), ApprovedCount = 7 }
    };
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "GrantsTeam")">Grants Team</a></li>
        <li class="breadcrumb-item active">Review Queue</li>
    </ol>
}

<div class="page-header">
    <h2><i class="mdi mdi-clipboard-check-outline"></i> Disbursement Group Review Queue</h2>
    <p class="subtitle">@Model.GrantCycleName - Disbursement Groups Pending Review</p>
</div>

<div class="page-actions">
    <button type="button" class="r4-button r4-button-secondary" onclick="history.back()">
        <i class="mdi mdi-arrow-left"></i> Back
    </button>
</div>

@if (!Model.Applications.Any())
{
    <div class="alert alert-info">
        <i class="mdi mdi-information-outline"></i>
        No disbursement groups are currently pending review. All groups have been processed.
    </div>
}
else
{
    <div class="alert alert-warning">
        <i class="mdi mdi-alert-outline"></i>
        <strong>@Model.Applications.Sum(a => a.PendingCount) student(s)</strong> from <strong>@Model.Applications.Count disbursement group(s)</strong> are waiting for your review.
    </div>

    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-folder-open-outline"></i> Disbursement Groups Requiring Review</h4>
        </div>
        <div class="r4-card-body">
            <div class="table-wrapper">
            <table class="r4-table" id="pendingTable" style="width: 100%;">
                <thead>
                    <tr>
                        <th>Submission Month</th>
                        <th>LEA District</th>
                        <th>Pending</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var app in Model.Applications)
                    {
                        <tr>
                            <td>@app.LastModified.ToString("MMMM yyyy")</td>
                            <td>@app.LEAName</td>
                            <td>
                                <span class="badge badge-warning badge-status">@app.PendingCount Pending</span>
                            </td>
                            <td>
                                <a href="@Url.Action("Details", "Application", new { id = app.Id })" class="r4-button r4-button-sm">
                                    <i class="mdi mdi-eye-outline"></i> Review Submission
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>

            @* Pagination Controls - Only shown if more than 10 items *@
            @if (Model.Applications.Count > 10)
            {
                <div class="pagination-controls" id="pendingPagination" style="display: flex; justify-content: space-between; align-items: center; margin-top: 1rem; padding-top: 1rem; border-top: 1px solid var(--gray-200);">
                    <div class="pagination-info">
                        Showing <span id="pendingShowingStart">1</span>-<span id="pendingShowingEnd">10</span> of <span id="pendingTotalRecords">@Model.Applications.Count</span> groups
                    </div>
                    <div class="pagination-buttons" style="display: flex; gap: 0.5rem; align-items: center;">
                        <button type="button" class="r4-button r4-button-sm" id="pendingPrevPage" onclick="changePendingPage(-1)">
                            <i class="mdi mdi-chevron-left"></i> Previous
                        </button>
                        <span style="padding: 0 0.75rem;">Page <span id="pendingCurrentPage">1</span> of <span id="pendingTotalPages">1</span></span>
                        <button type="button" class="r4-button r4-button-sm" id="pendingNextPage" onclick="changePendingPage(1)">
                            Next <i class="mdi mdi-chevron-right"></i>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
}

@* Completed Submissions Section *@
@if (completedSubmissions.Any())
{
    <div class="r4-card" style="margin-top: 1.5rem;">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-check-circle-outline"></i> Completed Reviews</h4>
        </div>
        <div class="r4-card-body">
            <div class="table-wrapper">
                <table class="r4-table" id="completedTable" style="width: 100%;">
                    <thead>
                        <tr>
                            <th>Submission Month</th>
                            <th>LEA District</th>
                            <th>Approved</th>
                            <th>Completed</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var submission in completedSubmissions)
                        {
                            <tr>
                                <td>@submission.SubmissionMonth.ToString("MMMM yyyy")</td>
                                <td>@submission.LEAName</td>
                                <td>
                                    <span class="badge badge-success badge-status">@submission.ApprovedCount Approved</span>
                                </td>
                                <td>@submission.CompletedDate.ToString("MM/dd/yyyy")</td>
                                <td>
                                    <span class="badge badge-success"><i class="mdi mdi-check-circle"></i> Complete</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @* Pagination Controls - Only shown if more than 10 items *@
            @if (completedSubmissions.Count > 10)
            {
                <div class="pagination-controls" id="completedPagination" style="display: flex; justify-content: space-between; align-items: center; margin-top: 1rem; padding-top: 1rem; border-top: 1px solid var(--gray-200);">
                    <div class="pagination-info">
                        Showing <span id="completedShowingStart">1</span>-<span id="completedShowingEnd">10</span> of <span id="completedTotalRecords">@completedSubmissions.Count</span> reviews
                    </div>
                    <div class="pagination-buttons" style="display: flex; gap: 0.5rem; align-items: center;">
                        <button type="button" class="r4-button r4-button-sm" id="completedPrevPage" onclick="changeCompletedPage(-1)">
                            <i class="mdi mdi-chevron-left"></i> Previous
                        </button>
                        <span style="padding: 0 0.75rem;">Page <span id="completedCurrentPage">1</span> of <span id="completedTotalPages">1</span></span>
                        <button type="button" class="r4-button r4-button-sm" id="completedNextPage" onclick="changeCompletedPage(1)">
                            Next <i class="mdi mdi-chevron-right"></i>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
}

@section Scripts {
    <script>
        const ROWS_PER_PAGE = 10;

        // Pending table pagination
        let pendingCurrentPage = 1;
        let pendingAllRows = [];

        // Completed table pagination
        let completedCurrentPage = 1;
        let completedAllRows = [];

        document.addEventListener('DOMContentLoaded', function() {
            // Initialize pending table pagination
            const pendingTable = document.getElementById('pendingTable');
            if (pendingTable) {
                const pendingTbody = pendingTable.getElementsByTagName('tbody')[0];
                if (pendingTbody) {
                    pendingAllRows = Array.from(pendingTbody.getElementsByTagName('tr'));
                    if (pendingAllRows.length > ROWS_PER_PAGE) {
                        updatePendingPagination();
                        showPendingPage(1);
                    }
                }
            }

            // Initialize completed table pagination
            const completedTable = document.getElementById('completedTable');
            if (completedTable) {
                const completedTbody = completedTable.getElementsByTagName('tbody')[0];
                if (completedTbody) {
                    completedAllRows = Array.from(completedTbody.getElementsByTagName('tr'));
                    if (completedAllRows.length > ROWS_PER_PAGE) {
                        updateCompletedPagination();
                        showCompletedPage(1);
                    }
                }
            }
        });

        // Pending table functions
        function updatePendingPagination() {
            const totalPages = Math.ceil(pendingAllRows.length / ROWS_PER_PAGE) || 1;
            document.getElementById('pendingTotalPages').textContent = totalPages;
            document.getElementById('pendingTotalRecords').textContent = pendingAllRows.length;
            document.getElementById('pendingPrevPage').disabled = pendingCurrentPage <= 1;
            document.getElementById('pendingNextPage').disabled = pendingCurrentPage >= totalPages;
        }

        function showPendingPage(page) {
            pendingCurrentPage = page;
            const startIndex = (page - 1) * ROWS_PER_PAGE;
            const endIndex = startIndex + ROWS_PER_PAGE;

            pendingAllRows.forEach((row, index) => {
                row.style.display = (index >= startIndex && index < endIndex) ? '' : 'none';
            });

            document.getElementById('pendingCurrentPage').textContent = page;
            document.getElementById('pendingShowingStart').textContent = pendingAllRows.length > 0 ? startIndex + 1 : 0;
            document.getElementById('pendingShowingEnd').textContent = Math.min(endIndex, pendingAllRows.length);
            updatePendingPagination();
        }

        function changePendingPage(delta) {
            const totalPages = Math.ceil(pendingAllRows.length / ROWS_PER_PAGE) || 1;
            const newPage = pendingCurrentPage + delta;
            if (newPage >= 1 && newPage <= totalPages) {
                showPendingPage(newPage);
            }
        }

        // Completed table functions
        function updateCompletedPagination() {
            const totalPages = Math.ceil(completedAllRows.length / ROWS_PER_PAGE) || 1;
            document.getElementById('completedTotalPages').textContent = totalPages;
            document.getElementById('completedTotalRecords').textContent = completedAllRows.length;
            document.getElementById('completedPrevPage').disabled = completedCurrentPage <= 1;
            document.getElementById('completedNextPage').disabled = completedCurrentPage >= totalPages;
        }

        function showCompletedPage(page) {
            completedCurrentPage = page;
            const startIndex = (page - 1) * ROWS_PER_PAGE;
            const endIndex = startIndex + ROWS_PER_PAGE;

            completedAllRows.forEach((row, index) => {
                row.style.display = (index >= startIndex && index < endIndex) ? '' : 'none';
            });

            document.getElementById('completedCurrentPage').textContent = page;
            document.getElementById('completedShowingStart').textContent = completedAllRows.length > 0 ? startIndex + 1 : 0;
            document.getElementById('completedShowingEnd').textContent = Math.min(endIndex, completedAllRows.length);
            updateCompletedPagination();
        }

        function changeCompletedPage(delta) {
            const totalPages = Math.ceil(completedAllRows.length / ROWS_PER_PAGE) || 1;
            const newPage = completedCurrentPage + delta;
            if (newPage >= 1 && newPage <= totalPages) {
                showCompletedPage(newPage);
            }
        }
    </script>

    <style>
        .page-actions .r4-button-secondary {
            background-color: var(--gray-100) !important;
            color: var(--gray-700) !important;
            border: 1px solid var(--gray-300) !important;
        }

        .page-actions .r4-button-secondary:hover {
            background-color: var(--gray-200) !important;
            color: var(--gray-800) !important;
        }
    </style>
}
