@model WaitlistViewModel

@{
    ViewData["Title"] = "Funding Waitlist";
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "GrantsTeam")">Grants Team</a></li>
        <li class="breadcrumb-item active">Funding Waitlist</li>
    </ol>
}

<div class="page-header">
    <h2><i class="mdi mdi-account-clock-outline"></i> Funding Waitlist</h2>
    <p class="subtitle">@Model.GrantCycleName - Approved Candidates Awaiting Funding</p>
</div>

<div class="page-actions">
    <button type="button" class="r4-button r4-button-secondary" onclick="history.back()">
        <i class="mdi mdi-arrow-left"></i> Back
    </button>
</div>

@* Summary Card *@
<div class="r4-card" style="margin-bottom: 1.5rem;">
    <div class="r4-card-body" style="display: flex; gap: 2rem; align-items: center; padding: 1.5rem;">
        <div style="display: flex; align-items: center; gap: 1rem;">
            <div style="width: 56px; height: 56px; background-color: var(--ctc-gold); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                <i class="mdi mdi-account-clock-outline" style="font-size: 28px; color: var(--white);"></i>
            </div>
            <div>
                <div style="font-size: 2rem; font-weight: 700; color: var(--ctc-gold);">@Model.WaitlistCount</div>
                <div style="color: var(--gray-600);">Candidates on Waitlist</div>
            </div>
        </div>
        <div style="height: 48px; width: 1px; background-color: var(--gray-300);"></div>
        <div>
            <div style="font-size: 1.5rem; font-weight: 600; color: var(--gray-700);">@Model.TotalWaitlistAmount.ToString("C0")</div>
            <div style="color: var(--gray-600);">Total Pending Funding</div>
        </div>
        <div style="flex: 1;"></div>
        <div style="text-align: right; color: var(--gray-600); font-size: 0.875rem;">
            <i class="mdi mdi-information-outline"></i> Candidates are queued in the order their LEA submitted them
        </div>
    </div>
</div>

@if (!Model.WaitlistStudents.Any())
{
    <div class="alert alert-success">
        <i class="mdi mdi-check-circle-outline"></i>
        No candidates are currently on the waitlist. All approved candidates have been funded.
    </div>
}
else
{
    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-format-list-numbered"></i> Waitlist Queue</h4>
        </div>
        <div class="r4-card-body">
            <div class="table-wrapper">
                <table class="r4-table" id="waitlistTable" style="width: 100%;">
                    <thead>
                        <tr>
                            <th style="width: 60px; text-align: center;">Position</th>
                            <th>Candidate</th>
                            <th>IHE Partner</th>
                            <th>LEA Partner</th>
                            <th>Credential Area</th>
                            <th style="text-align: right;">Award Amount</th>
                            <th>Waitlisted</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model.WaitlistStudents)
                        {
                            <tr>
                                <td style="text-align: center;">
                                    <span class="position-badge">#@student.Position</span>
                                </td>
                                <td>
                                    <div style="font-weight: 600;">@student.StudentName</div>
                                    <div style="font-size: 0.8rem; color: var(--gray-500);">SEID: @student.SEID</div>
                                </td>
                                <td>@student.IHEName</td>
                                <td>@student.LEAName</td>
                                <td>
                                    <span class="badge badge-info">@student.CredentialArea</span>
                                </td>
                                <td style="text-align: right; font-weight: 600;">@student.AwardAmount.ToString("C0")</td>
                                <td>
                                    <div>@student.WaitlistDate.ToString("MM/dd/yyyy")</div>
                                    <div style="font-size: 0.8rem; color: var(--gray-500);">@((DateTime.Now - student.WaitlistDate).Days) days ago</div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @* Pagination Controls *@
            <div class="pagination-controls" style="display: flex; justify-content: space-between; align-items: center; margin-top: 1rem; padding-top: 1rem; border-top: 1px solid var(--gray-200);">
                <div class="pagination-info">
                    Showing <span id="showingStart">1</span>-<span id="showingEnd">@Math.Min(10, Model.WaitlistStudents.Count)</span> of <span id="totalRecords">@Model.WaitlistStudents.Count</span> candidates
                </div>
                <div class="pagination-buttons" style="display: flex; gap: 0.5rem; align-items: center;">
                    <button type="button" class="r4-button r4-button-sm" id="prevPage" onclick="changePage(-1)">
                        <i class="mdi mdi-chevron-left"></i> Previous
                    </button>
                    <span style="padding: 0 0.75rem;">Page <span id="currentPage">1</span> of <span id="totalPages">@Math.Max(1, (int)Math.Ceiling(Model.WaitlistStudents.Count / 10.0))</span></span>
                    <button type="button" class="r4-button r4-button-sm" id="nextPage" onclick="changePage(1)">
                        Next <i class="mdi mdi-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        const ROWS_PER_PAGE = 10;
        let currentPage = 1;
        let allRows = [];

        document.addEventListener('DOMContentLoaded', function() {
            const table = document.getElementById('waitlistTable');
            if (table) {
                const tbody = table.getElementsByTagName('tbody')[0];
                if (tbody) {
                    allRows = Array.from(tbody.getElementsByTagName('tr'));
                    if (allRows.length > ROWS_PER_PAGE) {
                        updatePagination();
                        showPage(1);
                    }
                }
            }
        });

        function updatePagination() {
            const totalPages = Math.ceil(allRows.length / ROWS_PER_PAGE) || 1;
            document.getElementById('totalPages').textContent = totalPages;
            document.getElementById('totalRecords').textContent = allRows.length;
            document.getElementById('prevPage').disabled = currentPage <= 1;
            document.getElementById('nextPage').disabled = currentPage >= totalPages;
        }

        function showPage(page) {
            currentPage = page;
            const startIndex = (page - 1) * ROWS_PER_PAGE;
            const endIndex = startIndex + ROWS_PER_PAGE;

            allRows.forEach((row, index) => {
                row.style.display = (index >= startIndex && index < endIndex) ? '' : 'none';
            });

            document.getElementById('currentPage').textContent = page;
            document.getElementById('showingStart').textContent = allRows.length > 0 ? startIndex + 1 : 0;
            document.getElementById('showingEnd').textContent = Math.min(endIndex, allRows.length);
            updatePagination();
        }

        function changePage(delta) {
            const totalPages = Math.ceil(allRows.length / ROWS_PER_PAGE) || 1;
            const newPage = currentPage + delta;
            if (newPage >= 1 && newPage <= totalPages) {
                showPage(newPage);
            }
        }
    </script>

    <style>
        .position-badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 36px;
            height: 36px;
            background-color: var(--ctc-gold);
            color: var(--white);
            font-weight: 700;
            font-size: 0.875rem;
            border-radius: 50%;
        }

        .page-actions .r4-button-secondary {
            background-color: var(--gray-100) !important;
            color: var(--gray-700) !important;
            border: 1px solid var(--gray-300) !important;
        }

        .page-actions .r4-button-secondary:hover {
            background-color: var(--gray-200) !important;
            color: var(--gray-800) !important;
        }
    </style>
}
