@model LEADashboardViewModel

@{
    ViewData["Title"] = "LEA Portal Dashboard";
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item active">LEA Portal</li>
    </ol>
}

<div class="page-header">
    <h2><i class="mdi mdi-domain"></i> LEA Portal Dashboard</h2>
    <p class="subtitle">@Model.LEAName - @Model.GrantCycleName</p>
</div>

@* Action Items *@
@if (Model.ActionItems.Any())
{
    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-bell-outline"></i> Action Items</h4>
        </div>
        <div class="r4-card-body">
            @foreach (var item in Model.ActionItems.OrderBy(a => a.Priority == "critical" ? 0 : a.Priority == "high" ? 1 : 2))
            {
                <div class="action-item @(item.Priority == "critical" || item.Priority == "high" ? "action-item-urgent" : "action-item-normal")">
                    <div class="action-item-content">
                        <div class="action-item-icon">
                            <i class="mdi @(item.Type == "reports_due" ? "mdi-clipboard-text-outline" : item.Type == "candidates_ready" ? "mdi-account-multiple-plus-outline" : "mdi-alert-circle-outline")"></i>
                        </div>
                        <div class="action-item-details">
                            <h5>@item.Title</h5>
                            <p>@item.Description</p>
                            @if (item.DueDate.HasValue)
                            {
                                <p class="action-item-due">Due: @item.DueDate.Value.ToString("MMM dd, yyyy")</p>
                            }
                        </div>
                    </div>
                    <div class="action-item-actions">
                        @if (item.Type == "reports_due")
                        {
                            <a href="@Url.Action("FundedCandidates", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="r4-button r4-button-primary">
                                <i class="mdi mdi-arrow-right"></i> Start Reports
                            </a>
                        }
                        else if (item.Type == "candidates_ready")
                        {
                            <a href="#submissions" class="r4-button r4-button-primary">
                                <i class="mdi mdi-arrow-right"></i> View Candidates
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("CompleteApplication", "LEAPortal", new { id = Model.Applications.FirstOrDefault()?.Id ?? 0 })" class="r4-button r4-button-primary">
                                <i class="mdi mdi-arrow-right"></i> Review
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}

@* Candidate Status *@
<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-chart-bar"></i> Candidate Status</h4>
        <div class="card-actions">
            <a href="@Url.Action("BulkUpload", "LEAPortal")" class="r4-button">
                <i class="mdi mdi-file-upload-outline"></i> Bulk Upload
            </a>
            <a href="@Url.Action("CompleteApplication", "LEAPortal", new { id = Model.Applications.FirstOrDefault()?.Id ?? 0 })" class="r4-button r4-button-primary">
                <i class="mdi mdi-send"></i> Submit Candidates
            </a>
        </div>
    </div>
    <div class="r4-card-body">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1rem;">
            <div style="border: 1px solid var(--gray-300); border-radius: 4px; padding: 1.5rem; background-color: var(--white);">
                <div style="display: flex; align-items: center; gap: 1rem;">
                    <div style="width: 48px; height: 48px; background-color: var(--ctc-blue); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="mdi mdi-account-multiple" style="font-size: 24px; color: var(--white);"></i>
                    </div>
                    <div>
                        <div style="font-size: 2rem; font-weight: bold; color: var(--ctc-blue);">@Model.TotalStudents</div>
                        <div style="color: var(--ctc-blue); font-size: 0.9rem; font-weight: 600;">Total Candidates</div>
                        <small style="color: var(--gray-500);">Candidates submitted</small>
                    </div>
                </div>
            </div>

            <div style="border: 1px solid var(--gray-300); border-radius: 4px; padding: 1.5rem; background-color: var(--white);">
                <div style="display: flex; align-items: center; gap: 1rem;">
                    <div style="width: 48px; height: 48px; background-color: var(--gray-100); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="mdi mdi-clock-outline" style="font-size: 24px; color: var(--gray-600);"></i>
                    </div>
                    <div>
                        <div style="font-size: 2rem; font-weight: bold; color: var(--gray-900);">@Model.PendingCompletionCount</div>
                        <div style="color: var(--gray-600); font-size: 0.9rem; font-weight: 600;">Under Review</div>
                        <small style="color: var(--gray-500);">Awaiting CTC approval</small>
                    </div>
                </div>
            </div>

            <div style="border: 1px solid var(--gray-300); border-radius: 4px; padding: 1.5rem; background-color: var(--white);">
                <div style="display: flex; align-items: center; gap: 1rem;">
                    <div style="width: 48px; height: 48px; background-color: var(--gray-100); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="mdi mdi-check-circle" style="font-size: 24px; color: var(--gray-600);"></i>
                    </div>
                    <div>
                        <div style="font-size: 2rem; font-weight: bold; color: var(--gray-900);">@Model.ApprovedCount</div>
                        <div style="color: var(--gray-600); font-size: 0.9rem; font-weight: 600;">Approved</div>
                        <small style="color: var(--gray-500);">Eligible for payment</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* Post-Payment Reporting *@
@if (Model.TotalFundedStudents > 0 || Model.ReportsSubmitted > 0)
{
    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-file-chart-outline"></i> Post-Payment Reporting</h4>
            <div class="card-actions">
                <a href="@Url.Action("FundedCandidates", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="r4-button">
                    <i class="mdi mdi-eye-outline"></i> View Funded Candidates
                </a>
            </div>
        </div>
        <div class="r4-card-body">
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-bottom: 1.5rem;">
                <div style="border: 1px solid var(--gray-300); border-radius: 4px; padding: 1.5rem; background-color: var(--white);">
                    <div style="display: flex; align-items: center; gap: 1rem;">
                        <div style="width: 48px; height: 48px; background-color: var(--ctc-blue); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="mdi mdi-account-multiple-check" style="font-size: 24px; color: var(--white);"></i>
                        </div>
                        <div>
                            <div style="font-size: 2rem; font-weight: bold; color: var(--ctc-blue);">@Model.TotalFundedStudents</div>
                            <div style="color: var(--ctc-blue); font-size: 0.9rem; font-weight: 600;">Funded Candidates</div>
                            <small style="color: var(--gray-500);">Candidates who received payment</small>
                        </div>
                    </div>
                </div>

                <div style="border: 1px solid var(--gray-300); border-radius: 4px; padding: 1.5rem; background-color: var(--white);">
                    <div style="display: flex; align-items: center; gap: 1rem;">
                        <div style="width: 48px; height: 48px; background-color: var(--gray-100); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="mdi mdi-file-document-outline" style="font-size: 24px; color: var(--gray-600);"></i>
                        </div>
                        <div>
                            <div style="font-size: 2rem; font-weight: bold; color: var(--gray-900);">@Model.ReportsPending</div>
                            <div style="color: var(--gray-600); font-size: 0.9rem; font-weight: 600;">Reports Due</div>
                            <small style="color: var(--gray-500);">
                                @if (Model.ReportingDeadline.HasValue)
                                {
                                    <text>Due @Model.ReportingDeadline.Value.ToString("MMM dd, yyyy")</text>
                                }
                            </small>
                        </div>
                    </div>
                </div>

                <div style="border: 1px solid var(--gray-300); border-radius: 4px; padding: 1.5rem; background-color: var(--white);">
                    <div style="display: flex; align-items: center; gap: 1rem;">
                        <div style="width: 48px; height: 48px; background-color: var(--gray-100); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="mdi mdi-progress-clock" style="font-size: 24px; color: var(--gray-600);"></i>
                        </div>
                        <div>
                            <div style="font-size: 2rem; font-weight: bold; color: var(--gray-900);">0</div>
                            <div style="color: var(--gray-600); font-size: 0.9rem; font-weight: 600;">In Progress</div>
                            <small style="color: var(--gray-500);">Draft reports not yet submitted</small>
                        </div>
                    </div>
                </div>

                <div style="border: 1px solid var(--gray-300); border-radius: 4px; padding: 1.5rem; background-color: var(--white);">
                    <div style="display: flex; align-items: center; gap: 1rem;">
                        <div style="width: 48px; height: 48px; background-color: var(--gray-100); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="mdi mdi-file-check-outline" style="font-size: 24px; color: var(--gray-600);"></i>
                        </div>
                        <div>
                            <div style="font-size: 2rem; font-weight: bold; color: var(--gray-900);">@Model.ReportsSubmitted</div>
                            <div style="color: var(--gray-600); font-size: 0.9rem; font-weight: 600;">Submitted</div>
                            <small style="color: var(--gray-500);">Reports submitted to CTC</small>
                        </div>
                    </div>
                </div>
            </div>

            <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                <a href="@Url.Action("FundedCandidates", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="r4-button r4-button-primary">
                    <i class="mdi mdi-clipboard-text-outline"></i> Complete Reports
                </a>
                <a href="@Url.Action("BulkUpload", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="r4-button">
                    <i class="mdi mdi-file-upload-outline"></i> Upload Bulk Reports
                </a>
                <a href="@Url.Action("ReportHistory", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="r4-button">
                    <i class="mdi mdi-history"></i> View History
                </a>
            </div>
        </div>
    </div>
}

@* Your Submissions *@
<div class="r4-card" id="submissions">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-file-multiple-outline"></i> Your Submissions</h4>
        @if (Model.IHESubmissions.Any())
        {
            <div class="card-actions">
                <a href="@Url.Action("Applications", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="r4-button">
                    View All
                </a>
            </div>
        }
    </div>
    <div class="r4-card-body">
        @{
            // MOCK DATA: Student queue showing most recent candidates
            var studentQueue = new List<dynamic>
            {
                new { StudentName = "Maria Garcia", IHEPartner = "Cal State University, Fullerton", CredentialArea = "Multiple Subject", Status = "APPROVED", LastModified = DateTime.Now.AddDays(-1) },
                new { StudentName = "James Wilson", IHEPartner = "UCLA", CredentialArea = "Single Subject - Mathematics", Status = "SUBMITTED", LastModified = DateTime.Now.AddDays(-3) },
                new { StudentName = "Sarah Chen", IHEPartner = "Cal State University, Northridge", CredentialArea = "Education Specialist", Status = "APPROVED", LastModified = DateTime.Now.AddDays(-5) }
            };
        }

        @if (studentQueue.Any())
        {
            <div class="table-wrapper">
                <table class="r4-table">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>IHE Partner</th>
                            <th>Credential Area</th>
                            <th>Status</th>
                            <th>Last Modified</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in studentQueue)
                        {
                            <tr>
                                <td>
                                    <strong>@student.StudentName</strong>
                                </td>
                                <td>@student.IHEPartner</td>
                                <td>@student.CredentialArea</td>
                                <td>
                                    @if (student.Status == "SUBMITTED")
                                    {
                                        <span class="badge badge-info">Submitted</span>
                                    }
                                    else if (student.Status == "APPROVED")
                                    {
                                        <span class="badge badge-success">Approved</span>
                                    }
                                </td>
                                <td>@student.LastModified.ToString("MM/dd/yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div style="text-align: center; padding: 3rem; color: var(--gray-500);">
                <i class="mdi mdi-file-document-outline" style="font-size: 4rem; display: block; margin-bottom: 1rem; opacity: 0.3;"></i>
                <p style="font-size: 1.1rem; margin: 0; color: var(--gray-700);">No submissions yet</p>
                <small style="color: var(--gray-500);">Your IHE partners will submit candidate lists that you will need to complete.</small>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('LEA Portal loaded for: @Model.LEAName');
        });
    </script>

    <style>

        /* Action Items Styling */
        .action-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.5rem;
            background: var(--white);
            border: 2px solid var(--gray-300);
            border-radius: 8px;
            margin-bottom: 1rem;
            transition: all 0.2s;
        }

        .action-item:last-child {
            margin-bottom: 0;
        }

        .action-item-urgent {
            border-color: var(--danger);
            background: var(--gray-50);
        }

        .action-item-normal {
            border-color: var(--warning);
            background: var(--gray-50);
        }

        .action-item:hover {
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transform: translateY(-2px);
        }

        .action-item-content {
            display: flex;
            align-items: center;
            gap: 1rem;
            flex: 1;
        }

        .action-item-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 48px;
            height: 48px;
            background: var(--ctc-blue);
            color: var(--white);
            border-radius: 50%;
            font-size: 1.5rem;
        }

        .action-item-details h5 {
            margin: 0 0 0.5rem 0;
            color: var(--ctc-blue);
            font-size: 1.1rem;
        }

        .action-item-details p {
            margin: 0;
            color: var(--gray-600);
            font-size: 0.9rem;
        }

        .action-item-due {
            margin-top: 0.25rem !important;
            color: var(--danger);
            font-weight: 600;
        }

        .action-item-actions {
            margin-left: 1rem;
        }

        @@media (max-width: 768px) {
            .action-item {
                flex-direction: column;
                align-items: flex-start;
            }

            .action-item-actions {
                margin-left: 0;
                margin-top: 1rem;
                width: 100%;
            }

            .action-item-actions .r4-button {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
}
