@model LEADashboardViewModel

@{
    ViewData["Title"] = "LEA Portal Dashboard";
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item active">LEA Portal</li>
    </ol>
}

<div class="page-header">
    <h2><i class="mdi mdi-domain"></i> LEA Portal Dashboard</h2>
    <p class="subtitle">@Model.LEAName - @Model.GrantCycleName</p>
</div>

@* Action Items *@
@if (Model.ActionItems.Any())
{
    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-bell-outline"></i> Action Items</h4>
        </div>
        <div class="r4-card-body">
            @foreach (var item in Model.ActionItems.OrderBy(a => a.Priority == "critical" ? 0 : a.Priority == "high" ? 1 : 2))
            {
                <div class="action-item @(item.Priority == "critical" || item.Priority == "high" ? "action-item-urgent" : "action-item-normal")">
                    <div class="action-item-content">
                        <div class="action-item-icon">
                            <i class="mdi @(item.Type == "candidates_review" ? "mdi-account-check-outline" : "mdi-alert-circle-outline")"></i>
                        </div>
                        <div class="action-item-details">
                            <h5>@item.Title</h5>
                            <p>@item.Description</p>
                            @if (item.DueDate.HasValue)
                            {
                                <p class="action-item-due">Due: @item.DueDate.Value.ToString("MMM dd, yyyy")</p>
                            }
                        </div>
                    </div>
                    <div class="action-item-actions">
                        @if (item.Type == "candidates_review")
                        {
                            <a href="@Url.Action("ReviewCandidates", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="r4-button r4-button-primary">
                                <i class="mdi mdi-arrow-right"></i> Review Candidates
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("ReviewCandidates", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="r4-button r4-button-primary">
                                <i class="mdi mdi-arrow-right"></i> Review
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}

@* Candidate Status *@
<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-chart-bar"></i> Candidate Status</h4>
    </div>
    <div class="r4-card-body">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1rem;">
            @* Total Candidates *@
            <a href="@Url.Action("AllCandidates", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="metric-card-link">
                <div class="metric-card">
                    <div style="display: flex; align-items: center; gap: 1rem;">
                        <div style="width: 48px; height: 48px; background-color: var(--ctc-blue); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="mdi mdi-account-multiple" style="font-size: 24px; color: var(--white);"></i>
                        </div>
                        <div>
                            <div style="font-size: 2rem; font-weight: bold; color: var(--ctc-blue);">@Model.TotalStudents</div>
                            <div style="color: var(--ctc-blue); font-size: 0.9rem; font-weight: 600;">Total Candidates</div>
                            <small style="color: var(--gray-500);">Candidates submitted</small>
                        </div>
                    </div>
                </div>
            </a>

            @* Under Review *@
            <a href="@Url.Action("AllCandidates", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId, status = "UNDER_REVIEW" })" class="metric-card-link">
                <div class="metric-card">
                    <div style="display: flex; align-items: center; gap: 1rem;">
                        <div style="width: 48px; height: 48px; background-color: var(--gray-100); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="mdi mdi-clock-outline" style="font-size: 24px; color: var(--gray-600);"></i>
                        </div>
                        <div>
                            <div style="font-size: 2rem; font-weight: bold; color: var(--gray-900);">@Model.PendingCompletionCount</div>
                            <div style="color: var(--gray-600); font-size: 0.9rem; font-weight: 600;">Under Review</div>
                            <small style="color: var(--gray-500);">Awaiting CTC approval</small>
                        </div>
                    </div>
                </div>
            </a>

            @* Waitlist *@
            @{
                // MOCK DATA: Waitlist count - approved candidates awaiting funding
                var waitlistCount = 2;
            }
            @if (waitlistCount > 0)
            {
                <a href="@Url.Action("AllCandidates", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId, status = "WAITLIST" })" class="metric-card-link">
                    <div class="metric-card metric-waitlist">
                        <div style="display: flex; align-items: center; gap: 1rem;">
                            <div style="width: 48px; height: 48px; background-color: var(--ctc-gold); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                <i class="mdi mdi-account-clock-outline" style="font-size: 24px; color: var(--white);"></i>
                            </div>
                            <div>
                                <div style="font-size: 2rem; font-weight: bold; color: var(--ctc-gold);">@waitlistCount</div>
                                <div style="color: var(--ctc-gold); font-size: 0.9rem; font-weight: 600;">Waitlist</div>
                                <small style="color: var(--gray-500);">Approved, awaiting funding</small>
                            </div>
                        </div>
                    </div>
                </a>
            }

            @* Approved *@
            <a href="@Url.Action("AllCandidates", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId, status = "APPROVED" })" class="metric-card-link">
                <div class="metric-card">
                    <div style="display: flex; align-items: center; gap: 1rem;">
                        <div style="width: 48px; height: 48px; background-color: var(--gray-100); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="mdi mdi-check-circle" style="font-size: 24px; color: var(--gray-600);"></i>
                        </div>
                        <div>
                            <div style="font-size: 2rem; font-weight: bold; color: var(--gray-900);">@Model.ApprovedCount</div>
                            <div style="color: var(--gray-600); font-size: 0.9rem; font-weight: 600;">Approved</div>
                            <small style="color: var(--gray-500);">Eligible for payment</small>
                        </div>
                    </div>
                </div>
            </a>

            @* Paid *@
            <a href="@Url.Action("AllCandidates", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId, status = "PAID" })" class="metric-card-link">
                <div class="metric-card">
                    <div style="display: flex; align-items: center; gap: 1rem;">
                        <div style="width: 48px; height: 48px; background-color: var(--gray-100); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="mdi mdi-cash-check" style="font-size: 24px; color: var(--gray-600);"></i>
                        </div>
                        <div>
                            <div style="font-size: 2rem; font-weight: bold; color: var(--gray-900);">@Model.TotalFundedStudents</div>
                            <div style="color: var(--gray-600); font-size: 0.9rem; font-weight: 600;">Paid</div>
                            <small style="color: var(--gray-500);">Payment complete</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

@* Your Submissions *@
<div class="r4-card" id="submissions">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-file-multiple-outline"></i> Your Submissions to CTC</h4>
        @if (Model.BatchSubmissions.Any())
        {
            <div class="card-actions">
                <a href="@Url.Action("Applications", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="r4-button">
                    View All Submissions
                </a>
            </div>
        }
    </div>
    <div class="r4-card-body">
        @if (Model.BatchSubmissions.Any())
        {
            <div class="table-wrapper">
                <table class="r4-table">
                    <thead>
                        <tr>
                            <th>Month</th>
                            <th>Total Candidates</th>
                            <th>IHE Partners</th>
                            <th>Status</th>
                            <th>Submission Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var batch in Model.BatchSubmissions)
                        {
                            <tr>
                                <td>
                                    <strong>@batch.BatchMonth</strong>
                                </td>
                                <td>@batch.TotalCandidates</td>
                                <td>
                                    @batch.IHEPartnerCount IHE@(batch.IHEPartnerCount != 1 ? "s" : "")
                                    <small style="display: block; color: var(--gray-600); margin-top: 0.25rem;">
                                        @string.Join(", ", batch.IHEPartnerNames.Take(2))@(batch.IHEPartnerNames.Count > 2 ? $", +{batch.IHEPartnerNames.Count - 2} more" : "")
                                    </small>
                                </td>
                                <td>
                                    @{
                                        var badgeClass = GMS.Business.Helpers.StatusHelper.GetBadgeClass(batch.Status);
                                        var displayText = GMS.Business.Helpers.StatusHelper.GetDisplayText(batch.Status);
                                    }
                                    <span class="@badgeClass badge-status">@displayText</span>
                                </td>
                                <td>
                                    @if (batch.SubmissionDate.HasValue)
                                    {
                                        @batch.SubmissionDate.Value.ToString("MM/dd/yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not submitted</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("BatchDetails", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId, year = batch.Year, month = batch.Month })" class="r4-button r4-button-sm">
                                        <i class="mdi mdi-eye-outline"></i> View Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div style="text-align: center; padding: 3rem; color: var(--gray-500);">
                <i class="mdi mdi-file-document-outline" style="font-size: 4rem; display: block; margin-bottom: 1rem; opacity: 0.3;"></i>
                <p style="font-size: 1.1rem; margin: 0; color: var(--gray-700);">No submissions yet</p>
                <small style="color: var(--gray-500);">Complete applications from your IHE partners to create submissions to CTC.</small>
            </div>
        }
    </div>
</div>

@* Post-Payment Reporting *@
@if (Model.TotalFundedStudents > 0 || Model.ReportsSubmitted > 0)
{
    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-file-chart-outline"></i> Post-Payment Reporting</h4>
            <div class="card-actions">
                <a href="@Url.Action("FundedCandidates", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="r4-button">
                    <i class="mdi mdi-eye-outline"></i> View Funded Candidates
                </a>
            </div>
        </div>
        <div class="r4-card-body">
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-bottom: 1.5rem;">
                <div style="border: 1px solid var(--gray-300); border-radius: 4px; padding: 1.5rem; background-color: var(--white);">
                    <div style="display: flex; align-items: center; gap: 1rem;">
                        <div style="width: 48px; height: 48px; background-color: var(--ctc-blue); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="mdi mdi-account-multiple-check" style="font-size: 24px; color: var(--white);"></i>
                        </div>
                        <div>
                            <div style="font-size: 2rem; font-weight: bold; color: var(--ctc-blue);">@Model.TotalFundedStudents</div>
                            <div style="color: var(--ctc-blue); font-size: 0.9rem; font-weight: 600;">Funded Candidates</div>
                            <small style="color: var(--gray-500);">Candidates who received payment</small>
                        </div>
                    </div>
                </div>

                <div style="border: 1px solid var(--gray-300); border-radius: 4px; padding: 1.5rem; background-color: var(--white);">
                    <div style="display: flex; align-items: center; gap: 1rem;">
                        <div style="width: 48px; height: 48px; background-color: var(--gray-100); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="mdi mdi-file-document-outline" style="font-size: 24px; color: var(--gray-600);"></i>
                        </div>
                        <div>
                            <div style="font-size: 2rem; font-weight: bold; color: var(--gray-900);">@Model.ReportsPending</div>
                            <div style="color: var(--gray-600); font-size: 0.9rem; font-weight: 600;">Reports Due</div>
                            <small style="color: var(--gray-500);">
                                @if (Model.ReportingDeadline.HasValue)
                                {
                                    <text>Due @Model.ReportingDeadline.Value.ToString("MMM dd, yyyy")</text>
                                }
                            </small>
                        </div>
                    </div>
                </div>

                <div style="border: 1px solid var(--gray-300); border-radius: 4px; padding: 1.5rem; background-color: var(--white);">
                    <div style="display: flex; align-items: center; gap: 1rem;">
                        <div style="width: 48px; height: 48px; background-color: var(--gray-100); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="mdi mdi-progress-clock" style="font-size: 24px; color: var(--gray-600);"></i>
                        </div>
                        <div>
                            <div style="font-size: 2rem; font-weight: bold; color: var(--gray-900);">0</div>
                            <div style="color: var(--gray-600); font-size: 0.9rem; font-weight: 600;">In Progress</div>
                            <small style="color: var(--gray-500);">Draft reports not yet submitted</small>
                        </div>
                    </div>
                </div>

                <div style="border: 1px solid var(--gray-300); border-radius: 4px; padding: 1.5rem; background-color: var(--white);">
                    <div style="display: flex; align-items: center; gap: 1rem;">
                        <div style="width: 48px; height: 48px; background-color: var(--gray-100); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="mdi mdi-file-check-outline" style="font-size: 24px; color: var(--gray-600);"></i>
                        </div>
                        <div>
                            <div style="font-size: 2rem; font-weight: bold; color: var(--gray-900);">@Model.ReportsSubmitted</div>
                            <div style="color: var(--gray-600); font-size: 0.9rem; font-weight: 600;">Submitted</div>
                            <small style="color: var(--gray-500);">Reports submitted to CTC</small>
                        </div>
                    </div>
                </div>
            </div>

            <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                <a href="@Url.Action("FundedCandidates", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="r4-button r4-button-primary">
                    <i class="mdi mdi-clipboard-text-outline"></i> Complete Reports
                </a>
                <a href="@Url.Action("ReportHistory", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="r4-button">
                    <i class="mdi mdi-history"></i> View History
                </a>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('LEA Portal loaded for: @Model.LEAName');
        });
    </script>

    <style>
        /* Clickable Metric Card Links */
        .metric-card-link {
            text-decoration: none;
            color: inherit;
            display: block;
        }

        .metric-card {
            border: 1px solid var(--gray-300);
            border-radius: 4px;
            padding: 1.5rem;
            background-color: var(--white);
            cursor: pointer;
            transition: all 0.2s ease;
            position: relative;
        }

        .metric-card-link:hover .metric-card {
            transform: translateY(-4px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.15);
        }

        .metric-card-link:hover .metric-card::after {
            content: "View â†’";
            position: absolute;
            bottom: 0.75rem;
            right: 1rem;
            font-size: 0.75rem;
            color: var(--ctc-blue);
            font-weight: 600;
        }

        /* Action Items Styling */
        .action-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.5rem;
            background: var(--white);
            border: 2px solid var(--gray-300);
            border-radius: 8px;
            margin-bottom: 1rem;
            transition: all 0.2s;
        }

        .action-item:last-child {
            margin-bottom: 0;
        }

        .action-item-urgent {
            border-color: var(--danger);
            background: var(--gray-50);
        }

        .action-item-normal {
            border-color: var(--warning);
            background: var(--gray-50);
        }

        .action-item:hover {
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transform: translateY(-2px);
        }

        .action-item-content {
            display: flex;
            align-items: center;
            gap: 1rem;
            flex: 1;
        }

        .action-item-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 48px;
            height: 48px;
            background: var(--ctc-blue);
            color: var(--white);
            border-radius: 50%;
            font-size: 1.5rem;
        }

        .action-item-details h5 {
            margin: 0 0 0.5rem 0;
            color: var(--ctc-blue);
            font-size: 1.1rem;
        }

        .action-item-details p {
            margin: 0;
            color: var(--gray-600);
            font-size: 0.9rem;
        }

        .action-item-due {
            margin-top: 0.25rem !important;
            color: var(--danger);
            font-weight: 600;
        }

        .action-item-actions {
            margin-left: 1rem;
        }

        @@media (max-width: 768px) {
            .action-item {
                flex-direction: column;
                align-items: flex-start;
            }

            .action-item-actions {
                margin-left: 0;
                margin-top: 1rem;
                width: 100%;
            }

            .action-item-actions .r4-button {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
}
