@model LEADashboardViewModel

@{
    ViewData["Title"] = "LEA Portal Dashboard";
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item active">LEA Portal</li>
    </ol>
}

<div class="page-header">
    <h2><i class="mdi mdi-domain"></i> LEA Portal Dashboard</h2>
    <p class="subtitle">@Model.LEAName - @Model.GrantCycleName</p>
</div>

@* Action Items *@
@if (Model.ActionItems.Any())
{
    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-bell-outline"></i> Action Items</h4>
        </div>
        <div class="r4-card-body">
            @foreach (var item in Model.ActionItems.OrderBy(a => a.Priority == "critical" ? 0 : a.Priority == "high" ? 1 : 2))
            {
                <div class="action-item @(item.Priority == "critical" || item.Priority == "high" ? "action-item-urgent" : "action-item-normal")">
                    <div class="action-item-content">
                        <div class="action-item-icon">
                            <i class="mdi @(item.Type == "reports_due" ? "mdi-clipboard-text-outline" : item.Type == "candidates_ready" ? "mdi-account-multiple-plus-outline" : "mdi-alert-circle-outline")"></i>
                        </div>
                        <div class="action-item-details">
                            <h5>@item.Title</h5>
                            <p>@item.Description</p>
                            @if (item.DueDate.HasValue)
                            {
                                <p class="action-item-due">Due: @item.DueDate.Value.ToString("MMM dd, yyyy")</p>
                            }
                        </div>
                    </div>
                    <div class="action-item-actions">
                        @if (item.Type == "reports_due")
                        {
                            <a href="@Url.Action("FundedCandidates", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="r4-button r4-button-primary">
                                <i class="mdi mdi-arrow-right"></i> Start Reports
                            </a>
                        }
                        else if (item.Type == "candidates_ready")
                        {
                            <a href="#submissions" class="r4-button r4-button-primary">
                                <i class="mdi mdi-arrow-right"></i> View Candidates
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("CompleteApplication", "LEAPortal", new { id = Model.Applications.FirstOrDefault()?.Id ?? 0 })" class="r4-button r4-button-primary">
                                <i class="mdi mdi-arrow-right"></i> Review
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}

@* Candidate Status *@
<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-chart-bar"></i> Candidate Status</h4>
        <div class="card-actions">
            <a href="@Url.Action("BulkUpload", "LEAPortal")" class="r4-button">
                <i class="mdi mdi-file-upload-outline"></i> Bulk Upload
            </a>
            <a href="@Url.Action("CompleteApplication", "LEAPortal", new { id = Model.Applications.FirstOrDefault()?.Id ?? 0 })" class="r4-button r4-button-primary">
                <i class="mdi mdi-send"></i> Submit Candidates
            </a>
        </div>
    </div>
    <div class="r4-card-body">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1rem;">
            <div style="border: 1px solid #e0e0e0; border-radius: 4px; padding: 1.5rem; background-color: white;">
                <div style="display: flex; align-items: center; gap: 1rem;">
                    <div style="width: 48px; height: 48px; background-color: #1E3A5F; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="mdi mdi-account-multiple" style="font-size: 24px; color: white;"></i>
                    </div>
                    <div>
                        <div style="font-size: 2rem; font-weight: bold; color: #1E3A5F;">@Model.TotalStudents</div>
                        <div style="color: #1E3A5F; font-size: 0.9rem; font-weight: 600;">Total Candidates</div>
                        <small style="color: #999;">Candidates submitted</small>
                    </div>
                </div>
            </div>

            <div style="border: 1px solid #e0e0e0; border-radius: 4px; padding: 1.5rem; background-color: white;">
                <div style="display: flex; align-items: center; gap: 1rem;">
                    <div style="width: 48px; height: 48px; background-color: #F5F5F5; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="mdi mdi-clock-outline" style="font-size: 24px; color: #666;"></i>
                    </div>
                    <div>
                        <div style="font-size: 2rem; font-weight: bold; color: #333;">@Model.PendingCompletionCount</div>
                        <div style="color: #666; font-size: 0.9rem; font-weight: 600;">Under Review</div>
                        <small style="color: #999;">Awaiting CTC approval</small>
                    </div>
                </div>
            </div>

            <div style="border: 1px solid #e0e0e0; border-radius: 4px; padding: 1.5rem; background-color: white;">
                <div style="display: flex; align-items: center; gap: 1rem;">
                    <div style="width: 48px; height: 48px; background-color: #F5F5F5; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="mdi mdi-check-circle" style="font-size: 24px; color: #666;"></i>
                    </div>
                    <div>
                        <div style="font-size: 2rem; font-weight: bold; color: #333;">@Model.ApprovedCount</div>
                        <div style="color: #666; font-size: 0.9rem; font-weight: 600;">Approved</div>
                        <small style="color: #999;">Eligible for payment</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* Post-Payment Reporting *@
@if (Model.TotalFundedStudents > 0 || Model.ReportsSubmitted > 0)
{
    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-file-chart-outline"></i> Post-Payment Reporting</h4>
            <div class="card-actions">
                <a href="@Url.Action("FundedCandidates", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="r4-button">
                    <i class="mdi mdi-eye-outline"></i> View Funded Candidates
                </a>
            </div>
        </div>
        <div class="r4-card-body">
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-bottom: 1.5rem;">
                <div style="border: 1px solid #e0e0e0; border-radius: 4px; padding: 1.5rem; background-color: white;">
                    <div style="display: flex; align-items: center; gap: 1rem;">
                        <div style="width: 48px; height: 48px; background-color: #1E3A5F; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="mdi mdi-account-multiple-check" style="font-size: 24px; color: white;"></i>
                        </div>
                        <div>
                            <div style="font-size: 2rem; font-weight: bold; color: #1E3A5F;">@Model.TotalFundedStudents</div>
                            <div style="color: #1E3A5F; font-size: 0.9rem; font-weight: 600;">Funded Candidates</div>
                            <small style="color: #999;">Candidates who received payment</small>
                        </div>
                    </div>
                </div>

                <div style="border: 1px solid #e0e0e0; border-radius: 4px; padding: 1.5rem; background-color: white;">
                    <div style="display: flex; align-items: center; gap: 1rem;">
                        <div style="width: 48px; height: 48px; background-color: #F5F5F5; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="mdi mdi-file-document-outline" style="font-size: 24px; color: #666;"></i>
                        </div>
                        <div>
                            <div style="font-size: 2rem; font-weight: bold; color: #333;">@Model.ReportsPending</div>
                            <div style="color: #666; font-size: 0.9rem; font-weight: 600;">Reports Due</div>
                            <small style="color: #999;">
                                @if (Model.ReportingDeadline.HasValue)
                                {
                                    <text>Due @Model.ReportingDeadline.Value.ToString("MMM dd, yyyy")</text>
                                }
                            </small>
                        </div>
                    </div>
                </div>

                <div style="border: 1px solid #e0e0e0; border-radius: 4px; padding: 1.5rem; background-color: white;">
                    <div style="display: flex; align-items: center; gap: 1rem;">
                        <div style="width: 48px; height: 48px; background-color: #F5F5F5; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="mdi mdi-progress-clock" style="font-size: 24px; color: #666;"></i>
                        </div>
                        <div>
                            <div style="font-size: 2rem; font-weight: bold; color: #333;">0</div>
                            <div style="color: #666; font-size: 0.9rem; font-weight: 600;">In Progress</div>
                            <small style="color: #999;">Draft reports not yet submitted</small>
                        </div>
                    </div>
                </div>

                <div style="border: 1px solid #e0e0e0; border-radius: 4px; padding: 1.5rem; background-color: white;">
                    <div style="display: flex; align-items: center; gap: 1rem;">
                        <div style="width: 48px; height: 48px; background-color: #F5F5F5; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="mdi mdi-file-check-outline" style="font-size: 24px; color: #666;"></i>
                        </div>
                        <div>
                            <div style="font-size: 2rem; font-weight: bold; color: #333;">@Model.ReportsSubmitted</div>
                            <div style="color: #666; font-size: 0.9rem; font-weight: 600;">Submitted</div>
                            <small style="color: #999;">Reports submitted to CTC</small>
                        </div>
                    </div>
                </div>
            </div>

            <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                <a href="@Url.Action("FundedCandidates", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="r4-button r4-button-primary">
                    <i class="mdi mdi-clipboard-text-outline"></i> Complete Reports
                </a>
                <a href="@Url.Action("BulkUpload", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="r4-button">
                    <i class="mdi mdi-file-upload-outline"></i> Upload Bulk Reports
                </a>
                <a href="@Url.Action("ReportHistory", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="r4-button">
                    <i class="mdi mdi-history"></i> View History
                </a>
            </div>
        </div>
    </div>
}

@* Your Submissions *@
<div class="r4-card" id="submissions">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-file-multiple-outline"></i> Your Submissions</h4>
        @if (Model.IHESubmissions.Any())
        {
            <div class="card-actions">
                <a href="@Url.Action("Applications", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="r4-button">
                    View All
                </a>
            </div>
        }
    </div>
    <div class="r4-card-body">
        @if (Model.IHESubmissions.Any())
        {
            <table class="r4-table">
                <thead>
                    <tr>
                        <th></th>
                        <th>IHE Partner</th>
                        <th>Total Candidates</th>
                        <th>Draft</th>
                        <th>Submitted</th>
                        <th>Approved</th>
                        <th>Last Modified</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var submission in Model.IHESubmissions)
                    {
                        var draftCount = submission.Candidates.Count(c => c.Status == "DRAFT" || c.Status == "PENDING_LEA");
                        var submittedCount = submission.Candidates.Count(c => c.Status == "SUBMITTED");
                        var approvedCount = submission.Candidates.Count(c => c.Status == "APPROVED");

                        <tr style="cursor: pointer;" onclick="window.location='@Url.Action("CompleteApplication", "LEAPortal", new { id = submission.ApplicationId })'">
                            <td style="width: 20px;">
                                <i class="mdi mdi-chevron-right" style="color: #999;"></i>
                            </td>
                            <td>
                                <strong style="color: #1E3A5F;">@submission.IHEName</strong>
                            </td>
                            <td>
                                <strong>@submission.TotalCandidates</strong>
                            </td>
                            <td>
                                @if (draftCount > 0)
                                {
                                    <span class="badge badge-secondary">@draftCount</span>
                                }
                                else
                                {
                                    <span style="color: #ccc;">0</span>
                                }
                            </td>
                            <td>
                                @if (submittedCount > 0)
                                {
                                    <span class="badge badge-info">@submittedCount</span>
                                }
                                else
                                {
                                    <span style="color: #ccc;">0</span>
                                }
                            </td>
                            <td>
                                @if (approvedCount > 0)
                                {
                                    <span class="badge badge-success">@approvedCount</span>
                                }
                                else
                                {
                                    <span style="color: #ccc;">0</span>
                                }
                            </td>
                            <td>@submission.LastModified.ToString("MM/dd/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div style="text-align: center; padding: 3rem; color: #999;">
                <i class="mdi mdi-file-document-outline" style="font-size: 4rem; display: block; margin-bottom: 1rem; opacity: 0.3;"></i>
                <p style="font-size: 1.1rem; margin: 0; color: #666;">No submissions yet</p>
                <small style="color: #999;">Your IHE partners will submit candidate lists that you will need to complete.</small>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('LEA Portal loaded for: @Model.LEAName');
        });
    </script>
}
