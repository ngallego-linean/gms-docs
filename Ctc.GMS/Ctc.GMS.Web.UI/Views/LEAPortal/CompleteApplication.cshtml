            margin-bottom: 0.5rem;
        }

        /* Required Fields Compact */
        .required-fields-compact {
            margin-bottom: 1.5rem;
        }

        .required-fields-label {
            margin-bottom: 0.75rem;
            color: var(--gray-700);
        }

