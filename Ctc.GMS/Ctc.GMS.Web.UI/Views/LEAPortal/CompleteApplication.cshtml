@model CompleteApplicationViewModel

@{
    ViewData["Title"] = "Complete Application";
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "LEAPortal")">LEA Portal</a></li>
        <li class="breadcrumb-item active">Complete Candidate Application</li>
    </ol>
}

<div class="page-header">
    <h2><i class="mdi mdi-file-document-edit-outline"></i> Complete Candidate Application</h2>
    <p class="subtitle">Partnership with @Model.IHEName</p>
    @{
        var currentDate = DateTime.Now;
        var daysInMonth = DateTime.DaysInMonth(currentDate.Year, currentDate.Month);
        var daysRemaining = daysInMonth - currentDate.Day;
        var currentBatchMonth = currentDate.ToString("MMMM yyyy");
    }
    <div style="display: flex; gap: 2rem; margin-top: 0.5rem; font-size: 0.9rem; color: var(--gray-600);">
        <div>
            <i class="mdi mdi-calendar-clock-outline" style="color: var(--ctc-blue);"></i>
            <strong>Batch Period:</strong> @currentBatchMonth (Day @currentDate.Day of @daysInMonth)
        </div>
        <div>
            <i class="mdi mdi-clock-outline" style="color: var(--ctc-blue);"></i>
            @daysRemaining days remaining
        </div>
    </div>
</div>

@* Submission Method Tabs *@
<div class="submission-tabs">
    <button type="button" class="r4-button r4-button-primary" data-tab="individual" onclick="switchTab('individual')">
        <i class="mdi mdi-account-edit-outline"></i> Individual Entry
    </button>
    <button type="button" class="r4-button" data-tab="bulk" onclick="switchTab('bulk')">
        <i class="mdi mdi-file-upload-outline"></i> Bulk Upload
    </button>
</div>

@* Individual Entry Tab Content *@
<div class="tab-content" data-tab-content="individual">
<form method="post" action="@Url.Action("ProcessApplication", "LEAPortal")" id="applicationForm">
    <input type="hidden" name="ApplicationId" value="@Model.ApplicationId" />

    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-account-group-outline"></i> Candidates Submitted by IHE</h4>
        </div>
        <div class="r4-card-body">
            @if (Model.Students.Any())
            {
                <table class="r4-table">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>Credential Area</th>
                            <th>Award Amount</th>
                            <th>SEID <span class="text-danger">*</span></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Students.Count; i++)
                        {
                            var student = Model.Students[i];
                            <tr>
                                <td>
                                    @student.FirstName @student.LastName
                                    <input type="hidden" name="Students[@i].Id" value="@student.Id" />
                                </td>
                                <td>
                                    <span class="badge badge-primary">@student.CredentialArea</span>
                                </td>
                                <td>@student.AwardAmount.ToString("C0")</td>
                                <td>
                                    <input type="text" class="form-control" name="Students[@i].SEID" placeholder="Enter SEID" required>
                                    <small class="form-text text-muted">9-digit state education identifier</small>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No candidates pending completion.</p>
            }
        </div>
    </div>

    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-account-outline"></i> LEA Point of Contact</h4>
        </div>
        <div class="r4-card-body">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="POCFirstName">First Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="POCFirstName" name="POCFirstName" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="POCLastName">Last Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="POCLastName" name="POCLastName" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="POCEmail">Email <span class="text-danger">*</span></label>
                    <input type="email" class="form-control" id="POCEmail" name="POCEmail" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="POCPhone">Phone <span class="text-danger">*</span></label>
                    <input type="tel" class="form-control" id="POCPhone" name="POCPhone" placeholder="(555) 123-4567" required>
                </div>
            </div>
        </div>
    </div>

    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-file-sign"></i> GAA Authorized Signer</h4>
        </div>
        <div class="r4-card-body">
            <p class="text-muted">The person authorized to sign Grant Award Agreements on behalf of the LEA (typically Superintendent or designee)</p>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="GAASignerName">Full Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="GAASignerName" name="GAASignerName" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="GAASignerTitle">Title <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="GAASignerTitle" name="GAASignerTitle" placeholder="e.g., Superintendent, Assistant Superintendent" required>
                </div>
            </div>
            <div class="form-group">
                <label for="GAASignerEmail">Email <span class="text-danger">*</span></label>
                <input type="email" class="form-control" id="GAASignerEmail" name="GAASignerEmail" required>
                <small class="form-text text-muted">DocuSign will be sent to this email address</small>
            </div>
        </div>
    </div>

    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-currency-usd"></i> Fiscal Agent Information</h4>
        </div>
        <div class="r4-card-body">
            <p class="text-muted">The person who will manage grant funds and process payments to student teachers</p>
            <div class="form-group">
                <label for="FiscalAgentName">Name <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="FiscalAgentName" name="FiscalAgentName" required>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="FiscalAgentEmail">Email <span class="text-danger">*</span></label>
                    <input type="email" class="form-control" id="FiscalAgentEmail" name="FiscalAgentEmail" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="FiscalAgentPhone">Phone <span class="text-danger">*</span></label>
                    <input type="tel" class="form-control" id="FiscalAgentPhone" name="FiscalAgentPhone" placeholder="(555) 123-4567" required>
                </div>
            </div>
        </div>
    </div>

    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-account-tie"></i> Superintendent Information</h4>
        </div>
        <div class="r4-card-body">
            <div class="form-group">
                <label for="SuperintendentName">Name <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="SuperintendentName" name="SuperintendentName" required>
            </div>
            <div class="form-group">
                <label for="SuperintendentEmail">Email <span class="text-danger">*</span></label>
                <input type="email" class="form-control" id="SuperintendentEmail" name="SuperintendentEmail" required>
            </div>
        </div>
    </div>

    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-cash-multiple"></i> Payment Information</h4>
        </div>
        <div class="r4-card-body">
            <div class="form-group">
                <label for="PaymentIntent">Payment Intent <span class="text-danger">*</span></label>
                <select class="form-control" id="PaymentIntent" name="PaymentIntent" required>
                    <option value="">Select payment intent...</option>
                    <option value="stipend">Stipend to Student Teacher</option>
                    <option value="salary">Salary Supplement</option>
                    <option value="tuition">Tuition Support</option>
                    <option value="other">Other (Specify in Notes)</option>
                </select>
                <small class="form-text text-muted">How will the grant funds be used?</small>
            </div>

            <div class="form-group">
                <label for="PaymentSchedule">Payment Schedule <span class="text-danger">*</span></label>
                <select class="form-control" id="PaymentSchedule" name="PaymentSchedule" required>
                    <option value="">Select payment schedule...</option>
                    <option value="lump_sum">Lump Sum (One-time payment)</option>
                    <option value="monthly">Monthly Installments</option>
                    <option value="quarterly">Quarterly Payments</option>
                    <option value="semester">Per Semester</option>
                </select>
                <small class="form-text text-muted">When will payments be made to student teachers?</small>
            </div>
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="r4-button r4-button-success">
            <i class="mdi mdi-send-outline"></i> Submit Application to CTC
        </button>
        <a href="@Url.Action("Dashboard", "LEAPortal")" class="r4-button r4-button-secondary">
            <i class="mdi mdi-arrow-left"></i> Save Draft & Return Later
        </a>
    </div>
</form>

<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-information-outline"></i> Required Information Checklist</h4>
    </div>
    <div class="r4-card-body">
        <div class="review-checklist">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="checkSEID">
                <label class="form-check-label" for="checkSEID">
                    SEID confirmed for all candidates
                </label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="checkPOC">
                <label class="form-check-label" for="checkPOC">
                    LEA point of contact information provided
                </label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="checkGAA">
                <label class="form-check-label" for="checkGAA">
                    GAA authorized signer designated
                </label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="checkFiscal">
                <label class="form-check-label" for="checkFiscal">
                    Fiscal agent information complete
                </label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="checkSuper">
                <label class="form-check-label" for="checkSuper">
                    Superintendent information provided
                </label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="checkPayment">
                <label class="form-check-label" for="checkPayment">
                    Payment intent and schedule specified
                </label>
            </div>
        </div>
    </div>
</div>
</div>

@* Bulk Upload Tab Content *@
<div class="tab-content" data-tab-content="bulk" style="display: none;">
    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-file-upload-outline"></i> Upload SEID File</h4>
            <div class="card-actions">
                <a href="@Url.Action("DownloadSEIDTemplate", "LEAPortal")" class="r4-button r4-button-primary">
                    <i class="mdi mdi-file-excel"></i> Download Excel Template
                </a>
            </div>
        </div>
        <div class="r4-card-body">
            <div class="required-fields-compact">
                <p class="required-fields-label"><i class="mdi mdi-format-list-checks"></i> <strong>Required Fields:</strong></p>
                <div class="field-tags">
                    <span class="field-tag">Student First Name</span>
                    <span class="field-tag">Student Last Name</span>
                    <span class="field-tag">SEID</span>
                </div>
            </div>

            <form id="bulkUploadForm" enctype="multipart/form-data">
                <input type="hidden" name="applicationId" value="@Model.ApplicationId" />

                <div class="upload-area" id="uploadArea">
                    <div class="upload-icon">
                        <i class="mdi mdi-cloud-upload-outline"></i>
                    </div>
                    <h5>Drag and drop your Excel file here</h5>
                    <p class="text-muted">or click to browse</p>
                    <input type="file" id="fileInput" name="file" accept=".xlsx,.xls,.csv" style="display: none;" />
                    <button type="button" class="r4-button r4-button-primary mt-3" onclick="document.getElementById('fileInput').click();">
                        <i class="mdi mdi-folder-open-outline"></i> Choose File
                    </button>
                </div>

                <div id="fileInfo" class="file-info mt-3" style="display: none;">
                    <div class="alert alert-success">
                        <i class="mdi mdi-file-check-outline"></i>
                        <strong>Selected file:</strong> <span id="fileName"></span> (<span id="fileSize"></span>)
                        <button type="button" class="btn-close" onclick="clearFile()"></button>
                    </div>
                </div>

                <div class="form-actions mt-4">
                    <button type="submit" class="r4-button r4-button-primary" id="uploadButton" disabled>
                        <i class="mdi mdi-upload"></i> Upload and Process
                    </button>
                    <a href="@Url.Action("Dashboard", "LEAPortal")" class="r4-button">
                        <i class="mdi mdi-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>

            <div id="uploadProgress" class="upload-progress mt-4" style="display: none;">
                <h5>Processing Upload...</h5>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%"></div>
                </div>
                <p class="text-muted mt-2">Please wait while we process your file...</p>
            </div>

            <div id="uploadResults" class="upload-results mt-4" style="display: none;">
                <!-- Results will be displayed here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Tab Switching
        function switchTab(tabName) {
            // Update tab buttons
            document.querySelectorAll('.submission-tabs button').forEach(btn => {
                if (btn.dataset.tab === tabName) {
                    btn.classList.add('r4-button-primary');
                } else {
                    btn.classList.remove('r4-button-primary');
                }
            });

            // Show/hide tab content
            document.querySelectorAll('.tab-content').forEach(content => {
                if (content.dataset.tabContent === tabName) {
                    content.style.display = 'block';
                } else {
                    content.style.display = 'none';
                }
            });
        }

        // Individual Entry Form Submit
        document.getElementById('applicationForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const checkboxes = document.querySelectorAll('.review-checklist input[type="checkbox"]');
            const allChecked = Array.from(checkboxes).every(cb => cb.checked);

            if (!allChecked) {
                if (!confirm('Not all checklist items are marked. Are you sure all required information has been provided?')) {
                    return;
                }
            }

            const studentCount = @Model.Students.Count;

            if (confirm(`Submit completed application to CTC for ${studentCount} candidate(s)?\n\nAfter submission:\n- CTC Grants Team will review the application\n- You will receive email notification of approval decision\n- Approved students will receive Grant Award Agreements`)) {
                alert(`Application submitted to CTC!\n\nIn production, this would:\n1. Update student statuses to "SUBMITTED"\n2. Send notification to CTC Grants Team\n3. Send confirmation email to you\n4. Redirect to dashboard`);

                window.location.href = '@Url.Action("Dashboard", "LEAPortal")';
            }
        });

        // Checklist progress tracking
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('applicationForm');
            const checkboxes = document.querySelectorAll('.review-checklist input[type="checkbox"]');

            form.addEventListener('input', function() {
                updateChecklistProgress();
            });

            checkboxes.forEach(cb => {
                cb.addEventListener('change', function() {
                    updateChecklistProgress();
                });
            });

            function updateChecklistProgress() {
                const checked = Array.from(checkboxes).filter(cb => cb.checked).length;
                const total = checkboxes.length;
                console.log(`Checklist progress: ${checked}/${total} items completed`);
            }

            // Initialize bulk upload handlers
            initBulkUpload();
        });

        // Bulk Upload Functions
        function initBulkUpload() {
            const uploadArea = document.getElementById('uploadArea');
            const fileInput = document.getElementById('fileInput');
            const fileInfo = document.getElementById('fileInfo');
            const fileName = document.getElementById('fileName');
            const fileSize = document.getElementById('fileSize');
            const uploadButton = document.getElementById('uploadButton');
            const uploadForm = document.getElementById('bulkUploadForm');

            // Drag and drop handlers
            uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadArea.classList.add('drag-over');
            });

            uploadArea.addEventListener('dragleave', () => {
                uploadArea.classList.remove('drag-over');
            });

            uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadArea.classList.remove('drag-over');

                const files = e.dataTransfer.files;
                if (files.length > 0) {
                    handleFileSelect(files[0]);
                }
            });

            fileInput.addEventListener('change', (e) => {
                if (e.target.files.length > 0) {
                    handleFileSelect(e.target.files[0]);
                }
            });

            // Form submission
            uploadForm.addEventListener('submit', async (e) => {
                e.preventDefault();

                const formData = new FormData(uploadForm);

                // Show progress
                document.getElementById('uploadProgress').style.display = 'block';
                uploadButton.disabled = true;

                // Mock upload process
                setTimeout(() => {
                    const progressBar = document.querySelector('.progress-bar');
                    let progress = 0;
                    const interval = setInterval(() => {
                        progress += 10;
                        progressBar.style.width = progress + '%';

                        if (progress >= 100) {
                            clearInterval(interval);

                            setTimeout(() => {
                                document.getElementById('uploadProgress').style.display = 'none';
                                showMockResults();
                            }, 500);
                        }
                    }, 200);
                }, 500);
            });
        }

        function handleFileSelect(file) {
            const fileInput = document.getElementById('fileInput');
            const fileInfo = document.getElementById('fileInfo');
            const fileName = document.getElementById('fileName');
            const fileSize = document.getElementById('fileSize');
            const uploadButton = document.getElementById('uploadButton');

            // Validate file type
            const validTypes = ['.xlsx', '.xls', '.csv'];
            const fileExtension = '.' + file.name.split('.').pop().toLowerCase();

            if (!validTypes.includes(fileExtension)) {
                alert('Please select a valid Excel (.xlsx, .xls) or CSV (.csv) file.');
                return;
            }

            // Validate file size (max 10MB)
            if (file.size > 10 * 1024 * 1024) {
                alert('File size must be less than 10MB.');
                return;
            }

            // Display file info
            fileName.textContent = file.name;
            fileSize.textContent = formatFileSize(file.size);
            fileInfo.style.display = 'block';
            uploadButton.disabled = false;

            // Store file in form
            const dataTransfer = new DataTransfer();
            dataTransfer.items.add(file);
            fileInput.files = dataTransfer.files;
        }

        function clearFile() {
            const fileInput = document.getElementById('fileInput');
            const fileInfo = document.getElementById('fileInfo');
            const uploadButton = document.getElementById('uploadButton');

            fileInput.value = '';
            fileInfo.style.display = 'none';
            uploadButton.disabled = true;
        }

        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
        }

        function showMockResults() {
            const resultsDiv = document.getElementById('uploadResults');
            const studentCount = @Model.Students.Count;
            resultsDiv.innerHTML = `
                <div class="alert alert-success">
                    <i class="mdi mdi-check-circle-outline"></i>
                    <strong>Upload Successful!</strong> SEIDs have been processed and assigned to candidates.
                </div>
                <div class="upload-summary">
                    <h5><i class="mdi mdi-chart-box-outline"></i> Upload Summary</h5>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="summary-card summary-success">
                                <div class="summary-value">${studentCount}</div>
                                <div class="summary-label">Candidates Matched</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="summary-card summary-success">
                                <div class="summary-value">${studentCount}</div>
                                <div class="summary-label">SEIDs Assigned</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="summary-card">
                                <div class="summary-value">0</div>
                                <div class="summary-label">Errors Found</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-actions mt-4">
                    <button class="r4-button r4-button-success" onclick="switchTab('individual')">
                        <i class="mdi mdi-check"></i> Continue to Complete Application
                    </button>
                    <a href="@Url.Action("Dashboard", "LEAPortal")" class="r4-button">
                        <i class="mdi mdi-arrow-left"></i> Return to Dashboard
                    </a>
                </div>
            `;
            resultsDiv.style.display = 'block';
        }
    </script>

    <style>
        /* Tab Styling */
        .submission-tabs {
            display: flex;
            gap: 0.5rem;
            margin-bottom: 1.5rem;
            padding: 0.5rem;
            background: var(--gray-100);
            border-radius: 8px;
            width: fit-content;
        }

