@model ApplicationListViewModel

@{
    ViewData["Title"] = "Your Submissions";
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "LEAPortal", new { leaId = ViewContext.RouteData.Values["leaId"], grantCycleId = Model.GrantCycleId })">LEA Portal</a></li>
        <li class="breadcrumb-item active">Your Submissions</li>
    </ol>
}

<div class="page-header">
    <h2><i class="mdi mdi-file-document-multiple"></i> Your Submissions</h2>
    <p class="subtitle">@Model.GrantCycleName</p>
</div>

<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-folder-multiple-outline"></i> All Applications</h4>
    </div>
    <div class="r4-card-body">
        @if (Model.Applications.Any())
        {
            <div style="display: flex; gap: var(--spacing-md); margin-bottom: var(--spacing-xl); align-items: flex-end; flex-wrap: wrap;">
                <div style="flex: 1; min-width: 250px;">
                    <label for="searchIHE" style="display: block; font-weight: 600; margin-bottom: var(--spacing-sm);">
                        <i class="mdi mdi-magnify"></i> Search by IHE Partner
                    </label>
                    <input type="text" id="searchIHE" class="form-control" placeholder="Enter IHE name..." />
                </div>
                <div style="min-width: 250px;">
                    <label for="filterStatus" style="display: block; font-weight: 600; margin-bottom: var(--spacing-sm);">
                        <i class="mdi mdi-filter-outline"></i> Filter by Status
                    </label>
                    <select id="filterStatus" class="form-control">
                        <option value="">All Statuses</option>
                        <option value="DRAFT">Draft</option>
                        <option value="SUBMITTED">Submitted</option>
                        <option value="APPROVED">Approved</option>
                    </select>
                </div>
            </div>

            <div class="table-wrapper">
                <table class="r4-table" id="applicationsTable">
                    <thead>
                        <tr>
                            <th>Submission Date</th>
                            <th>IHE Partner</th>
                            <th>Total Candidates</th>
                            <th>Status</th>
                            <th>Last Modified</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var application in Model.Applications)
                        {
                            <tr data-ihe-name="@application.IHEName.ToLower()" data-status="@application.Status">
                                <td>@application.SubmissionDate.ToString("MM/dd/yyyy")</td>
                                <td>
                                    <strong>@application.IHEName</strong>
                                </td>
                                <td>@application.TotalStudents</td>
                                <td>
                                    @await Html.PartialAsync("_StatusBadge", application.Status)
                                </td>
                                <td>@application.LastModified.ToString("MM/dd/yyyy")</td>
                                <td>
                                    <a href="@Url.Action("Details", "Application", new { id = application.Id })" class="r4-button r4-button-sm">
                                        <i class="mdi mdi-eye-outline"></i> View Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="mdi mdi-information-outline"></i>
                No applications found for your LEA in this grant cycle.
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchIHE');
            const filterSelect = document.getElementById('filterStatus');
            const tableRows = document.querySelectorAll('#applicationsTable tbody tr');

            function filterTable() {
                const searchTerm = searchInput.value.toLowerCase();
                const selectedStatus = filterSelect.value;

                tableRows.forEach(row => {
                    const iheName = row.getAttribute('data-ihe-name');
                    const status = row.getAttribute('data-status');

                    const matchesSearch = !searchTerm || iheName.includes(searchTerm);
                    const matchesStatus = !selectedStatus || status === selectedStatus;

                    if (matchesSearch && matchesStatus) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            }

            searchInput.addEventListener('input', filterTable);
            filterSelect.addEventListener('change', filterTable);
        });
    </script>
}
