@model ApplicationListViewModel

@{
    ViewData["Title"] = "Your Submissions";
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "LEAPortal", new { leaId = ViewContext.RouteData.Values["leaId"], grantCycleId = Model.GrantCycleId })">LEA Portal</a></li>
        <li class="breadcrumb-item active">Your Submissions</li>
    </ol>
}

<div class="page-header">
    <h2><i class="mdi mdi-file-document-multiple"></i> Your Submissions</h2>
    <p class="subtitle">@Model.GrantCycleName</p>
</div>

<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-account-multiple-outline"></i> All Candidates</h4>
    </div>
    <div class="r4-card-body">
        @{
            // MOCK DATA: Full student queue
            var allStudents = new List<dynamic>
            {
                new { ApplicationDate = DateTime.Now.AddDays(-1), StudentName = "Maria Garcia", IHEPartner = "Cal State University, Fullerton", CredentialArea = "Multiple Subject", Status = "APPROVED" },
                new { ApplicationDate = DateTime.Now.AddDays(-3), StudentName = "James Wilson", IHEPartner = "UCLA", CredentialArea = "Single Subject - Mathematics", Status = "SUBMITTED" },
                new { ApplicationDate = DateTime.Now.AddDays(-5), StudentName = "Sarah Chen", IHEPartner = "Cal State University, Northridge", CredentialArea = "Education Specialist", Status = "APPROVED" },
                new { ApplicationDate = DateTime.Now.AddDays(-7), StudentName = "Michael Rodriguez", IHEPartner = "Cal State University, Fullerton", CredentialArea = "Multiple Subject", Status = "APPROVED" },
                new { ApplicationDate = DateTime.Now.AddDays(-8), StudentName = "Emily Thompson", IHEPartner = "UCLA", CredentialArea = "Single Subject - English", Status = "SUBMITTED" },
                new { ApplicationDate = DateTime.Now.AddDays(-10), StudentName = "David Kim", IHEPartner = "Cal State University, Northridge", CredentialArea = "Single Subject - Science", Status = "SUBMITTED" },
                new { ApplicationDate = DateTime.Now.AddDays(-12), StudentName = "Jennifer Martinez", IHEPartner = "Cal State University, Fullerton", CredentialArea = "Education Specialist", Status = "APPROVED" },
                new { ApplicationDate = DateTime.Now.AddDays(-14), StudentName = "Robert Johnson", IHEPartner = "UCLA", CredentialArea = "Multiple Subject", Status = "APPROVED" },
                new { ApplicationDate = DateTime.Now.AddDays(-15), StudentName = "Amanda Lee", IHEPartner = "Cal State University, Northridge", CredentialArea = "Single Subject - History", Status = "SUBMITTED" },
                new { ApplicationDate = DateTime.Now.AddDays(-18), StudentName = "Christopher Brown", IHEPartner = "Cal State University, Fullerton", CredentialArea = "Multiple Subject", Status = "APPROVED" },
                new { ApplicationDate = DateTime.Now.AddDays(-20), StudentName = "Jessica Anderson", IHEPartner = "UCLA", CredentialArea = "Education Specialist", Status = "SUBMITTED" },
                new { ApplicationDate = DateTime.Now.AddDays(-22), StudentName = "Daniel White", IHEPartner = "Cal State University, Northridge", CredentialArea = "Single Subject - Mathematics", Status = "APPROVED" }
            };
        }

        @if (allStudents.Any())
        {
            <div style="display: flex; gap: var(--spacing-md); margin-bottom: var(--spacing-xl); align-items: flex-end; flex-wrap: wrap;">
                <div style="flex: 1; min-width: 250px;">
                    <label for="searchStudents" style="display: block; font-weight: 600; margin-bottom: var(--spacing-sm);">
                        <i class="mdi mdi-magnify"></i> Search by Student Name
                    </label>
                    <input type="text" id="searchStudents" class="form-control" placeholder="Enter student name..." />
                </div>
                <div style="min-width: 250px;">
                    <label for="filterIHE" style="display: block; font-weight: 600; margin-bottom: var(--spacing-sm);">
                        <i class="mdi mdi-filter-outline"></i> Filter by IHE Partner
                    </label>
                    <select id="filterIHE" class="form-control">
                        <option value="">All IHE Partners</option>
                        <option value="csuf">Cal State University, Fullerton</option>
                        <option value="ucla">UCLA</option>
                        <option value="csun">Cal State University, Northridge</option>
                    </select>
                </div>
            </div>

            <div class="table-wrapper">
                <table class="r4-table" id="studentsTable">
                    <thead>
                        <tr>
                            <th>Application Date</th>
                            <th>Student Name</th>
                            <th>IHE Partner</th>
                            <th>Credential Area</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in allStudents)
                        {
                            <tr data-student-name="@student.StudentName.ToLower()" data-ihe="@student.IHEPartner">
                                <td>@student.ApplicationDate.ToString("MM/dd/yyyy")</td>
                                <td>
                                    <strong>@student.StudentName</strong>
                                </td>
                                <td>@student.IHEPartner</td>
                                <td>@student.CredentialArea</td>
                                <td>
                                    @if (student.Status == "SUBMITTED")
                                    {
                                        <span class="badge badge-info">Submitted</span>
                                    }
                                    else if (student.Status == "APPROVED")
                                    {
                                        <span class="badge badge-success">Approved</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="mdi mdi-information-outline"></i>
                No candidates found for your LEA in this grant cycle.
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchStudents');
            const filterSelect = document.getElementById('filterIHE');
            const tableRows = document.querySelectorAll('#studentsTable tbody tr');

            function filterTable() {
                const searchTerm = searchInput.value.toLowerCase();
                const selectedIHE = filterSelect.value;

                tableRows.forEach(row => {
                    const studentName = row.getAttribute('data-student-name');
                    const ihePartner = row.getAttribute('data-ihe');

                    const matchesSearch = studentName.includes(searchTerm);
                    const matchesIHE = !selectedIHE ||
                        (selectedIHE === 'csuf' && ihePartner.includes('Fullerton')) ||
                        (selectedIHE === 'ucla' && ihePartner.includes('UCLA')) ||
                        (selectedIHE === 'csun' && ihePartner.includes('Northridge'));

                    if (matchesSearch && matchesIHE) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            }

            searchInput.addEventListener('input', filterTable);
            filterSelect.addEventListener('change', filterTable);
        });
    </script>
}
