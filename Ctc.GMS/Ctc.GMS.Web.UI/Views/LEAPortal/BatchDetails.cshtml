@model LEABatchDetailsViewModel

@{
    ViewData["Title"] = $"Submission Details - {Model.BatchMonth}";
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })">LEA Portal</a></li>
        <li class="breadcrumb-item active">Submission Details - @Model.BatchMonth</li>
    </ol>
}

@* Page Header *@
<div class="page-header">
    <h2><i class="mdi mdi-file-document-multiple-outline"></i> Submission Details</h2>
    <p class="subtitle">@Model.BatchMonth Submission to CTC</p>
</div>

@* Action Button *@
<div class="page-actions">
    <a href="@Url.Action("Dashboard", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="r4-button r4-button-secondary">
        <i class="mdi mdi-arrow-left"></i> Back to Dashboard
    </a>
</div>

@* Submission Information Card *@
<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-information-outline"></i> Submission Information</h4>
    </div>
    <div class="r4-card-body" style="padding-top: 0;">
        <div class="info-grid" style="margin-top: -0.15rem;">
            <div class="info-item">
                <span class="info-label">Month</span>
                <span class="info-value">@Model.BatchMonth</span>
            </div>
            <div class="info-item">
                <span class="info-label">Grant Cycle</span>
                <span class="info-value">@Model.GrantCycleName</span>
            </div>
            <div class="info-item">
                <span class="info-label">Status</span>
                <span class="info-value">@await Html.PartialAsync("_StatusBadge", Model.Status)</span>
            </div>
            <div class="info-item">
                <span class="info-label">LEA District</span>
                <span class="info-value">@Model.LEAName</span>
            </div>
            <div class="info-item">
                <span class="info-label">Total Candidates</span>
                <span class="info-value info-value-highlight">@Model.TotalCandidates</span>
            </div>
            <div class="info-item">
                <span class="info-label">Total Award Amount</span>
                <span class="info-value info-value-highlight">@Model.TotalAwardAmount.ToString("C")</span>
            </div>
            <div class="info-item info-item-full">
                <span class="info-label">IHE Partners (@Model.IHEPartnerCount)</span>
                <div class="info-value">
                    @foreach (var ihe in Model.IHEPartnerNames)
                    {
                        <span class="badge badge-info" style="margin-right: 0.5rem; margin-bottom: 0.25rem;">@ihe</span>
                    }
                </div>
            </div>
            <div class="info-item">
                <span class="info-label">Created Date</span>
                <span class="info-value">@Model.CreatedDate.ToString("MM/dd/yyyy")</span>
            </div>
            <div class="info-item">
                <span class="info-label">Last Modified</span>
                <span class="info-value">@Model.LastModified.ToString("MM/dd/yyyy h:mm tt")</span>
            </div>
            @if (Model.SubmissionDate.HasValue)
            {
                <div class="info-item">
                    <span class="info-label">Submission Date</span>
                    <span class="info-value">@Model.SubmissionDate.Value.ToString("MM/dd/yyyy h:mm tt")</span>
                </div>
            }
        </div>
    </div>
</div>

@* Timeline *@
@if (Model.TimelineEvents.Any())
{
    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-timeline-outline"></i> Submission Timeline</h4>
        </div>
        <div class="r4-card-body">
            <div class="horizontal-timeline">
                @foreach (var evt in Model.TimelineEvents.OrderBy(e => e.EventDate))
                {
                    <div class="timeline-step">
                        <div class="timeline-step-marker @GetTimelineMarkerClass(evt.EventType)">
                            <i class="mdi @GetTimelineIcon(evt.EventType)"></i>
                        </div>
                        <div class="timeline-step-content">
                            <div class="timeline-step-title">@evt.Description</div>
                            <div class="timeline-step-date">@evt.EventDate.ToString("MMM dd, yyyy")</div>
                            @if (!string.IsNullOrEmpty(evt.Actor))
                            {
                                <div class="timeline-step-actor">@evt.Actor</div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

@* Student List *@
<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-account-group-outline"></i> Candidates in Submission</h4>
    </div>
    <div class="r4-card-body">
        @if (!Model.Students.Any())
        {
            <div class="alert alert-info">
                <i class="mdi mdi-information-outline"></i>
                No students have been added to this submission yet.
            </div>
        }
        else
        {
            @* Search and Filter Bar *@
            <div class="form-row" style="margin-bottom: 1.5rem;">
                <div class="form-group col-md-8">
                    <label for="studentSearch"><i class="mdi mdi-magnify"></i> Search</label>
                    <input type="text" id="studentSearch" class="form-control" placeholder="Search by name, SEID, or credential area...">
                </div>
                <div class="form-group col-md-4">
                    <label for="credentialFilter"><i class="mdi mdi-school-outline"></i> Credential Area</label>
                    <select id="credentialFilter" class="form-control">
                        <option value="">All Credential Areas</option>
                        @foreach (var credential in Model.Students.Select(s => s.CredentialArea).Distinct().OrderBy(c => c))
                        {
                            <option value="@credential">@credential</option>
                        }
                    </select>
                </div>
            </div>

            <div class="table-wrapper">
                <table class="r4-table" id="studentsTable">
                    <thead>
                        <tr>
                            <th>SEID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Credential Area</th>
                            <th style="text-align: right;">Award Amount</th>
                            <th>Submitted</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model.Students.OrderBy(s => s.LastName))
                        {
                            <tr>
                                <td>@student.SEID</td>
                                <td>@student.FirstName</td>
                                <td>@student.LastName</td>
                                <td>@student.CredentialArea</td>
                                <td style="text-align: right;">@student.AwardAmount.ToString("C")</td>
                                <td>@(student.SubmittedAt?.ToString("MM/dd/yyyy") ?? "-")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Student table filtering
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('studentSearch');
            const credentialFilter = document.getElementById('credentialFilter');
            const table = document.getElementById('studentsTable');
            const tbody = table ? table.getElementsByTagName('tbody')[0] : null;

            if (!tbody) return;

            const rows = tbody.getElementsByTagName('tr');

            function filterTable() {
                const searchTerm = searchInput.value.toLowerCase();
                const credentialValue = credentialFilter.value;

                for (let i = 0; i < rows.length; i++) {
                    const row = rows[i];
                    const cells = row.getElementsByTagName('td');

                    if (cells.length > 0) {
                        const seid = cells[0].textContent.toLowerCase();
                        const firstName = cells[1].textContent.toLowerCase();
                        const lastName = cells[2].textContent.toLowerCase();
                        const credentialArea = cells[3].textContent;

                        // Check search term
                        const matchesSearch = searchTerm === '' ||
                            seid.includes(searchTerm) ||
                            firstName.includes(searchTerm) ||
                            lastName.includes(searchTerm) ||
                            credentialArea.toLowerCase().includes(searchTerm);

                        // Check credential filter
                        const matchesCredential = credentialValue === '' || credentialArea === credentialValue;

                        // Show/hide row based on all filters
                        if (matchesSearch && matchesCredential) {
                            row.style.display = '';
                        } else {
                            row.style.display = 'none';
                        }
                    }
                }
            }

            // Add event listeners
            searchInput.addEventListener('keyup', filterTable);
            credentialFilter.addEventListener('change', filterTable);
        });
    </script>

    <style>
        /* Info Grid - Submission Information */
        .info-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 0.5rem 2rem;
        }

        .info-item {
            display: flex;
            flex-direction: column;
            padding: 0.5rem 0;
            border-bottom: 1px solid var(--gray-200);
        }

        .info-item-full {
            grid-column: 1 / -1;
        }

        .info-label {
            font-size: 0.75rem;
            color: var(--gray-600);
            font-weight: 500;
            margin-bottom: 0.125rem;
            text-transform: uppercase;
            letter-spacing: 0.025em;
        }

        .info-value {
            font-size: 0.95rem;
            color: var(--gray-900);
        }

        .info-value-highlight {
            font-weight: 600;
            color: var(--ctc-blue);
        }

        /* Horizontal Timeline */
        .horizontal-timeline {
            display: flex;
            flex-wrap: wrap;
            gap: 0;
            position: relative;
            padding: 1rem 0;
        }

        .timeline-step {
            flex: 1;
            min-width: 180px;
            max-width: 250px;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            position: relative;
            padding: 0 1rem;
        }

        .timeline-step:not(:last-child)::after {
            content: '';
            position: absolute;
            top: 20px;
            left: calc(50% + 20px);
            width: calc(100% - 40px);
            height: 2px;
            background: var(--gray-300);
        }

        .timeline-step-marker {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--gray-200);
            color: var(--gray-600);
            font-size: 1.25rem;
            margin-bottom: 0.75rem;
            position: relative;
            z-index: 1;
        }

        .timeline-step-marker.timeline-marker-info {
            background: var(--info);
            color: var(--white);
        }

        .timeline-step-marker.timeline-marker-primary {
            background: var(--ctc-blue);
            color: var(--white);
        }

        .timeline-step-marker.timeline-marker-warning {
            background: var(--warning);
            color: var(--gray-900);
        }

        .timeline-step-marker.timeline-marker-success {
            background: var(--success);
            color: var(--white);
        }

        .timeline-step-content {
            flex: 1;
        }

        .timeline-step-title {
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--gray-800);
            margin-bottom: 0.25rem;
            line-height: 1.3;
        }

        .timeline-step-date {
            font-size: 0.8rem;
            color: var(--gray-600);
        }

        .timeline-step-actor {
            font-size: 0.75rem;
            color: var(--gray-500);
            margin-top: 0.25rem;
        }

        @@media (max-width: 768px) {
            .info-grid {
                grid-template-columns: 1fr;
            }

            .horizontal-timeline {
                flex-direction: column;
                align-items: flex-start;
            }

            .timeline-step {
                flex-direction: row;
                align-items: flex-start;
                text-align: left;
                min-width: 100%;
                max-width: 100%;
                padding: 0.5rem 0;
            }

            .timeline-step:not(:last-child)::after {
                top: 40px;
                left: 19px;
                width: 2px;
                height: calc(100% - 20px);
            }

            .timeline-step-marker {
                margin-right: 1rem;
                margin-bottom: 0;
                flex-shrink: 0;
            }
        }
    </style>
}

@functions {
    string GetTimelineIcon(string eventType)
    {
        return eventType switch
        {
            "BATCH_CREATED" => "mdi-file-document-outline",
            "LEA_REVIEW" => "mdi-file-search-outline",
            "CTC_SUBMITTED" => "mdi-send-outline",
            "CTC_APPROVED" => "mdi-check-circle-outline",
            "REPORTING" => "mdi-file-chart-outline",
            "COMPLETE" => "mdi-check-all",
            _ => "mdi-circle-outline"
        };
    }

    string GetTimelineMarkerClass(string eventType)
    {
        return eventType switch
        {
            "BATCH_CREATED" => "timeline-marker-info",
            "LEA_REVIEW" => "timeline-marker-primary",
            "CTC_SUBMITTED" => "timeline-marker-warning",
            "CTC_APPROVED" => "timeline-marker-success",
            "REPORTING" => "timeline-marker-primary",
            "COMPLETE" => "timeline-marker-success",
            _ => "timeline-marker-default"
        };
    }
}
