@model ReviewCandidatesViewModel

@{
    ViewData["Title"] = "Review Candidates";
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })">LEA Portal</a></li>
        <li class="breadcrumb-item active">Review Candidates</li>
    </ol>
}

<div class="page-header">
    <h2><i class="mdi mdi-account-check-outline"></i> Review Candidates</h2>
    <p class="subtitle">@Model.GrantCycleName</p>
    <div style="display: flex; gap: 2rem; margin-top: 0.5rem; font-size: 0.9rem; color: var(--gray-600);">
        <div>
            <i class="mdi mdi-calendar-clock-outline" style="color: var(--ctc-blue);"></i>
            <strong>Submission Period:</strong> @Model.CurrentBatchMonth (Day @Model.CurrentMonthDay of @Model.DaysInMonth)
            <span class="info-tooltip">
                <i class="mdi mdi-information-outline"></i>
                <span class="info-tooltip-text">This grant operates on a monthly submission cadence. Candidates submitted within the current month will be processed together.</span>
            </span>
        </div>
        <div>
            <i class="mdi mdi-clock-outline" style="color: var(--ctc-blue);"></i>
            @Model.DaysRemainingInMonth days remaining
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        <i class="mdi mdi-check-circle-outline"></i> @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        <i class="mdi mdi-alert-circle-outline"></i> @TempData["Error"]
    </div>
}

@* Application Information Card - Locked by default *@
<div class="r4-card" id="applicationInfoCard">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-file-document-outline"></i> Application Information</h4>
        <div class="card-actions">
            <button type="button" class="r4-button r4-button-sm" id="editInfoBtn" onclick="toggleEditMode()">
                <i class="mdi mdi-pencil"></i> Edit
            </button>
            <button type="button" class="r4-button r4-button-sm r4-button-primary" id="saveInfoBtn" onclick="saveApplicationInfo()" style="display: none;">
                <i class="mdi mdi-content-save"></i> Save
            </button>
        </div>
    </div>
    <div class="r4-card-body" id="applicationInfoBody">
        <div class="info-sections-grid">
            @* LEA Point of Contact *@
            <div class="info-section">
                <div class="info-section-header">
                    <i class="mdi mdi-account-outline"></i> LEA Point of Contact
                </div>
                <div class="info-fields-grid">
                    <div class="info-field">
                        <label>First Name</label>
                        <input type="text" class="form-control info-input" name="POCFirstName" value="@Model.POCFirstName" disabled />
                    </div>
                    <div class="info-field">
                        <label>Last Name</label>
                        <input type="text" class="form-control info-input" name="POCLastName" value="@Model.POCLastName" disabled />
                    </div>
                    <div class="info-field">
                        <label>Email</label>
                        <input type="email" class="form-control info-input" name="POCEmail" value="@Model.POCEmail" disabled />
                    </div>
                    <div class="info-field">
                        <label>Phone</label>
                        <input type="tel" class="form-control info-input" name="POCPhone" value="@Model.POCPhone" disabled />
                    </div>
                </div>
            </div>

            @* GAA Authorized Signer *@
            <div class="info-section">
                <div class="info-section-header">
                    <i class="mdi mdi-pen"></i> GAA Authorized Signer
                </div>
                <div class="info-fields-grid">
                    <div class="info-field">
                        <label>Full Name</label>
                        <input type="text" class="form-control info-input" name="GAASignerName" value="@Model.GAASignerName" disabled />
                    </div>
                    <div class="info-field">
                        <label>Title</label>
                        <input type="text" class="form-control info-input" name="GAASignerTitle" value="@Model.GAASignerTitle" disabled />
                    </div>
                    <div class="info-field">
                        <label>Email</label>
                        <input type="email" class="form-control info-input" name="GAASignerEmail" value="@Model.GAASignerEmail" disabled />
                    </div>
                </div>
            </div>

            @* Fiscal Agent *@
            <div class="info-section">
                <div class="info-section-header">
                    <i class="mdi mdi-cash-multiple"></i> Fiscal Agent
                </div>
                <div class="info-fields-grid">
                    <div class="info-field">
                        <label>Name</label>
                        <input type="text" class="form-control info-input" name="FiscalAgentName" value="@Model.FiscalAgentName" disabled />
                    </div>
                    <div class="info-field">
                        <label>Email</label>
                        <input type="email" class="form-control info-input" name="FiscalAgentEmail" value="@Model.FiscalAgentEmail" disabled />
                    </div>
                    <div class="info-field">
                        <label>Phone</label>
                        <input type="tel" class="form-control info-input" name="FiscalAgentPhone" value="@Model.FiscalAgentPhone" disabled />
                    </div>
                </div>
            </div>

            @* Superintendent *@
            <div class="info-section">
                <div class="info-section-header">
                    <i class="mdi mdi-account-tie"></i> Superintendent
                </div>
                <div class="info-fields-grid">
                    <div class="info-field">
                        <label>Name</label>
                        <input type="text" class="form-control info-input" name="SuperintendentName" value="@Model.SuperintendentName" disabled />
                    </div>
                    <div class="info-field">
                        <label>Email</label>
                        <input type="email" class="form-control info-input" name="SuperintendentEmail" value="@Model.SuperintendentEmail" disabled />
                    </div>
                </div>
            </div>

            @* Payment Information *@
            <div class="info-section">
                <div class="info-section-header">
                    <i class="mdi mdi-credit-card-outline"></i> Payment Information
                </div>
                <div class="info-fields-grid">
                    <div class="info-field">
                        <label>Payment Intent</label>
                        <input type="text" class="form-control info-input" name="PaymentIntent" value="@Model.PaymentIntent" disabled />
                    </div>
                    <div class="info-field">
                        <label>Payment Schedule</label>
                        <input type="text" class="form-control info-input" name="PaymentSchedule" value="@Model.PaymentSchedule" disabled />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<form method="post" action="@Url.Action("ProcessCandidates", "LEAPortal")" id="reviewForm">
    <input type="hidden" name="LEAId" value="@Model.LEAId" />
    <input type="hidden" name="GrantCycleId" value="@Model.GrantCycleId" />

    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-account-group-outline"></i> Candidates Awaiting Review (@Model.TotalCandidates)</h4>
            <div class="card-actions">
                <span style="font-size: 0.9rem; color: var(--gray-600); margin-right: 1rem;">
                    From @Model.IHESourceCount IHE Partner@(Model.IHESourceCount != 1 ? "s" : "")
                </span>
            </div>
        </div>
        <div class="r4-card-body">
            @if (!Model.Candidates.Any())
            {
                <div class="alert alert-info">
                    <i class="mdi mdi-information-outline"></i>
                    No candidates awaiting review at this time.
                </div>
            }
            else
            {
                @* Filter and Selection Controls *@
                <div class="filter-controls">
                    <div class="filter-group">
                        <label for="filterIHE" class="filter-label">
                            <i class="mdi mdi-filter-outline"></i> Filter by IHE Partner
                        </label>
                        <select id="filterIHE" class="form-control">
                            <option value="">All IHE Partners</option>
                            @foreach (var ihe in Model.Candidates.Select(c => c.IHEName).Distinct().OrderBy(n => n))
                            {
                                <option value="@ihe">@ihe</option>
                            }
                        </select>
                    </div>
                    <div class="filter-actions">
                        <button type="button" class="r4-button r4-button-sm" onclick="selectAll()">
                            <i class="mdi mdi-checkbox-multiple-marked-outline"></i> Select All
                        </button>
                    </div>
                </div>

                @* Candidates Table *@
                <div class="table-wrapper">
                    <table class="r4-table" id="candidatesTable">
                        <thead>
                            <tr>
                                <th style="width: 50px;">
                                    <input type="checkbox" id="selectAllCheckbox" checked onchange="toggleAll(this)" />
                                </th>
                                <th>Candidate Name</th>
                                <th>SEID</th>
                                <th>IHE Partner</th>
                                <th>Credential Area</th>
                                <th>Award Amount</th>
                                <th>Received From IHE</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var candidate in Model.Candidates)
                            {
                                <tr data-ihe="@candidate.IHEName">
                                    <td>
                                        <input type="checkbox"
                                               name="SelectedStudentIds"
                                               value="@candidate.StudentId"
                                               checked
                                               class="candidate-checkbox" />
                                    </td>
                                    <td><strong>@candidate.FullName</strong></td>
                                    <td>@candidate.SEID</td>
                                    <td>@candidate.IHEName</td>
                                    <td>@candidate.CredentialArea</td>
                                    <td>@candidate.AwardAmount.ToString("C")</td>
                                    <td>@candidate.SubmittedDate.ToString("MM/dd/yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="form-actions">
                    <a href="@Url.Action("Dashboard", "LEAPortal", new { leaId = Model.LEAId, grantCycleId = Model.GrantCycleId })" class="r4-button r4-button-secondary">
                        <i class="mdi mdi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="r4-button r4-button-primary" onclick="return validateForm()">
                        <i class="mdi mdi-plus"></i> Add to Submission
                    </button>
                </div>
            }
        </div>
    </div>
</form>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const filterIHE = document.getElementById('filterIHE');
            const table = document.getElementById('candidatesTable');
            const tbody = table ? table.getElementsByTagName('tbody')[0] : null;

            if (!tbody) return;

            const rows = tbody.getElementsByTagName('tr');

            // IHE Filter
            filterIHE.addEventListener('change', function() {
                const selectedIHE = this.value;

                for (let i = 0; i < rows.length; i++) {
                    const row = rows[i];
                    const ihe = row.getAttribute('data-ihe');

                    if (!selectedIHE || ihe === selectedIHE) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                }
            });
        });

        function selectAll() {
            const checkboxes = document.getElementsByClassName('candidate-checkbox');
            const rows = document.getElementById('candidatesTable').getElementsByTagName('tbody')[0].getElementsByTagName('tr');

            for (let i = 0; i < checkboxes.length; i++) {
                if (rows[i].style.display !== 'none') {
                    checkboxes[i].checked = true;
                }
            }

            document.getElementById('selectAllCheckbox').checked = true;
        }

        function toggleAll(checkbox) {
            const checkboxes = document.getElementsByClassName('candidate-checkbox');
            for (let i = 0; i < checkboxes.length; i++) {
                checkboxes[i].checked = checkbox.checked;
            }
        }

        function validateForm() {
            const checkedBoxes = document.querySelectorAll('.candidate-checkbox:checked');
            if (checkedBoxes.length === 0) {
                alert('Please select at least one candidate to add.');
                return false;
            }
            return true;
        }

        // Application Information Edit/Lock Toggle
        let originalValues = {};

        function toggleEditMode() {
            const inputs = document.querySelectorAll('.info-input');
            const card = document.getElementById('applicationInfoCard');

            // Store original values
            inputs.forEach(input => {
                originalValues[input.name] = input.value;
                input.disabled = false;
            });

            // Toggle button visibility
            document.getElementById('editInfoBtn').style.display = 'none';
            document.getElementById('saveInfoBtn').style.display = 'inline-flex';

            // Update card styling
            card.classList.add('editing');
        }


        function saveApplicationInfo() {
            const inputs = document.querySelectorAll('.info-input');
            const card = document.getElementById('applicationInfoCard');

            // Lock all inputs
            inputs.forEach(input => {
                input.disabled = true;
            });

            // Toggle button visibility
            document.getElementById('editInfoBtn').style.display = 'inline-flex';
            document.getElementById('saveInfoBtn').style.display = 'none';

            // Update card styling
            card.classList.remove('editing');

            // Show success message (for demo purposes)
            alert('Application information saved successfully!');
        }
    </script>

    <style>
        /* Info Tooltip */
        .info-tooltip {
            position: relative;
            display: inline-block;
            color: var(--ctc-blue);
            cursor: help;
            margin-left: 0.25rem;
        }

        .info-tooltip-text {
            visibility: hidden;
            opacity: 0;
            width: 280px;
            background-color: var(--gray-900);
            color: white;
            text-align: left;
            border-radius: var(--border-radius-sm);
            padding: 0.75rem;
            position: absolute;
            z-index: 1000;
            bottom: 125%;
            left: 50%;
            transform: translateX(-50%);
            font-size: 0.85rem;
            font-weight: normal;
            line-height: 1.4;
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
            transition: opacity 0.2s, visibility 0.2s;
        }

        .info-tooltip-text::after {
            content: "";
            position: absolute;
            top: 100%;
            left: 50%;
            margin-left: -5px;
            border-width: 5px;
            border-style: solid;
            border-color: var(--gray-900) transparent transparent transparent;
        }

        .info-tooltip:hover .info-tooltip-text {
            visibility: visible;
            opacity: 1;
        }

        /* Filter Controls */
        .filter-controls {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid var(--gray-200);
            align-items: flex-end;
            flex-wrap: wrap;
        }

        .filter-group {
            min-width: 250px;
            max-width: 400px;
        }

        .filter-label {
            display: block;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .filter-actions {
            display: flex;
            gap: 0.5rem;
            margin-left: auto;
        }

        /* Form Actions */
        .form-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid var(--gray-200);
        }

        /* Application Information Card */
        #applicationInfoCard {
            margin-bottom: 1.5rem;
        }

        #applicationInfoCard .card-actions {
            display: flex;
            gap: 0.5rem;
            margin-right: -0.5rem;  /* Pull buttons closer to right edge */
        }

        .info-sections-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1.5rem;
            align-items: stretch;
        }

        .info-section {
            border: 1px solid var(--gray-200);
            border-radius: var(--border-radius-md);
            padding: 1rem;
            background: var(--gray-50);
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .info-section-header {
            font-weight: 600;
            font-size: 0.95rem;
            color: var(--ctc-blue);
            margin-bottom: 0.75rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid var(--gray-200);
        }

        .info-section-header i {
            margin-right: 0.35rem;
        }

        .info-fields-grid {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
            flex: 1;
        }

        .info-field {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

        .info-field label {
            font-size: 0.8rem;
            font-weight: 600;
            color: var(--gray-600);
            text-transform: uppercase;
            letter-spacing: 0.025em;
        }

        .info-input {
            width: 100%;
            background-color: var(--gray-100) !important;
            color: var(--gray-700) !important;
            border-color: var(--gray-200) !important;
            cursor: not-allowed;
        }

        .info-input:disabled {
            opacity: 0.8;
        }

        /* Bottom row - span 2 columns for Superintendent, Payment fills remaining */
        .info-sections-grid .info-section:nth-child(4) {
            grid-column: span 1;
        }

        .info-sections-grid .info-section:nth-child(5) {
            grid-column: span 2;
        }

        @@media (max-width: 992px) {
            .info-sections-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            .info-sections-grid .info-section:nth-child(5) {
                grid-column: span 1;
            }
        }

        @@media (max-width: 768px) {
            .info-sections-grid {
                grid-template-columns: 1fr;
            }
            .info-sections-grid .info-section:nth-child(5) {
                grid-column: span 1;
            }
        }

        /* Edit Mode Styling */
        #applicationInfoCard.editing .info-section {
            background: var(--white);
            border-color: var(--ctc-blue);
        }

        #applicationInfoCard.editing .info-input {
            background-color: var(--white) !important;
            color: var(--gray-900) !important;
            border-color: var(--gray-300) !important;
            cursor: text;
        }

        #applicationInfoCard.editing .info-input:focus {
            border-color: var(--ctc-blue) !important;
            box-shadow: 0 0 0 2px rgba(0, 82, 147, 0.1);
        }
    </style>
}
