@model InvoiceGenerationViewModel

@{
    ViewData["Title"] = "Generate Invoice";
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "FiscalTeam", new { grantCycleId = 1 })">Fiscal Team Dashboard</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Invoices", "FiscalTeam", new { grantCycleId = 1 })">Invoice Generation</a></li>
        <li class="breadcrumb-item active">Generate Invoice</li>
    </ol>
}

<div class="page-header">
    <h2><i class="mdi mdi-file-document-edit-outline"></i> Generate Invoice</h2>
    <p class="subtitle">Create invoice for disbursement group with signed GAA</p>
</div>

<form asp-action="GenerateInvoice" asp-controller="FiscalTeam" method="post">
    <input type="hidden" asp-for="DisbursementGroupId" />
    <input type="hidden" asp-for="StudentCount" />

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <i class="mdi mdi-alert-circle"></i>
            <strong>Please correct the following errors:</strong>
            <ul class="mb-0" style="margin-top: 0.5rem;">
                @foreach (var key in ViewData.ModelState.Keys)
                {
                    var errors = ViewData.ModelState[key].Errors;
                    if (errors.Any())
                    {
                        foreach (var error in errors)
                        {
                            <li>
                                @if (!string.IsNullOrEmpty(key) && key != "")
                                {
                                    <strong>@Html.DisplayNameFor(m => m.GetType().GetProperty(key)):</strong>
                                }
                                @error.ErrorMessage
                            </li>
                        }
                    }
                }
            </ul>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="r4-card">
                <div class="r4-card-header">
                    <h4><i class="mdi mdi-file-document-outline"></i> Invoice Information</h4>
                </div>
                <div class="r4-card-body">
                    <fieldset>
                        <legend>LEA Information</legend>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="LEAName" class="form-label"></label>
                                    <input asp-for="LEAName" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="LEAAddress" class="form-label"></label>
                                    <input asp-for="LEAAddress" class="form-control" />
                                    <span asp-validation-for="LEAAddress" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </fieldset>

                    <fieldset>
                        <legend>Invoice Details</legend>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="InvoiceNumber" class="form-label"></label>
                                    <input asp-for="InvoiceNumber" class="form-control" readonly />
                                    <span asp-validation-for="InvoiceNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="PONumber" class="form-label"></label>
                                    <input asp-for="PONumber" class="form-control" placeholder="Enter PO Number" />
                                    <span asp-validation-for="PONumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="InvoiceDate" class="form-label"></label>
                                    <input asp-for="InvoiceDate" class="form-control" type="date" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Amount" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Amount" class="form-control" readonly style="font-size: 1.2rem; font-weight: bold;" />
                                    </div>
                                    <span asp-validation-for="Amount" class="text-danger"></span>
                                    <small class="form-text text-muted">Total amount for @Model.StudentCount student(s)</small>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="r4-card-footer">
                    <button type="submit" class="r4-button r4-button-primary">
                        <i class="mdi mdi-check"></i> Generate Invoice
                    </button>
                    <a href="@Url.Action("Invoices", "FiscalTeam", new { grantCycleId = 1 })" class="r4-button r4-button-secondary">
                        <i class="mdi mdi-close"></i> Cancel
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="r4-card">
                <div class="r4-card-header">
                    <h4><i class="mdi mdi-information-outline"></i> Disbursement Summary</h4>
                </div>
                <div class="r4-card-body">
                    <div class="metric-card">
                        <div class="metric-content">
                            <div class="metric-value">@Model.StudentCount</div>
                            <div class="metric-label">Students</div>
                        </div>
                    </div>
                    <div class="metric-card">
                        <div class="metric-content">
                            <div class="metric-value">@Model.Amount.ToString("C0")</div>
                            <div class="metric-label">Total Amount</div>
                        </div>
                    </div>
                    <hr style="border-color: var(--gray-300); margin: 1rem 0;" />
                    <h5 style="margin-bottom: 0.75rem; color: var(--gray-700); font-size: 0.95rem;">Students Included:</h5>
                    <div style="max-height: 300px; overflow-y: auto;">
                        <table class="r4-table">
                            <tbody>
                                @foreach (var student in Model.Students)
                                {
                                    <tr>
                                        <td>@student.StudentName</td>
                                        <td style="text-align: right; font-weight: 600;">@student.AwardAmount.ToString("C0")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
