@section Scripts {
    <script>
        const form = document.getElementById('bulkWarrantForm');
        const warrantDates = document.querySelectorAll('.warrant-date');

        // Set default date to today for all warrant date fields
        const today = new Date().toISOString().split('T')[0];
        warrantDates.forEach(input => {
            input.value = today;
        });

        function toggleSelectAll(checkbox) {
            const checkboxes = document.querySelectorAll('.submission-checkbox');
            checkboxes.forEach(cb => cb.checked = checkbox.checked);
        }

        // Form submission
        form.addEventListener('submit', function(e) {
            e.preventDefault();

            const selectedRows = document.querySelectorAll('.submission-checkbox:checked');
            if (selectedRows.length === 0) {
                alert('Please select at least one submission to record warrant numbers.');
                return;
            }

            // Validate that selected rows have warrant numbers
            let valid = true;
            selectedRows.forEach(checkbox => {
                const row = checkbox.closest('tr');
                const warrantNumber = row.querySelector('.warrant-number').value;
                if (!warrantNumber.trim()) {
                    valid = false;
                    row.querySelector('.warrant-number').classList.add('is-invalid');
                } else {
                    row.querySelector('.warrant-number').classList.remove('is-invalid');
                }
            });

            if (!valid) {
                alert('Please enter warrant numbers for all selected submissions.');
                return;
            }

            alert(`${selectedRows.length} warrant number(s) recorded successfully!\n\nThis is a POC demonstration. In production, this would:\n• Record warrant numbers in the system\n• Mark submissions as payment complete\n• Notify LEAs of payment completion\n• Update disbursement records`);

            window.location.href = '@Url.Action("Dashboard", "GrantsTeam")';
        });
    </script>

    <style>
        .warrant-table .form-control-sm {
            padding: 0.375rem 0.5rem;
            font-size: 0.875rem;
        }

        .warrant-table .warrant-number {
            width: 150px;
        }

        .warrant-table .warrant-date {
            width: 140px;
        }

        .warrant-table input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
        }

        .form-control.is-invalid {
            border-color: var(--danger);
            background-color: rgba(220, 53, 69, 0.05);
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            padding-top: 1rem;
            border-top: 1px solid var(--gray-200);
        }

        code {
            background: var(--gray-100);
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.875rem;
        }
    </style>
}
