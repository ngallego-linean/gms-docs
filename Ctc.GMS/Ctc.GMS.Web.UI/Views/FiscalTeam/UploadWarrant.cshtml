@{
    ViewData["Title"] = "Bulk Warrant Entry";
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "GrantsTeam")">Grants Team</a></li>
        <li class="breadcrumb-item active">Bulk Warrant Entry</li>
    </ol>
}

<div class="page-header">
    <h2><i class="mdi mdi-check-decagram"></i> Bulk Warrant Entry</h2>
    <p class="subtitle">Record warrant numbers for multiple submissions</p>
</div>

<div class="page-actions">
    <a href="@Url.Action("Dashboard", "GrantsTeam")" class="r4-button r4-button-secondary">
        <i class="mdi mdi-arrow-left"></i> Back to Dashboard
    </a>
</div>

<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-information-outline"></i> About Warrant Numbers</h4>
    </div>
    <div class="r4-card-body">
        <div class="r4-alert r4-alert-info" style="margin-bottom: 0;">
            <i class="mdi mdi-information"></i>
            <div>
                <strong>Warrant Numbers:</strong> Warrant numbers are generated in Fi$CAL. Each submission receives a unique warrant number.
                Warrants are not physical documents - only the warrant number and date need to be recorded.
            </div>
        </div>
    </div>
</div>

<!-- Submissions Awaiting Warrant -->
<div class="r4-card">
