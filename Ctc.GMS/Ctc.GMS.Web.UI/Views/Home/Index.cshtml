@* ~/Views/Home/Index.cshtml - Public-Facing Homepage *@

@{
    ViewData["Title"] = "Student Teacher Stipend Program";
}

@* Hero Section *@
<div class="hero-section">
    <div class="hero-content">
        <h1>Student Teacher Stipend Program</h1>
        <p class="hero-subtitle">Supporting California's Future Teachers</p>
        <p class="hero-description">
            The California Commission on Teacher Credentialing administers the Student Teacher Stipend Program,
            established in the 2025-26 Budget Trailer Bill (Assembly Bill 121), providing $300 million in funding to Local Educational Agencies (LEAs)
            to support credential candidates during their student teaching experience.
            For the 2026-27 academic year, $100 million of the $300 million will be available to LEAs to support student teachers.
        </p>
        <div class="hero-actions">
            <a href="@Url.Action("Dashboard", "LEAPortal")" class="r4-button r4-button-primary r4-button-lg">
                <i class="mdi mdi-domain"></i> Access LEA Portal
            </a>
            <a href="@Url.Action("Dashboard", "IHEPortal")" class="r4-button r4-button-primary r4-button-lg">
                <i class="mdi mdi-school"></i> Access IHE Portal
            </a>
            <a href="#program-info" class="r4-button r4-button-secondary r4-button-lg">
                <i class="mdi mdi-information-outline"></i> Learn More
            </a>
        </div>
    </div>
</div>

@* Grant Application Notice *@
<div class="content-section">
    <div class="r4-alert r4-alert-info">
        <i class="mdi mdi-information"></i>
        <strong>Important Note:</strong> Only Local Education Agencies (LEAs) may apply for grant funding.
        LEAs receive funds from the Commission and distribute stipends to eligible credential candidates placed within their schools.
    </div>
</div>

@* Program Overview *@
<div id="program-info" class="content-section">
    <div class="r4-card">
        <div class="r4-card-header">
            <h2><i class="mdi mdi-book-education-outline"></i> About the Program</h2>
        </div>
        <div class="r4-card-body">
            <p class="lead-text">
                The Student Teacher Stipend Program provides funding to Local Educational Agencies (LEAs) to distribute
                <strong>$10,000 stipends</strong> to credential candidates completing 500 or more hours of student teaching
                as part of their teacher preparation program.
            </p>
            <div class="info-grid">
                <div class="info-item">
                    <div class="info-icon">
                        <i class="mdi mdi-cash-multiple"></i>
                    </div>
                    <div class="info-content">
                        <h3>$300 Million</h3>
                        <p>Total program funding for 2025-26 fiscal year under Assembly Bill 121</p>
                    </div>
                </div>
                <div class="info-item">
                    <div class="info-icon">
                        <i class="mdi mdi-account-cash"></i>
                    </div>
                    <div class="info-content">
                        <h3>$10,000 Stipend</h3>
                        <p>Financial support distributed by LEAs to each eligible credential candidate</p>
                    </div>
                </div>
                <div class="info-item">
                    <div class="info-icon">
                        <i class="mdi mdi-clock-outline"></i>
                    </div>
                    <div class="info-content">
                        <h3>500+ Hours</h3>
                        <p>Minimum student teaching requirement for stipend eligibility</p>
                    </div>
                </div>
                <div class="info-item">
                    <div class="info-icon">
                        <i class="mdi mdi-account-group"></i>
                    </div>
                    <div class="info-content">
                        <h3>Partnership Model</h3>
                        <p>Collaborative effort between LEAs, IHEs, and credential candidates</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* Audience-Specific Cards *@
<div class="content-section">
    <h2 class="section-title">How the Program Works</h2>
    <div class="feature-cards-grid">
        <div class="feature-card">
            <div class="feature-card-icon">
                <i class="mdi mdi-school"></i>
            </div>
            <h3>Institution of Higher Education (IHE)</h3>
            <p>
                IHEs partner with LEAs to identify eligible candidates, coordinate clinical placements, and track
                student teaching hours for stipend eligibility.
            </p>
            <ul class="feature-list">
                <li>Submit candidate information via portal</li>
                <li>Verify student teaching hours</li>
                <li>Coordinate with LEA partners</li>
            </ul>
            <a asp-controller="IHEPortal" asp-action="Dashboard" class="feature-link">
                <i class="mdi mdi-arrow-right"></i> IHE Portal
            </a>
        </div>

        <div class="feature-card">
            <div class="feature-card-icon">
                <i class="mdi mdi-domain"></i>
            </div>
            <h3>Local Education Agency (LEA)</h3>
            <p>
                LEAs receive grant funding to provide stipends to credential candidates placed within their schools
                for student teaching experiences.
            </p>
            <ul class="feature-list">
                <li>Apply for grant funding</li>
                <li>Distribute stipends to candidates</li>
                <li>Submit compliance reports</li>
            </ul>
            <a asp-controller="LEAPortal" asp-action="Dashboard" class="feature-link">
                <i class="mdi mdi-arrow-right"></i> LEA Portal
            </a>
        </div>

        <div class="feature-card">
            <div class="feature-card-icon">
                <i class="mdi mdi-shield-check"></i>
            </div>
            <h3>Commission Staff</h3>
            <p>
                Commission Grants and Fiscal teams administer the program, review applications, process disbursements,
                and ensure compliance with AB 121 requirements.
            </p>
            <ul class="feature-list">
                <li>Review candidate applications</li>
                <li>Process grant agreements</li>
                <li>Monitor program compliance</li>
            </ul>
            <a asp-controller="GrantsTeam" asp-action="Dashboard" class="feature-link">
                <i class="mdi mdi-arrow-right"></i> Staff Portal
            </a>
        </div>
    </div>
</div>

