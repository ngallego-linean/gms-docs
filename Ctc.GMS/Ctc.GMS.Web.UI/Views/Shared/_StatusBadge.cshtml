@model string

@*
    Status Badge Partial View
    Usage: @await Html.PartialAsync("_StatusBadge", student.Status)

    This partial renders a Bootstrap badge with appropriate styling
    based on the student's workflow status using StatusHelper.
    Uses badge-status class for consistent fixed-width display.
*@

@if (!string.IsNullOrEmpty(Model))
{
    var badgeClass = GMS.Business.Helpers.StatusHelper.GetBadgeClass(Model);
    var displayText = GMS.Business.Helpers.StatusHelper.GetDisplayText(Model);

    <span class="@badgeClass badge-status">@displayText</span>
}
else
{
    <span class="badge badge-secondary badge-status">Unknown</span>
}
