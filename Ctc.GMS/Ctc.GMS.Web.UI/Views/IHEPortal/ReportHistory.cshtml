    var mockReports = new List<SubmittedReportViewModel>
    {
        new SubmittedReportViewModel { ConfirmationNumber = "RPT-2025-001234", StudentName = "Maria Garcia", LEAName = "Los Angeles Unified School District", SubmittedDate = DateTime.Now.AddDays(-5), SubmittedBy = "John Smith", Status = "APPROVED", CompletionStatus = "COMPLETED", CredentialEarned = true, EmployedInDistrict = true, ReportId = 1 },
        new SubmittedReportViewModel { ConfirmationNumber = "RPT-2025-001235", StudentName = "James Wilson", LEAName = "San Diego Unified School District", SubmittedDate = DateTime.Now.AddDays(-10), SubmittedBy = "Jane Doe", Status = "APPROVED", CompletionStatus = "COMPLETED", CredentialEarned = true, EmployedInDistrict = false, ReportId = 2 },
        new SubmittedReportViewModel { ConfirmationNumber = "RPT-2025-001236", StudentName = "Sarah Chen", LEAName = "Fresno Unified School District", SubmittedDate = DateTime.Now.AddDays(-12), SubmittedBy = "Michael Brown", Status = "SUBMITTED", CompletionStatus = "IN_PROGRESS", CredentialEarned = false, EmployedInDistrict = false, ReportId = 3 },
        new SubmittedReportViewModel { ConfirmationNumber = "RPT-2025-001237", StudentName = "David Kim", LEAName = "Oakland Unified School District", SubmittedDate = DateTime.Now.AddDays(-15), SubmittedBy = "Emily Johnson", Status = "APPROVED", CompletionStatus = "COMPLETED", CredentialEarned = true, EmployedInDistrict = true, ReportId = 4 },
        new SubmittedReportViewModel { ConfirmationNumber = "RPT-2025-001238", StudentName = "Jennifer Martinez", LEAName = "Sacramento City Unified School District", SubmittedDate = DateTime.Now.AddDays(-18), SubmittedBy = "Robert Davis", Status = "REJECTED", CompletionStatus = "IN_PROGRESS", CredentialEarned = false, EmployedInDistrict = false, ReportId = 5 },
        new SubmittedReportViewModel { ConfirmationNumber = "RPT-2025-001239", StudentName = "Michael Rodriguez", LEAName = "Los Angeles Unified School District", SubmittedDate = DateTime.Now.AddDays(-20), SubmittedBy = "John Smith", Status = "APPROVED", CompletionStatus = "COMPLETED", CredentialEarned = true, EmployedInDistrict = true, ReportId = 6 },
        new SubmittedReportViewModel { ConfirmationNumber = "RPT-2025-001240", StudentName = "Amanda Lee", LEAName = "San Francisco Unified School District", SubmittedDate = DateTime.Now.AddDays(-22), SubmittedBy = "Lisa White", Status = "APPROVED", CompletionStatus = "COMPLETED", CredentialEarned = true, EmployedInDistrict = false, ReportId = 7 },
        new SubmittedReportViewModel { ConfirmationNumber = "RPT-2025-001241", StudentName = "Christopher Brown", LEAName = "San Diego Unified School District", SubmittedDate = DateTime.Now.AddDays(-25), SubmittedBy = "Jane Doe", Status = "SUBMITTED", CompletionStatus = "IN_PROGRESS", CredentialEarned = false, EmployedInDistrict = false, ReportId = 8 }
    };

    // Use mock data if no real data exists
    var displayReports = Model.SubmittedReports.Any() ? Model.SubmittedReports : mockReports;
}

@if (displayReports.Any())
{
    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-file-check-outline"></i> Submitted Reports (@displayReports.Count())</h4>
            <div class="card-actions">
                <button type="button" class="r4-button" onclick="exportReports()">
                    <i class="mdi mdi-file-download-outline"></i> Export to Excel
                </button>
            </div>
        </div>
        <div class="r4-card-body">
            <div class="table-wrapper">
                <table class="r4-table">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>LEA Partner</th>
                            <th>Submitted Date</th>
                            <th>Submitted By</th>
                            <th>Status</th>
                            <th>Completion</th>
                            <th>Credential</th>
                            <th>Employed</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var report in displayReports)
                        {
                            <tr>
                                <td>@report.StudentName</td>
                                <td>@report.LEAName</td>
                                <td>@report.SubmittedDate?.ToString("MM/dd/yyyy")</td>
                                <td>@report.SubmittedBy</td>
                                <td>
                                    @if (report.Status == "APPROVED")
                                    {
                                        <span class="badge badge-success">Approved</span>
                                    }
                                    else if (report.Status == "SUBMITTED")
                                    {
                                        <span class="badge badge-primary">Under Review</span>
                                    }
                                    else if (report.Status == "REJECTED")
                                    {
                                        <span class="badge badge-danger">Revisions Requested</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">@report.Status</span>
                                    }
                                </td>
                                <td>
                                    @if (report.CompletionStatus == "COMPLETED")
                                    {
                                        <span class="badge badge-success">Completed</span>
                                    }
                                    else if (report.CompletionStatus == "IN_PROGRESS")
                                    {
                                        <span class="badge badge-warning">In Progress</span>
                                    }
                                    else if (report.CompletionStatus == "DENIED")
                                    {
                                        <span class="badge badge-danger">Denied</span>
                                    }
                                </td>
                                <td>
                                    @if (report.CredentialEarned)
                                    {
                                        <i class="mdi mdi-check-circle" style="color: var(--success);"></i>
                                    }
                                    else
                                    {
                                        <i class="mdi mdi-close-circle" style="color: var(--gray-500);"></i>
                                    }
                                </td>
                                <td>
                                    @if (report.EmployedInDistrict)
                                    {
                                        <i class="mdi mdi-check-circle" style="color: var(--success);"></i> <small>In District</small>
                                    }
                                    else
                                    {
                                        <i class="mdi mdi-close-circle" style="color: var(--gray-500);"></i>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("ViewReport", "IHEPortal", new { reportId = report.ReportId })" class="r4-button r4-button-sm">
                                        <i class="mdi mdi-eye-outline"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="mdi mdi-information-outline"></i>
        No submitted reports found matching your criteria. Adjust your filters or submit reports from the Funded Candidates page.
    </div>
}

@section Scripts {
    <script>
        function exportReports() {
            // Mock export functionality
            alert('Export functionality - In production, this would generate an Excel file with all filtered reports.');
            console.log('Exporting reports with filters:', @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Filters)));
        }
    </script>
}
