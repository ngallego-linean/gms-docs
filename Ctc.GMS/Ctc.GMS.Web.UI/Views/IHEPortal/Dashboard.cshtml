@model IHEDashboardViewModel

@{
    ViewData["Title"] = "IHE Portal Dashboard";
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item active">IHE Portal</li>
    </ol>
}

<div class="page-header">
    <h2><i class="mdi mdi-school-outline"></i> IHE Portal Dashboard</h2>
    <p class="subtitle">@Model.IHEName - @Model.GrantCycleName</p>
</div>

@* Action Items Section *@
@if (Model.ActionItems.Any())
{
    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-bell-outline"></i> Action Items</h4>
        </div>
        <div class="r4-card-body">
            @foreach (var item in Model.ActionItems)
            {
                <div class="action-item @(item.Type == "reports_required" ? "action-item-urgent" : "action-item-normal")">
                    <div class="action-item-content">
                        <div class="action-item-icon">
                            <i class="mdi @(item.Type == "submit_candidates" ? "mdi-account-multiple-plus-outline" : "mdi-clipboard-text-outline")"></i>
                        </div>
                        <div class="action-item-details">
                            <h5>@item.Title</h5>
                            <p>@item.Description</p>
                            @if (item.DueDate.HasValue)
                            {
                                <p class="action-item-due">Due: @item.DueDate.Value.ToString("MMM dd, yyyy")</p>
                            }
                        </div>
                    </div>
                    <div class="action-item-actions">
                        @if (item.Type == "submit_candidates")
                        {
                            <a href="@Url.Action("SubmitCandidates", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId })" class="r4-button r4-button-primary">
                                <i class="mdi mdi-arrow-right"></i> Submit Candidates
                            </a>
                        }
                        else if (item.Type == "reports_required")
                        {
                            <a href="@Url.Action("FundedCandidates", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId })" class="r4-button r4-button-primary">
                                <i class="mdi mdi-arrow-right"></i> Start Reports
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}

@* Candidate Status Section *@
<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-chart-bar"></i> Candidate Status</h4>
        <div class="card-actions">
            <a href="@Url.Action("BulkUploadCandidates", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId })" class="r4-button">
                <i class="mdi mdi-file-upload-outline"></i> Bulk Upload
            </a>
            <a href="@Url.Action("SubmitCandidates", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId })" class="r4-button r4-button-primary">
                <i class="mdi mdi-account-multiple-plus-outline"></i> Submit Candidates
            </a>
        </div>
    </div>
    <div class="r4-card-body">
        <div class="dashboard-grid">
            <div class="metric-card">
                <div class="metric-icon">
                    <i class="mdi mdi-account-group-outline"></i>
                </div>
                <div class="metric-content">
                    <div class="metric-value">@Model.TotalCandidates</div>
                    <div class="metric-label">Total Candidates</div>
                    <div class="metric-description">Candidates submitted</div>
                </div>
            </div>

            <div class="metric-card metric-pending">
                <div class="metric-icon">
                    <i class="mdi mdi-clock-outline"></i>
                </div>
                <div class="metric-content">
                    <div class="metric-value">@Model.UnderReviewCount</div>
                    <div class="metric-label">Under Review</div>
                    <div class="metric-description">Awaiting CTC approval</div>
                </div>
            </div>

            <div class="metric-card metric-approved">
                <div class="metric-icon">
                    <i class="mdi mdi-check-circle-outline"></i>
                </div>
                <div class="metric-content">
                    <div class="metric-value">@Model.ApprovedCount</div>
                    <div class="metric-label">Approved</div>
                    <div class="metric-description">Eligible for payment</div>
                </div>
            </div>
        </div>
    </div>
</div>

@* Post-Payment Reporting Section *@
@if (Model.HasActiveReportingPeriod || Model.ReportsSubmitted > 0)
{
    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-clipboard-text-outline"></i> Post-Payment Reporting</h4>
            <div class="card-actions">
                <a href="@Url.Action("FundedCandidates", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId })" class="r4-button r4-button-primary">
                    <i class="mdi mdi-file-document-outline"></i> View Funded Candidates
                </a>
            </div>
        </div>
        <div class="r4-card-body">
            @if (Model.ReportingAlerts.Any())
            {
                foreach (var alert in Model.ReportingAlerts)
                {
                    <div class="alert alert-@(alert.AlertType.ToLower())">
                        <i class="mdi @(alert.AlertType == "DANGER" ? "mdi-alert-circle-outline" : alert.AlertType == "WARNING" ? "mdi-alert-outline" : "mdi-information-outline")"></i>
                        <strong>@alert.Message</strong>
                        @if (!string.IsNullOrEmpty(alert.ActionUrl))
                        {
                            <a href="@alert.ActionUrl" class="alert-link">@alert.ActionText</a>
                        }
                    </div>
                }
            }

            <div class="dashboard-grid">
                <div class="metric-card">
                    <div class="metric-icon">
                        <i class="mdi mdi-account-cash-outline"></i>
                    </div>
                    <div class="metric-content">
                        <div class="metric-value">@Model.FundedCandidatesCount</div>
                        <div class="metric-label">Funded Candidates</div>
                        <div class="metric-description">Candidates who received payment</div>
                    </div>
                </div>

                <div class="metric-card metric-outstanding">
                    <div class="metric-icon">
                        <i class="mdi mdi-file-alert-outline"></i>
                    </div>
                    <div class="metric-content">
                        <div class="metric-value">@Model.ReportsDue</div>
                        <div class="metric-label">Reports Due</div>
                        <div class="metric-description">
                            @if (Model.NextReportDeadline.HasValue && Model.HasActiveReportingPeriod)
                            {
                                <span>Due @Model.NextReportDeadline.Value.ToString("MMM dd, yyyy")</span>
                                @if (Model.DaysUntilDeadline.HasValue && Model.DaysUntilDeadline.Value <= 7)
                                {
                                    <span class="badge badge-danger ms-1">@Model.DaysUntilDeadline days left</span>
                                }
                            }
                            else
                            {
                                <span>Not started or in progress</span>
                            }
                        </div>
                    </div>
                </div>

                <div class="metric-card metric-pending">
                    <div class="metric-icon">
                        <i class="mdi mdi-file-edit-outline"></i>
                    </div>
                    <div class="metric-content">
                        <div class="metric-value">@Model.ReportsInProgress</div>
                        <div class="metric-label">In Progress</div>
                        <div class="metric-description">Draft reports not yet submitted</div>
                    </div>
                </div>

                <div class="metric-card metric-success">
                    <div class="metric-icon">
                        <i class="mdi mdi-file-check-outline"></i>
                    </div>
                    <div class="metric-content">
                        <div class="metric-value">@Model.ReportsSubmitted</div>
                        <div class="metric-label">Submitted</div>
                        <div class="metric-description">Reports submitted to CTC</div>
                    </div>
                </div>
            </div>

            @if (Model.HasActiveReportingPeriod)
            {
                <div class="mt-3">
                    <a href="@Url.Action("FundedCandidates", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId })" class="r4-button r4-button-primary">
                        <i class="mdi mdi-file-document-edit-outline"></i> Complete Reports
                    </a>
                    <a href="@Url.Action("BulkUpload", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId })" class="r4-button">
                        <i class="mdi mdi-file-upload-outline"></i> Upload Bulk Reports
                    </a>
                    <a href="@Url.Action("ReportHistory", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId })" class="r4-button">
                        <i class="mdi mdi-history"></i> View History
                    </a>
                </div>
            }
        </div>
    </div>
}

@if (Model.Submissions.Any())
{
    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-folder-open-outline"></i> Your Submissions</h4>
            <div class="card-actions">
                <a href="@Url.Action("Applications", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId })" class="r4-button">
                    View All
                </a>
            </div>
        </div>
        <div class="r4-card-body">
            <div class="table-wrapper">
                <table class="r4-table applications-table">
                <thead>
                    <tr>
                        <th>LEA Partner</th>
                        <th>Total Candidates</th>
                        <th>Draft</th>
                        <th>Submitted</th>
                        <th>Approved</th>
                        <th>Last Modified</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var app in Model.Submissions)
                    {
                        <tr>
                            <td>@app.LEAName</td>
                            <td>@app.TotalStudents</td>
                            <td>
                                @if (app.TotalStudents - app.PendingCount - app.ApprovedCount > 0)
                                {
                                    <span class="badge badge-secondary">@(app.TotalStudents - app.PendingCount - app.ApprovedCount)</span>
                                }
                                else
                                {
                                    <span class="text-muted">0</span>
                                }
                            </td>
                            <td>
                                @if (app.PendingCount > 0)
                                {
                                    <span class="badge badge-warning">@app.PendingCount</span>
                                }
                                else
                                {
                                    <span class="text-muted">0</span>
                                }
                            </td>
                            <td>
                                @if (app.ApprovedCount > 0)
                                {
                                    <span class="badge badge-success">@app.ApprovedCount</span>
                                }
                                else
                                {
                                    <span class="text-muted">0</span>
                                }
                            </td>
                            <td>@app.LastModified.ToString("MM/dd/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="mdi mdi-information-outline"></i>
        You do not have any candidate submissions for this grant cycle yet. Click "Submit Candidates" to get started.
    </div>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('IHE Portal loaded for: @Model.IHEName');
        });
    </script>

    <style>

        /* Action Items Styling */
        .action-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.5rem;
            background: white;
            border: 2px solid #dee2e6;
            border-radius: 8px;
            margin-bottom: 1rem;
            transition: all 0.2s;
        }

        .action-item:last-child {
            margin-bottom: 0;
        }

        .action-item-urgent {
            border-color: #dc3545;
            background: #fff5f5;
        }

        .action-item-normal {
            border-color: #ffc107;
            background: #fffbf0;
        }

        .action-item:hover {
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transform: translateY(-2px);
        }

        .action-item-content {
            display: flex;
            align-items: center;
            gap: 1rem;
            flex: 1;
        }

        .action-item-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 48px;
            height: 48px;
            background: #1E3A5F;
            color: white;
            border-radius: 50%;
            font-size: 1.5rem;
        }

        .action-item-details h5 {
            margin: 0 0 0.5rem 0;
            color: #1E3A5F;
            font-size: 1.1rem;
        }

        .action-item-details p {
            margin: 0;
            color: #6c757d;
            font-size: 0.9rem;
        }

        .action-item-due {
            margin-top: 0.25rem !important;
            color: #dc3545;
            font-weight: 600;
        }

        .action-item-actions {
            margin-left: 1rem;
        }

        @@media (max-width: 768px) {
            .action-item {
                flex-direction: column;
                align-items: flex-start;
            }

            .action-item-actions {
                margin-left: 0;
                margin-top: 1rem;
                width: 100%;
            }

            .action-item-actions .r4-button {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
}
