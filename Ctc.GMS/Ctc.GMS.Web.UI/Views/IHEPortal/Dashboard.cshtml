@* Reporting Section *@
@if (Model.HasActiveReportingPeriod || Model.ReportsSubmitted > 0)
{
    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-clipboard-text-outline"></i> Post-Payment Reporting</h4>
            <div class="card-actions">
                <a href="@Url.Action("FundedCandidates", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId })" class="r4-button r4-button-primary">
                    <i class="mdi mdi-file-document-outline"></i> View Funded Candidates
                </a>
            </div>
        </div>
        <div class="r4-card-body">
            @if (Model.ReportingAlerts.Any())
            {
                foreach (var alert in Model.ReportingAlerts)
                {
                    <div class="alert alert-@(alert.AlertType.ToLower())">
                        <i class="mdi @(alert.AlertType == "DANGER" ? "mdi-alert-circle-outline" : alert.AlertType == "WARNING" ? "mdi-alert-outline" : "mdi-information-outline")"></i>
                        <strong>@alert.Message</strong>
                        @if (!string.IsNullOrEmpty(alert.ActionUrl))
                        {
                            <a href="@alert.ActionUrl" class="alert-link">@alert.ActionText</a>
                        }
                    </div>
                }
            }

            <div class="dashboard-grid">
                <div class="metric-card">
                    <div class="metric-icon">
                        <i class="mdi mdi-account-cash-outline"></i>
                    </div>
                    <div class="metric-content">
                        <div class="metric-value">@Model.FundedCandidatesCount</div>
                        <div class="metric-label">Funded Candidates</div>
                        <div class="metric-description">Candidates who received payment</div>
                    </div>
                </div>

                @if (Model.HasActiveReportingPeriod)
                {
                    <div class="metric-card metric-outstanding">
                        <div class="metric-icon">
                            <i class="mdi mdi-file-alert-outline"></i>
                        </div>
                        <div class="metric-content">
                            <div class="metric-value">@Model.ReportsOutstanding</div>
                            <div class="metric-label">Reports Due</div>
                            <div class="metric-description">
                                @if (Model.NextReportDeadline.HasValue)
                                {
                                    <span>Due @Model.NextReportDeadline.Value.ToString("MMM dd, yyyy")</span>
                                    @if (Model.DaysUntilDeadline.HasValue && Model.DaysUntilDeadline.Value <= 7)
                                    {
                                        <span class="badge badge-danger ms-1">@Model.DaysUntilDeadline days left</span>
                                    }
                                }
                                else
                                {
                                    <span>@Model.NextReportPeriodName</span>
                                }
                            </div>
                        </div>
                    </div>
                }

                <div class="metric-card metric-pending">
                    <div class="metric-icon">
                        <i class="mdi mdi-file-edit-outline"></i>
                    </div>
                    <div class="metric-content">
                        <div class="metric-value">@Model.ReportsDue</div>
                        <div class="metric-label">In Progress</div>
                        <div class="metric-description">Draft reports not yet submitted</div>
                    </div>
                </div>

                <div class="metric-card metric-success">
                    <div class="metric-icon">
                        <i class="mdi mdi-file-check-outline"></i>
                    </div>
                    <div class="metric-content">
                        <div class="metric-value">@Model.ReportsSubmitted</div>
                        <div class="metric-label">Submitted</div>
                        <div class="metric-description">Reports submitted to CTC</div>
                    </div>
                </div>

                <div class="metric-card metric-approved">
                    <div class="metric-icon">
                        <i class="mdi mdi-check-decagram-outline"></i>
                    </div>
                    <div class="metric-content">
                        <div class="metric-value">@Model.ReportsApproved</div>
                        <div class="metric-label">Approved</div>
                        <div class="metric-description">Reports approved by CTC</div>
                    </div>
                </div>
            </div>

            @if (Model.HasActiveReportingPeriod)
            {
                <div class="mt-3">
                    <a href="@Url.Action("FundedCandidates", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId })" class="r4-button r4-button-primary">
                        <i class="mdi mdi-file-document-edit-outline"></i> Complete Reports
                    </a>
                    <a href="@Url.Action("BulkUpload", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId })" class="r4-button">
                        <i class="mdi mdi-file-upload-outline"></i> Upload Bulk Reports
                    </a>
                    <a href="@Url.Action("ReportHistory", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId })" class="r4-button">
                        <i class="mdi mdi-history"></i> View History
                    </a>
                </div>
            }
        </div>
    </div>
}

@if (Model.Applications.Any())
{
    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-folder-open-outline"></i> Your Applications</h4>
            <div class="card-actions">
                <a href="@Url.Action("Applications", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId })" class="r4-button">
                    View All
                </a>
            </div>
        </div>
        <div class="r4-card-body">
            <div class="alert alert-info">
                <i class="mdi mdi-information-outline"></i>
                <strong>Tip:</strong> Click on any application row to view the students in that application.
            </div>
            <div class="table-wrapper">
                <table class="r4-table applications-table">
                <thead>
                    <tr>
                        <th style="width: 40px;"></th>
                        <th>LEA Partner</th>
                        <th>Total Students</th>
                        <th>Draft</th>
                        <th>Submitted</th>
                        <th>Approved</th>
                        <th>Last Modified</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var app in Model.Applications)
                    {
                        <tr class="application-row" data-application-id="@app.Id" style="cursor: pointer;">
                            <td><i class="mdi mdi-chevron-right expand-icon"></i></td>
                            <td>@app.LEAName</td>
                            <td>@app.TotalStudents</td>
                            <td>
                                @if (app.TotalStudents - app.PendingCount - app.ApprovedCount > 0)
                                {
                                    <span class="badge badge-secondary">@(app.TotalStudents - app.PendingCount - app.ApprovedCount)</span>
                                }
                                else
                                {
                                    <span class="text-muted">0</span>
                                }
                            </td>
                            <td>
                                @if (app.PendingCount > 0)
                                {
                                    <span class="badge badge-warning">@app.PendingCount</span>
                                }
                                else
                                {
                                    <span class="text-muted">0</span>
                                }
                            </td>
                            <td>
                                @if (app.ApprovedCount > 0)
                                {
                                    <span class="badge badge-success">@app.ApprovedCount</span>
                                }
                                else
                                {
                                    <span class="text-muted">0</span>
                                }
                            </td>
                            <td>@app.LastModified.ToString("MM/dd/yyyy")</td>
                        </tr>
                        <tr class="students-row" data-application-id="@app.Id" style="display: none;">
                            <td colspan="7">
                                <div class="students-container">
                                    <h6><i class="mdi mdi-account-group-outline"></i> Students in this Application</h6>
                                    <div class="students-list">
                                        <em>Loading students...</em>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="mdi mdi-information-outline"></i>
        You do not have any applications for this grant cycle yet. Click "Submit Candidates" to get started.
    </div>
}

@section Scripts {
    <script>
        // Mock student data for applications (in production, this would come from an API call)
        const applicationStudents = @Html.Raw(Json.Serialize(Model.Applications.Select(app => new {
            ApplicationId = app.Id,
            Students = Enumerable.Empty<object>() // Placeholder, will be fetched via AJAX in real implementation
        })));

        document.addEventListener('DOMContentLoaded', function() {
            console.log('IHE Portal loaded for: @Model.IHEName');

            // Handle application row clicks to expand/collapse student list
            document.querySelectorAll('.application-row').forEach(row => {
                row.addEventListener('click', function() {
                    const appId = this.getAttribute('data-application-id');
                    const studentsRow = document.querySelector(`.students-row[data-application-id="${appId}"]`);
                    const expandIcon = this.querySelector('.expand-icon');

                    if (studentsRow.style.display === 'none') {
                        // Expand
                        studentsRow.style.display = 'table-row';
                        expandIcon.classList.remove('mdi-chevron-right');
                        expandIcon.classList.add('mdi-chevron-down');

                        // Load students (mock AJAX call)
                        loadStudentsForApplication(appId, studentsRow);
                    } else {
                        // Collapse
                        studentsRow.style.display = 'none';
                        expandIcon.classList.remove('mdi-chevron-down');
                        expandIcon.classList.add('mdi-chevron-right');
                    }
                });
            });
        });

        function loadStudentsForApplication(appId, studentsRow) {
            const container = studentsRow.querySelector('.students-list');

            // Mock AJAX call - in production this would be: fetch(`/api/applications/${appId}/students`)
            // For now, we'll use a mock implementation
            container.innerHTML = '<em>Loading students...</em>';

            // Simulate API delay
            setTimeout(() => {
                // In production, this would fetch real student data
                // For now, show a message with a link to view application details
                container.innerHTML = `
                    <div class="mock-students-message">
                        <p><i class="mdi mdi-information-outline"></i> Student list for Application #${appId}</p>
                        <p>In production, this would show a clickable list of all students in this application.</p>
                        <p>For demonstration, here's how it would work:</p>
