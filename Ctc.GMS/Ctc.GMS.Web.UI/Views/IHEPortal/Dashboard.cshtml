            transition: transform 0.2s;
        }

        .application-row:hover {
            background-color: #f8f9fa;
        }

        .students-container {
            padding: 1rem;
            background-color: #f8f9fa;
            border-radius: 4px;
            margin: 0.5rem 0;
        }

        .students-container h6 {
            margin-bottom: 1rem;
            color: #1E3A5F;
        }

