@model IHEDashboardViewModel

@{
    ViewData["Title"] = "IHE Portal Dashboard";
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item active">IHE Portal</li>
    </ol>
}

<div class="page-header">
    <h2><i class="mdi mdi-school-outline"></i> IHE Portal Dashboard</h2>
    <p class="subtitle">@Model.IHEName - @Model.GrantCycleName</p>
</div>

@if (Model.ActionItems.Any())
{
    @foreach (var item in Model.ActionItems)
    {
        <div class="alert alert-warning">
            <i class="mdi mdi-alert-outline"></i>
            <strong>Action Required:</strong> @item.Description
            <a href="@Url.Action("SubmitCandidates", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId })" class="alert-link">Submit Now</a>
        </div>
    }
}

<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-chart-bar"></i> Application Status Overview</h4>
        <div class="card-actions">
            <a href="@Url.Action("SubmitCandidates", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId })" class="r4-button r4-button-primary">
                <i class="mdi mdi-account-multiple-plus-outline"></i> Submit Candidates
            </a>
        </div>
    </div>
    <div class="r4-card-body">
        <div class="dashboard-grid">
            <div class="metric-card">
                <div class="metric-icon">
                    <i class="mdi mdi-folder-outline"></i>
                </div>
                <div class="metric-content">
                    <div class="metric-value">@Model.TotalApplications</div>
                    <div class="metric-label">Total Applications</div>
                    <div class="metric-description">Partnership applications this cycle</div>
                </div>
            </div>

            <div class="metric-card">
                <div class="metric-icon">
                    <i class="mdi mdi-account-group-outline"></i>
                </div>
                <div class="metric-content">
                    <div class="metric-value">@Model.TotalStudents</div>
                    <div class="metric-label">Total Candidates</div>
                    <div class="metric-description">Students submitted</div>
                </div>
            </div>

            <div class="metric-card metric-draft">
                <div class="metric-icon">
                    <i class="mdi mdi-file-document-edit-outline"></i>
                </div>
                <div class="metric-content">
                    <div class="metric-value">@Model.DraftCount</div>
                    <div class="metric-label">Draft</div>
                    <div class="metric-description">Not yet submitted to LEA</div>
                </div>
            </div>

            <div class="metric-card metric-pending">
                <div class="metric-icon">
                    <i class="mdi mdi-clock-outline"></i>
                </div>
                <div class="metric-content">
                    <div class="metric-value">@Model.SubmittedCount</div>
                    <div class="metric-label">Under Review</div>
                    <div class="metric-description">Awaiting CTC approval</div>
                </div>
            </div>

            <div class="metric-card metric-approved">
                <div class="metric-icon">
                    <i class="mdi mdi-check-circle-outline"></i>
                </div>
                <div class="metric-content">
                    <div class="metric-value">@Model.ApprovedCount</div>
                    <div class="metric-label">Approved</div>
                    <div class="metric-description">Eligible for payment</div>
                </div>
            </div>
        </div>
    </div>
</div>

