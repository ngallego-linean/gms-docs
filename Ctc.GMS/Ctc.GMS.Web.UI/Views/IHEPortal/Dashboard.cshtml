@model IHEDashboardViewModel

@{
    ViewData["Title"] = "IHE Portal Dashboard";
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item active">IHE Portal</li>
    </ol>
}

<div class="page-header">
    <h2><i class="mdi mdi-school-outline"></i> IHE Portal Dashboard</h2>
    <p class="subtitle">@Model.IHEName - @Model.GrantCycleName</p>
</div>

@* Action Items Section *@
@if (Model.ActionItems.Any())
{
    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-bell-outline"></i> Action Items</h4>
        </div>
        <div class="r4-card-body">
            @foreach (var item in Model.ActionItems)
            {
                <div class="action-item @(item.Type == "reports_required" ? "action-item-urgent" : "action-item-normal")">
                    <div class="action-item-content">
                        <div class="action-item-icon">
                            <i class="mdi @(item.Type == "submit_candidates" ? "mdi-account-multiple-plus-outline" : "mdi-clipboard-text-outline")"></i>
                        </div>
                        <div class="action-item-details">
                            <h5>@item.Title</h5>
                            <p>@item.Description</p>
                            @if (item.DueDate.HasValue)
                            {
                                <p class="action-item-due">Due: @item.DueDate.Value.ToString("MMM dd, yyyy")</p>
                            }
                        </div>
                    </div>
                    <div class="action-item-actions">
                        @if (item.Type == "submit_candidates")
                        {
                            <a href="@Url.Action("SubmitCandidates", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId })" class="r4-button r4-button-primary">
                                <i class="mdi mdi-arrow-right"></i> Submit Candidates
                            </a>
                        }
                        else if (item.Type == "reports_required")
                        {
                            <a href="@Url.Action("FundedCandidates", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId })" class="r4-button r4-button-primary">
                                <i class="mdi mdi-arrow-right"></i> Start Reports
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}

@* Candidate Status Section *@
<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-chart-bar"></i> Candidate Status</h4>
        <div class="card-actions">
            <a href="@Url.Action("SubmitCandidates", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId })" class="r4-button r4-button-primary">
                <i class="mdi mdi-account-multiple-plus-outline"></i> Submit Candidates
            </a>
        </div>
    </div>
    <div class="r4-card-body">
        @{
            // MOCK DATA: Candidate status counts for the fiscal year (July 1 - June 30)
            // Fiscal Year 25-26: July 1, 2025 - June 30, 2026
            var fiscalYearLabel = "FY 25-26";
            var statusCounts = new {
                Total = 47,
                Submitted = 8,
                Pending = 6,
                UnderReview = 5,
                Waitlist = 2,
                Approved = 12,
                PaymentInProcess = 4,
                Paid = 10
            };
        }

        <div class="dashboard-grid">
            @* Total Candidates *@
            <a href="@Url.Action("Applications", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId })" class="metric-card-link">
                <div class="metric-card">
                    <div class="metric-icon">
                        <i class="mdi mdi-account-group-outline"></i>
                    </div>
                    <div class="metric-content">
                        <div class="metric-value">@statusCounts.Total</div>
                        <div class="metric-label">Total Candidates</div>
                        <div class="metric-description">@fiscalYearLabel (Jul 1 - Jun 30)</div>
                    </div>
                </div>
            </a>

            @* Pending *@
            <a href="@Url.Action("Applications", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId, status = "PENDING" })" class="metric-card-link">
                <div class="metric-card metric-pending">
                    <div class="metric-icon">
                        <i class="mdi mdi-clock-outline"></i>
                    </div>
                    <div class="metric-content">
                        <div class="metric-value">@statusCounts.Pending</div>
                        <div class="metric-label">Pending</div>
                        <div class="metric-description">LEA reviewing</div>
                    </div>
                </div>
            </a>

            @* Under Review *@
            <a href="@Url.Action("Applications", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId, status = "UNDER_REVIEW" })" class="metric-card-link">
                <div class="metric-card metric-pending">
                    <div class="metric-icon">
                        <i class="mdi mdi-file-search-outline"></i>
                    </div>
                    <div class="metric-content">
                        <div class="metric-value">@statusCounts.UnderReview</div>
                        <div class="metric-label">Under Review</div>
                        <div class="metric-description">CTC reviewing</div>
                    </div>
                </div>
            </a>

            @* Waitlist *@
            @if (statusCounts.Waitlist > 0)
            {
                <a href="@Url.Action("Applications", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId, status = "WAITLIST" })" class="metric-card-link">
                    <div class="metric-card metric-waitlist">
                        <div class="metric-icon">
                            <i class="mdi mdi-account-clock-outline"></i>
                        </div>
                        <div class="metric-content">
                            <div class="metric-value">@statusCounts.Waitlist</div>
                            <div class="metric-label">Waitlist</div>
                            <div class="metric-description">Approved, awaiting funding</div>
                        </div>
                    </div>
                </a>
            }

            @* Approved *@
            <a href="@Url.Action("Applications", "IHEPortal", new { iheId = Model.IHEId, grantCycleId = Model.GrantCycleId, status = "APPROVED" })" class="metric-card-link">
                <div class="metric-card metric-approved">
                    <div class="metric-icon">
                        <i class="mdi mdi-check-circle-outline"></i>
                    </div>
                    <div class="metric-content">
                        <div class="metric-value">@statusCounts.Approved</div>
                        <div class="metric-label">Approved</div>
                        <div class="metric-description">Eligible for payment</div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

@* Your Submissions Section *@
