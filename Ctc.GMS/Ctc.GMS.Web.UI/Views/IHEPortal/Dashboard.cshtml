            <div class="mt-4">
                <h5><i class="mdi mdi-book-education"></i> Credential Areas Distribution</h5>
                <div class="row">
                    @foreach (var area in Model.CredentialAreas)
                    {
                        <div class="col-md-3 mb-2">
                            <div class="credential-stat">
                                <span class="credential-name">@area.Key</span>
                                <span class="badge badge-primary">@area.Value</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        @if (Model.Demographics.Any())
        {
            <div class="mt-4">
                <h5><i class="mdi mdi-account-group"></i> Demographics</h5>
                <div class="row">
                    @foreach (var demo in Model.Demographics)
                    {
                        <div class="col-md-3 mb-2">
                            <div class="credential-stat">
                                <span class="credential-name">@demo.Key</span>
