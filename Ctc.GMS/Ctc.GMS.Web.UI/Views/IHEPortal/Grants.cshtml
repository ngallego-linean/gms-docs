<!-- Summary Cards -->
<div class="summary-cards">
    <div class="summary-card">
        <div class="summary-icon" style="background-color: var(--ctc-blue);">
            <i class="mdi mdi-domain"></i>
        </div>
        <div class="summary-content">
            <div class="summary-value">@totalLEAPartners</div>
            <div class="summary-label">LEA Partners</div>
        </div>
    </div>
    <div class="summary-card">
        <div class="summary-icon" style="background-color: var(--gray-600);">
            <i class="mdi mdi-account-multiple"></i>
        </div>
        <div class="summary-content">
            <div class="summary-value">@totalCandidates</div>
            <div class="summary-label">Total Candidates</div>
            <div class="summary-detail">@totalFunded funded</div>
        </div>
    </div>
    <div class="summary-card">
        <div class="summary-icon" style="background-color: @(totalReportsDue > 0 ? "var(--ctc-gold)" : "var(--gray-400)");">
            <i class="mdi mdi-file-document-outline"></i>
        </div>
        <div class="summary-content">
            <div class="summary-value">@totalReportsDue</div>
            <div class="summary-label">Reports Due</div>
            <div class="summary-detail">@totalReportsComplete complete</div>
        </div>
    </div>
    <div class="summary-card">
        <div class="summary-icon" style="background-color: var(--ctc-blue);">
            <i class="mdi mdi-certificate"></i>
        </div>
        <div class="summary-content">
            <div class="summary-value">@credentialRate%</div>
            <div class="summary-label">Report Rate</div>
        </div>
    </div>
</div>

