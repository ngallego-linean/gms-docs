@model ApplicationListViewModel

@{
    ViewData["Title"] = "Your Submissions";
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "IHEPortal", new { iheId = ViewContext.RouteData.Values["iheId"], grantCycleId = Model.GrantCycleId })">IHE Portal</a></li>
        <li class="breadcrumb-item active">Your Submissions</li>
    </ol>
}

<div class="page-header">
    <h2><i class="mdi mdi-account-multiple-outline"></i> Your Submissions</h2>
    <p class="subtitle">@Model.GrantCycleName</p>
</div>

<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-account-multiple-outline"></i> All Candidates</h4>
    </div>
    <div class="r4-card-body">
        @{
            // MOCK DATA: Full student queue submitted by IHE
            // Using CTC Status System: SUBMITTED, PENDING, UNDER_REVIEW, WAITLIST, APPROVED, PAYMENT_IN_PROCESS, PAID
            var allStudents = new List<dynamic>
            {
                new { StudentName = "John Martinez", LEAPartner = "Los Angeles Unified School District", DOB = "05/12/1998", CredentialArea = "Multiple Subject", CountyCDS = "19", LEACDS = "64733", SchoolCDS = "1933021", Status = "APPROVED", LastModified = DateTime.Now.AddDays(-2) },
                new { StudentName = "Emily Rodriguez", LEAPartner = "San Diego Unified School District", DOB = "08/24/1997", CredentialArea = "Single Subject - Mathematics", CountyCDS = "37", LEACDS = "68338", SchoolCDS = "3768338", Status = "SUBMITTED", LastModified = DateTime.Now.AddDays(-4) },
                new { StudentName = "Michael Chen", LEAPartner = "Fresno Unified School District", DOB = "11/03/1999", CredentialArea = "Education Specialist", CountyCDS = "10", LEACDS = "62331", SchoolCDS = "1062331", Status = "PENDING", LastModified = DateTime.Now.AddDays(-6) },
                new { StudentName = "Sarah Thompson", LEAPartner = "Los Angeles Unified School District", DOB = "02/18/1996", CredentialArea = "Multiple Subject", CountyCDS = "19", LEACDS = "64733", SchoolCDS = "1933045", Status = "PAID", LastModified = DateTime.Now.AddDays(-8) },
                new { StudentName = "David Kim", LEAPartner = "San Francisco Unified School District", DOB = "07/22/1998", CredentialArea = "Single Subject - English", CountyCDS = "38", LEACDS = "68478", SchoolCDS = "3868478", Status = "UNDER_REVIEW", LastModified = DateTime.Now.AddDays(-10) },
                new { StudentName = "Jessica Nguyen", LEAPartner = "Oakland Unified School District", DOB = "09/14/1997", CredentialArea = "Education Specialist", CountyCDS = "01", LEACDS = "61259", SchoolCDS = "0161259", Status = "PAYMENT_IN_PROCESS", LastModified = DateTime.Now.AddDays(-11) },
                new { StudentName = "Robert Johnson", LEAPartner = "San Diego Unified School District", DOB = "12/05/1999", CredentialArea = "Multiple Subject", CountyCDS = "37", LEACDS = "68338", SchoolCDS = "3768392", Status = "APPROVED", LastModified = DateTime.Now.AddDays(-13) },
                new { StudentName = "Amanda Lee", LEAPartner = "Fresno Unified School District", DOB = "03/28/1998", CredentialArea = "Single Subject - Science", CountyCDS = "10", LEACDS = "62331", SchoolCDS = "1062398", Status = "SUBMITTED", LastModified = DateTime.Now.AddDays(-15) },
                new { StudentName = "Christopher Brown", LEAPartner = "Los Angeles Unified School District", DOB = "06/09/1997", CredentialArea = "Single Subject - History", CountyCDS = "19", LEACDS = "64733", SchoolCDS = "1933067", Status = "WAITLIST", LastModified = DateTime.Now.AddDays(-17) },
                new { StudentName = "Maria Garcia", LEAPartner = "Sacramento City Unified School District", DOB = "10/11/1999", CredentialArea = "Multiple Subject", CountyCDS = "34", LEACDS = "67439", SchoolCDS = "3467439", Status = "PENDING", LastModified = DateTime.Now.AddDays(-19) },
                new { StudentName = "Daniel White", LEAPartner = "San Francisco Unified School District", DOB = "04/17/1996", CredentialArea = "Education Specialist", CountyCDS = "38", LEACDS = "68478", SchoolCDS = "3868512", Status = "PAID", LastModified = DateTime.Now.AddDays(-21) },
                new { StudentName = "Jennifer Lopez", LEAPartner = "Oakland Unified School District", DOB = "08/30/1998", CredentialArea = "Single Subject - Mathematics", CountyCDS = "01", LEACDS = "61259", SchoolCDS = "0161287", Status = "UNDER_REVIEW", LastModified = DateTime.Now.AddDays(-23) }
            };
        }

        @if (allStudents.Any())
        {
            <div style="display: flex; gap: var(--spacing-md); margin-bottom: var(--spacing-xl); align-items: flex-end; flex-wrap: wrap;">
                <div style="flex: 1; min-width: 250px;">
                    <label for="searchStudents" style="display: block; font-weight: 600; margin-bottom: var(--spacing-sm);">
                        <i class="mdi mdi-magnify"></i> Search by Student Name
                    </label>
                    <input type="text" id="searchStudents" class="form-control" placeholder="Enter student name..." />
                </div>
                <div style="min-width: 250px;">
                    <label for="filterLEA" style="display: block; font-weight: 600; margin-bottom: var(--spacing-sm);">
                        <i class="mdi mdi-filter-outline"></i> Filter by LEA Partner
                    </label>
                    <select id="filterLEA" class="form-control">
                        <option value="">All LEA Partners</option>
                        <option value="lausd">Los Angeles Unified School District</option>
                        <option value="sdusd">San Diego Unified School District</option>
                        <option value="fusd">Fresno Unified School District</option>
                        <option value="sfusd">San Francisco Unified School District</option>
                        <option value="ousd">Oakland Unified School District</option>
                        <option value="scusd">Sacramento City Unified School District</option>
                    </select>
                </div>
            </div>

            <div class="table-wrapper">
                <table class="r4-table" id="studentsTable">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>LEA Partner</th>
                            <th>DOB</th>
                            <th>Credential Area</th>
                            <th>County CDS</th>
                            <th>LEA CDS</th>
                            <th>School CDS</th>
                            <th>Status</th>
                            <th>Last Modified</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in allStudents)
                        {
                            <tr data-student-name="@student.StudentName.ToLower()" data-lea="@student.LEAPartner">
                                <td>
                                    <strong>@student.StudentName</strong>
                                </td>
                                <td>@student.LEAPartner</td>
                                <td>@student.DOB</td>
                                <td>@student.CredentialArea</td>
                                <td>@student.CountyCDS</td>
                                <td>@student.LEACDS</td>
                                <td>@student.SchoolCDS</td>
                                <td>
                                    @{
                                        var badgeClass = GMS.Business.Helpers.StatusHelper.GetBadgeClass(student.Status);
                                        var displayText = GMS.Business.Helpers.StatusHelper.GetDisplayText(student.Status);
                                    }
                                    <span class="@badgeClass badge-status">@displayText</span>
                                </td>
                                <td>@student.LastModified.ToString("MM/dd/yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="mdi mdi-information-outline"></i>
                No candidates found for your IHE in this grant cycle.
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchStudents');
            const filterSelect = document.getElementById('filterLEA');
            const tableRows = document.querySelectorAll('#studentsTable tbody tr');

            function filterTable() {
                const searchTerm = searchInput.value.toLowerCase();
                const selectedLEA = filterSelect.value;

                tableRows.forEach(row => {
                    const studentName = row.getAttribute('data-student-name');
                    const leaPartner = row.getAttribute('data-lea');

                    const matchesSearch = studentName.includes(searchTerm);
                    const matchesLEA = !selectedLEA ||
                        (selectedLEA === 'lausd' && leaPartner.includes('Los Angeles')) ||
                        (selectedLEA === 'sdusd' && leaPartner.includes('San Diego')) ||
                        (selectedLEA === 'fusd' && leaPartner.includes('Fresno')) ||
                        (selectedLEA === 'sfusd' && leaPartner.includes('San Francisco')) ||
                        (selectedLEA === 'ousd' && leaPartner.includes('Oakland')) ||
                        (selectedLEA === 'scusd' && leaPartner.includes('Sacramento'));

                    if (matchesSearch && matchesLEA) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            }

            searchInput.addEventListener('input', filterTable);
            filterSelect.addEventListener('change', filterTable);
        });
    </script>
}
