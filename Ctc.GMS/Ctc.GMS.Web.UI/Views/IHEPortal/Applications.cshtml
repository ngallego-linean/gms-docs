@model ApplicationListViewModel

@{
    ViewData["Title"] = "Your Submissions";
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "IHEPortal", new { iheId = ViewContext.RouteData.Values["iheId"], grantCycleId = Model.GrantCycleId })">IHE Portal</a></li>
        <li class="breadcrumb-item active">Your Submissions</li>
    </ol>
}

<div class="page-header">
    <h2><i class="mdi mdi-account-multiple-outline"></i> Your Submissions</h2>
    <p class="subtitle">@Model.GrantCycleName</p>
</div>

<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-account-multiple-outline"></i> All Candidates</h4>
    </div>
    <div class="r4-card-body">
