                new { StudentName = "David Kim", LEAPartner = "San Francisco Unified School District", DOB = "07/22/1998", CredentialArea = "Single Subject - English", CountyCDS = "38", LEACDS = "68478", SchoolCDS = "3868478", Status = "UNDER_REVIEW", LastModified = DateTime.Now.AddDays(-10) },
                new { StudentName = "Jessica Nguyen", LEAPartner = "Oakland Unified School District", DOB = "09/14/1997", CredentialArea = "Education Specialist", CountyCDS = "01", LEACDS = "61259", SchoolCDS = "0161259", Status = "APPROVED", LastModified = DateTime.Now.AddDays(-11) },
                new { StudentName = "Robert Johnson", LEAPartner = "San Diego Unified School District", DOB = "12/05/1999", CredentialArea = "Multiple Subject", CountyCDS = "37", LEACDS = "68338", SchoolCDS = "3768392", Status = "APPROVED", LastModified = DateTime.Now.AddDays(-13) },
                new { StudentName = "Amanda Lee", LEAPartner = "Fresno Unified School District", DOB = "03/28/1998", CredentialArea = "Single Subject - Science", CountyCDS = "10", LEACDS = "62331", SchoolCDS = "1062398", Status = "UNDER_REVIEW", LastModified = DateTime.Now.AddDays(-15) },
                new { StudentName = "Christopher Brown", LEAPartner = "Los Angeles Unified School District", DOB = "06/09/1997", CredentialArea = "Single Subject - History", CountyCDS = "19", LEACDS = "64733", SchoolCDS = "1933067", Status = "PENDING", LastModified = DateTime.Now.AddDays(-17) },
                new { StudentName = "Maria Garcia", LEAPartner = "Sacramento City Unified School District", DOB = "10/11/1999", CredentialArea = "Multiple Subject", CountyCDS = "34", LEACDS = "67439", SchoolCDS = "3467439", Status = "PENDING", LastModified = DateTime.Now.AddDays(-19) },
                new { StudentName = "Daniel White", LEAPartner = "San Francisco Unified School District", DOB = "04/17/1996", CredentialArea = "Education Specialist", CountyCDS = "38", LEACDS = "68478", SchoolCDS = "3868512", Status = "APPROVED", LastModified = DateTime.Now.AddDays(-21) },
                new { StudentName = "Jennifer Lopez", LEAPartner = "Oakland Unified School District", DOB = "08/30/1998", CredentialArea = "Single Subject - Mathematics", CountyCDS = "01", LEACDS = "61259", SchoolCDS = "0161287", Status = "UNDER_REVIEW", LastModified = DateTime.Now.AddDays(-23) },
                new { StudentName = "Emma Richardson", LEAPartner = "Los Angeles Unified School District", DOB = "06/18/1999", CredentialArea = "Single Subject - Science", CountyCDS = "19", LEACDS = "64733", SchoolCDS = "1933021", Status = "WAITLIST", LastModified = DateTime.Now.AddDays(-1) },
                new { StudentName = "Carlos Mendez", LEAPartner = "San Diego Unified School District", DOB = "02/28/1998", CredentialArea = "Multiple Subject", CountyCDS = "37", LEACDS = "68338", SchoolCDS = "3768338", Status = "WAITLIST", LastModified = DateTime.Now.AddDays(-3) }
            };
        }

        @if (allStudents.Any())
        {
            <div style="display: flex; gap: var(--spacing-md); margin-bottom: var(--spacing-xl); align-items: flex-end; flex-wrap: wrap;">
                <div style="flex: 1; min-width: 250px;">
                    <label for="searchStudents" style="display: block; font-weight: 600; margin-bottom: var(--spacing-sm);">
                        <i class="mdi mdi-magnify"></i> Search by Student Name
                    </label>
                    <input type="text" id="searchStudents" class="form-control" placeholder="Enter student name..." />
                </div>
                <div style="min-width: 250px;">
                    <label for="filterLEA" style="display: block; font-weight: 600; margin-bottom: var(--spacing-sm);">
                        <i class="mdi mdi-filter-outline"></i> Filter by LEA Partner
                    </label>
                    <select id="filterLEA" class="form-control">
                        <option value="">All LEA Partners</option>
                        <option value="lausd">Los Angeles Unified School District</option>
                        <option value="sdusd">San Diego Unified School District</option>
                        <option value="fusd">Fresno Unified School District</option>
                        <option value="sfusd">San Francisco Unified School District</option>
                        <option value="ousd">Oakland Unified School District</option>
                        <option value="scusd">Sacramento City Unified School District</option>
                    </select>
                </div>
                <div style="min-width: 200px;">
                    <label for="filterStatus" style="display: block; font-weight: 600; margin-bottom: var(--spacing-sm);">
                        <i class="mdi mdi-filter-outline"></i> Filter by Status
                    </label>
                    <select id="filterStatus" class="form-control">
                        <option value="">All Statuses</option>
                        <option value="PENDING">Pending</option>
                        <option value="UNDER_REVIEW">Under Review</option>
                        <option value="WAITLIST">Waitlist</option>
                        <option value="APPROVED">Approved</option>
                    </select>
                </div>
            </div>

            <div class="table-wrapper">
                <table class="r4-table" id="studentsTable" style="width: 100%;">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>LEA Partner</th>
                            <th>DOB</th>
                            <th>Credential Area</th>
                            <th>County CDS</th>
                            <th>LEA CDS</th>
                            <th>School CDS</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in allStudents)
                        {
                            <tr data-student-name="@student.StudentName.ToLower()" data-lea="@student.LEAPartner" data-status="@student.Status">
                                <td>
                                    <strong>@student.StudentName</strong>
                                </td>
                                <td>@student.LEAPartner</td>
                                <td>@student.DOB</td>
                                <td>@student.CredentialArea</td>
                                <td>@student.CountyCDS</td>
                                <td>@student.LEACDS</td>
                                <td>@student.SchoolCDS</td>
                                <td>
                                    @{
                                        var badgeClass = GMS.Business.Helpers.StatusHelper.GetBadgeClass(student.Status);
                                        var displayText = GMS.Business.Helpers.StatusHelper.GetDisplayText(student.Status);
                                    }
                                    <span class="@badgeClass badge-status">@displayText</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @* Pagination Controls *@
            <div class="pagination-controls" id="paginationControls" style="display: flex; justify-content: space-between; align-items: center; margin-top: 1rem; padding-top: 1rem; border-top: 1px solid var(--gray-200);">
                <div class="pagination-info">
                    Showing <span id="showingStart">1</span>-<span id="showingEnd">@Math.Min(10, allStudents.Count)</span> of <span id="totalRecords">@allStudents.Count</span> candidates
                </div>
                <div class="pagination-buttons" style="display: flex; gap: 0.5rem; align-items: center;">
                    <button type="button" class="r4-button r4-button-sm" id="prevPage" onclick="changePage(-1)">
                        <i class="mdi mdi-chevron-left"></i> Previous
                    </button>
                    <span style="padding: 0 0.75rem;">Page <span id="currentPage">1</span> of <span id="totalPages">@Math.Max(1, (int)Math.Ceiling(allStudents.Count / 10.0))</span></span>
                    <button type="button" class="r4-button r4-button-sm" id="nextPage" onclick="changePage(1)">
                        Next <i class="mdi mdi-chevron-right"></i>
                    </button>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="mdi mdi-information-outline"></i>
                No candidates found for your IHE in this grant cycle.
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        const ROWS_PER_PAGE = 10;
        let currentPage = 1;
        let allRows = [];
        let filteredRows = [];

        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchStudents');
            const filterLEA = document.getElementById('filterLEA');
            const filterStatus = document.getElementById('filterStatus');
            const table = document.getElementById('studentsTable');
            const tbody = table ? table.getElementsByTagName('tbody')[0] : null;

            if (tbody) {
                allRows = Array.from(tbody.getElementsByTagName('tr'));
                filteredRows = [...allRows];
            }

            // Read status from URL query parameter
            const urlParams = new URLSearchParams(window.location.search);
            const statusParam = urlParams.get('status');
            if (statusParam && filterStatus) {
                filterStatus.value = statusParam;
            }

            function filterTable() {
                const searchTerm = searchInput.value.toLowerCase();
                const selectedLEA = filterLEA.value;
                const selectedStatus = filterStatus.value;

                filteredRows = allRows.filter(row => {
                    const studentName = row.getAttribute('data-student-name');
                    const leaPartner = row.getAttribute('data-lea');
                    const rowStatus = row.getAttribute('data-status');

                    const matchesSearch = studentName.includes(searchTerm);
                    const matchesLEA = !selectedLEA ||
                        (selectedLEA === 'lausd' && leaPartner.includes('Los Angeles')) ||
                        (selectedLEA === 'sdusd' && leaPartner.includes('San Diego')) ||
                        (selectedLEA === 'fusd' && leaPartner.includes('Fresno')) ||
                        (selectedLEA === 'sfusd' && leaPartner.includes('San Francisco')) ||
                        (selectedLEA === 'ousd' && leaPartner.includes('Oakland')) ||
                        (selectedLEA === 'scusd' && leaPartner.includes('Sacramento'));
                    const matchesStatus = !selectedStatus || rowStatus === selectedStatus;

                    return matchesSearch && matchesLEA && matchesStatus;
                });

                currentPage = 1;
                updatePagination();
                showPage(1);
            }

            searchInput.addEventListener('input', filterTable);
            filterLEA.addEventListener('change', filterTable);
            filterStatus.addEventListener('change', filterTable);

            // Initialize pagination and run filter on page load
            updatePagination();
            showPage(1);
            filterTable();
        });

        function updatePagination() {
            const totalPages = Math.ceil(filteredRows.length / ROWS_PER_PAGE) || 1;
            document.getElementById('totalPages').textContent = totalPages;
            document.getElementById('totalRecords').textContent = filteredRows.length;
            document.getElementById('prevPage').disabled = currentPage <= 1;
            document.getElementById('nextPage').disabled = currentPage >= totalPages;
        }

        function showPage(page) {
            currentPage = page;
            const startIndex = (page - 1) * ROWS_PER_PAGE;
            const endIndex = startIndex + ROWS_PER_PAGE;

            // Hide all rows first
            allRows.forEach(row => row.style.display = 'none');

            // Show only filtered rows for current page
            filteredRows.forEach((row, index) => {
                if (index >= startIndex && index < endIndex) {
                    row.style.display = '';
                }
            });

            document.getElementById('currentPage').textContent = page;
            document.getElementById('showingStart').textContent = filteredRows.length > 0 ? startIndex + 1 : 0;
            document.getElementById('showingEnd').textContent = Math.min(endIndex, filteredRows.length);
            updatePagination();
        }

        function changePage(delta) {
            const totalPages = Math.ceil(filteredRows.length / ROWS_PER_PAGE) || 1;
            const newPage = currentPage + delta;
            if (newPage >= 1 && newPage <= totalPages) {
                showPage(newPage);
            }
        }

    </script>
}
