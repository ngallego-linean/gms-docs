@* Revision History *@
@if (!string.IsNullOrEmpty(Model.RevisionNotes))
{
    <div class="r4-card">
        <div class="r4-card-header">
            <h4><i class="mdi mdi-history"></i> Revision History</h4>
        </div>
        <div class="r4-card-body">
            <div class="alert alert-warning">
                <strong>Revisions Requested (@Model.RevisionCount time@(Model.RevisionCount != 1 ? "s" : ""))</strong>
                <p class="mt-2">@Model.RevisionNotes</p>
            </div>
        </div>
    </div>
}

@* Revision Modal *@
<div id="revisionModal" class="modal" style="display:none;">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Request Revisions</h3>
            <button type="button" class="close" onclick="hideRevisionModal()">&times;</button>
        </div>
        <form method="post" action="@Url.Action("RequestRevisions", "Reporting", new { reportType = Model.ReportType, id = Model.ReportId })">
            <div class="modal-body">
                <div class="form-group">
                    <label for="revisionNotes">Revision Notes <span class="text-danger">*</span></label>
                    <textarea id="revisionNotes" name="revisionNotes" class="form-control" rows="5"
                              placeholder="Please specify what needs to be corrected or clarified..." required></textarea>
                    <small class="form-text">Be specific about what needs to be fixed.</small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="r4-button r4-button-secondary" onclick="hideRevisionModal()">Cancel</button>
                <button type="submit" class="r4-button r4-button-warning">
                    <i class="mdi mdi-send"></i> Send Revision Request
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function showRevisionModal() {
            document.getElementById('revisionModal').style.display = 'flex';
        }

        function hideRevisionModal() {
            document.getElementById('revisionModal').style.display = 'none';
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('revisionModal');
            if (event.target == modal) {
                hideRevisionModal();
            }
        }
    </script>

    <style>
        .detail-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .detail-item label {
            font-weight: 600;
            color: var(--gray-600);
            font-size: 0.875rem;
            margin-bottom: 0.25rem;
            display: block;
        }

        .detail-item span {
            font-size: 1rem;
        }

        .detail-item.full-width {
            grid-column: 1 / -1;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
            align-items: center;
            justify-content: center;
        }

        .modal-content {
            background-color: var(--white);
            border-radius: 4px;
            max-width: 600px;
            width: 90%;
            max-height: 90vh;
            overflow-y: auto;
        }

        .modal-header {
            padding: 1rem;
            border-bottom: 1px solid var(--gray-200);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .modal-header h3 {
            margin: 0;
        }

        .modal-header .close {
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            padding: 0;
            width: 2rem;
            height: 2rem;
        }

        .modal-body {
            padding: 1rem;
        }

        .modal-footer {
            padding: 1rem;
            border-top: 1px solid var(--gray-200);
            display: flex;
            justify-content: flex-end;
            gap: 0.5rem;
        }
    </style>
}
