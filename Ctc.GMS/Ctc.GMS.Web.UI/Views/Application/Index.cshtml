@* ~/Views/Application/Index.cshtml *@
@model ApplicationListViewModel

@{
    ViewData["Title"] = "Applications";
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Applications</li>
    </ol>
}

@* Page Header *@
<div class="page-header">
    <h2><i class="mdi mdi-file-document-multiple"></i> Applications</h2>
    <p class="subtitle">All IHE-LEA applications for current grant cycle</p>
</div>

@* R4 Search/Filter Card (UI-252) *@
<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-magnify"></i> Search Applications</h4>
    </div>
    <div class="r4-card-body">
        <form method="get" asp-controller="Application" asp-action="Index">
            <div class="form-row">
                <div class="form-group">
                    <label for="IHEId">IHE Institution</label>
                    <select asp-for="SearchCriteria.IHEId" class="form-control" id="IHEId">
                        <option value="">--Unspecified--</option>
                        @* In real app, this would be populated from controller *@
                    </select>
                </div>

                <div class="form-group">
                    <label for="LEAId">LEA District</label>
                    <select asp-for="SearchCriteria.LEAId" class="form-control" id="LEAId">
                        <option value="">--Unspecified--</option>
                        @* In real app, this would be populated from controller *@
                    </select>
                </div>
            </div>

            <div class="search-actions">
                <button type="submit" class="r4-button r4-button-primary">
                    <i class="mdi mdi-magnify"></i> Search
                </button>
                <a asp-controller="Application" asp-action="Index" class="r4-button r4-button-secondary">
                    <i class="mdi mdi-close-circle"></i> Clear
                </a>
            </div>
        </form>
    </div>
</div>

@* R4 Results Card *@
<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-table"></i> Application Results</h4>
    </div>
    <div class="r4-card-body">
        <div class="table-wrapper">
            <table class="r4-table" id="applicationsTable" style="width: 100%;">
                <thead>
                    <tr>
                        <th>Submission Month</th>
                        <th>IHE Institution</th>
                        <th>LEA District</th>
                        <th>Pending</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Applications.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center">No applications found</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var app in Model.Applications)
                        {
                            <tr>
                                <td>@app.LastModified.ToString("MMMM yyyy")</td>
                                <td>@app.IHEName</td>
                                <td>@app.LEAName</td>
                                <td>
                                    <span class="badge badge-warning badge-status">@app.PendingCount Pending</span>
                                </td>
                                <td>
                                    @{
                                        var badgeClass = app.Status switch
                                        {
                                            "APPROVED" => "badge-success",
                                            "ACTIVE" => "badge-primary",
                                            "SUBMITTED" => "badge-warning",
                                            "UNDER_REVIEW" => "badge-info",
                                            "COMPLETED" => "badge-success",
                                            "DRAFT" => "badge-secondary",
                                            _ => "badge-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass">@app.Status</span>
                                </td>
                                <td>
                                    <a asp-controller="Application" asp-action="Details" asp-route-id="@app.Id" class="r4-button r4-button-sm">
                                        <i class="mdi mdi-eye-outline"></i> Review Submission
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        @* Pagination Controls *@
        <div class="pagination-controls" id="applicationsPagination" style="display: flex; justify-content: space-between; align-items: center; margin-top: 1rem; padding-top: 1rem; border-top: 1px solid var(--gray-200);">
            <div class="pagination-info">
                Showing <span id="showingStart">1</span>-<span id="showingEnd">@Math.Min(10, Model.Applications.Count)</span> of <span id="totalRecords">@Model.Applications.Count</span> applications
            </div>
            <div class="pagination-buttons" style="display: flex; gap: 0.5rem; align-items: center;">
                <button type="button" class="r4-button r4-button-sm" id="prevPage" onclick="changePage(-1)">
                    <i class="mdi mdi-chevron-left"></i> Previous
                </button>
                <span style="padding: 0 0.75rem;">Page <span id="currentPage">1</span> of <span id="totalPages">@Math.Max(1, (int)Math.Ceiling(Model.Applications.Count / 10.0))</span></span>
                <button type="button" class="r4-button r4-button-sm" id="nextPage" onclick="changePage(1)">
                    Next <i class="mdi mdi-chevron-right"></i>
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const ROWS_PER_PAGE = 10;
        let currentPage = 1;
        let allRows = [];

        document.addEventListener('DOMContentLoaded', function() {
            const table = document.getElementById('applicationsTable');
            if (table) {
                const tbody = table.getElementsByTagName('tbody')[0];
                if (tbody) {
                    allRows = Array.from(tbody.getElementsByTagName('tr'));
                    if (allRows.length > ROWS_PER_PAGE) {
                        updatePagination();
                        showPage(1);
                    }
                }
            }
        });

        function updatePagination() {
            const totalPages = Math.ceil(allRows.length / ROWS_PER_PAGE) || 1;
            document.getElementById('totalPages').textContent = totalPages;
            document.getElementById('totalRecords').textContent = allRows.length;
            document.getElementById('prevPage').disabled = currentPage <= 1;
            document.getElementById('nextPage').disabled = currentPage >= totalPages;
        }

        function showPage(page) {
            currentPage = page;
            const startIndex = (page - 1) * ROWS_PER_PAGE;
            const endIndex = startIndex + ROWS_PER_PAGE;

            allRows.forEach((row, index) => {
                row.style.display = (index >= startIndex && index < endIndex) ? '' : 'none';
            });

            document.getElementById('currentPage').textContent = page;
            document.getElementById('showingStart').textContent = allRows.length > 0 ? startIndex + 1 : 0;
            document.getElementById('showingEnd').textContent = Math.min(endIndex, allRows.length);
            updatePagination();
        }

        function changePage(delta) {
            const totalPages = Math.ceil(allRows.length / ROWS_PER_PAGE) || 1;
            const newPage = currentPage + delta;
            if (newPage >= 1 && newPage <= totalPages) {
                showPage(newPage);
            }
        }
    </script>
}
