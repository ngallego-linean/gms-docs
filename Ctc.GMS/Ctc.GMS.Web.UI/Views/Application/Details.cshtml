@* ~/Views/Application/Details.cshtml *@
@model ApplicationViewModel

@{
    ViewData["Title"] = "Submission Details";

    var submissionCount = Model.Students.Count(s => GMS.Business.Helpers.StatusHelper.GetWorkflowStage(s.Status) == GMS.Business.Helpers.StatusHelper.WorkflowStage.Submission);
    var reviewCount = Model.Students.Count(s => GMS.Business.Helpers.StatusHelper.GetWorkflowStage(s.Status) == GMS.Business.Helpers.StatusHelper.WorkflowStage.Review);
    var disbursementCount = Model.Students.Count(s => GMS.Business.Helpers.StatusHelper.GetWorkflowStage(s.Status) == GMS.Business.Helpers.StatusHelper.WorkflowStage.Disbursement);
    var reportingCount = Model.Students.Count(s => GMS.Business.Helpers.StatusHelper.GetWorkflowStage(s.Status) == GMS.Business.Helpers.StatusHelper.WorkflowStage.Reporting);
    var totalStudents = Model.Students.Count;
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Application" asp-action="Index">Submissions</a></li>
        <li class="breadcrumb-item active">Submission Details</li>
    </ol>
}

@* Page Header *@
<div class="page-header">
    <h2><i class="mdi mdi-file-document-outline"></i> Submission Details</h2>
    <p class="subtitle">@Model.IHE.Name â†’ @Model.LEA.Name</p>
</div>

@* Action Button *@
<div class="page-actions">
    <a asp-controller="Application" asp-action="Index" class="r4-button r4-button-secondary">
        <i class="mdi mdi-arrow-left"></i> Back to Submissions
    </a>
</div>

@* Submission Information Card *@
<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-information-outline"></i> Submission Information</h4>
    </div>
    <div class="r4-card-body" style="padding-top: 0;">
        <div class="info-grid" style="margin-top: -0.15rem;">
            <div class="info-item">
                <span class="info-label">Submission ID</span>
                <span class="info-value">#@Model.Id</span>
            </div>
            <div class="info-item">
                <span class="info-label">Grant Cycle</span>
                <span class="info-value">@Model.GrantCycle.Name</span>
            </div>
            <div class="info-item">
                <span class="info-label">Status</span>
                <span class="info-value">@Model.Status</span>
            </div>
            <div class="info-item">
                <span class="info-label">IHE Institution</span>
                <span class="info-value">@Model.IHE.Name</span>
            </div>
            <div class="info-item">
                <span class="info-label">LEA District</span>
                <span class="info-value">@Model.LEA.Name</span>
            </div>
            <div class="info-item">
                <span class="info-label">Total Students</span>
                <span class="info-value info-value-highlight">@totalStudents</span>
            </div>
            <div class="info-item">
                <span class="info-label">Pending Review</span>
                <span class="info-value">
                    @if (reviewCount > 0)
                    {
                        <span class="badge badge-warning">@reviewCount Pending</span>
                    }
                    else
                    {
                        <span class="text-muted">0</span>
                    }
                </span>
            </div>
            <div class="info-item">
                <span class="info-label">Created Date</span>
                <span class="info-value">@Model.CreatedAt.ToShortDateString()</span>
            </div>
            <div class="info-item">
                <span class="info-label">Last Modified</span>
                <span class="info-value">@Model.LastModified.ToShortDateString()</span>
            </div>
        </div>
    </div>
</div>

@* Student List *@
<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-account-group-outline"></i> Students</h4>
    </div>
    <div class="r4-card-body">
        @if (!Model.Students.Any())
        {
            <div class="alert alert-info">
                <i class="mdi mdi-information-outline"></i>
                No students have been added to this submission yet.
            </div>
        }
        else
        {
            @* Search and Filter Bar *@
            <div class="form-row" style="margin-bottom: 1.5rem;">
                <div class="form-group col-md-8">
                    <label for="studentSearch"><i class="mdi mdi-magnify"></i> Search</label>
                    <input type="text" id="studentSearch" class="form-control" placeholder="Search by name, SEID, or credential area...">
                </div>
                <div class="form-group col-md-4">
                    <label for="credentialFilter"><i class="mdi mdi-school-outline"></i> Credential Area</label>
                    <select id="credentialFilter" class="form-control">
                        <option value="">All Credential Areas</option>
                        <option value="Multiple Subject">Multiple Subject</option>
                        <option value="Single Subject">Single Subject</option>
                        <option value="Single Subject - Mathematics">Single Subject - Mathematics</option>
                        <option value="Education Specialist">Education Specialist</option>
                    </select>
                </div>
            </div>

            <div class="table-wrapper">
                <table class="r4-table" id="studentsTable" style="width: 100%;">
                <thead>
                    <tr>
                        <th>SEID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Credential Area</th>
                        <th style="text-align: right;">Award Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model.Students.OrderByDescending(s => s.Status == "SUBMITTED").ThenBy(s => s.LastName))
                    {
                        <tr>
                            <td>@student.SEID</td>
                            <td>@student.FirstName</td>
                            <td>@student.LastName</td>
                            <td>@student.CredentialArea</td>
                            <td style="text-align: right;">
                                @if (student.Status == "SUBMITTED" || student.Status == "UNDER_REVIEW")
                                {
                                    <span class="text-muted">Pending</span>
                                }
                                else
                                {
                                    <text>$10,000</text>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>

            @* Pagination Controls *@
            <div class="pagination-controls" style="display: flex; justify-content: space-between; align-items: center; margin-top: 1rem; padding-top: 1rem; border-top: 1px solid var(--gray-200);">
                <div class="pagination-info">
                    Showing <span id="showingStart">1</span>-<span id="showingEnd">10</span> of <span id="totalRecords">@Model.Students.Count</span> students
                </div>
                <div class="pagination-buttons" style="display: flex; gap: 0.5rem; align-items: center;">
                    <button type="button" class="r4-button r4-button-sm" id="prevPage" onclick="changePage(-1)">
                        <i class="mdi mdi-chevron-left"></i> Previous
                    </button>
                    <span style="padding: 0 0.75rem;">Page <span id="currentPage">1</span> of <span id="totalPages">1</span></span>
                    <button type="button" class="r4-button r4-button-sm" id="nextPage" onclick="changePage(1)">
                        Next <i class="mdi mdi-chevron-right"></i>
                    </button>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Pagination and filtering
        const ROWS_PER_PAGE = 10;
        let currentPage = 1;
        let allRows = [];
        let filteredRows = [];

        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('studentSearch');
            const credentialFilter = document.getElementById('credentialFilter');
            const table = document.getElementById('studentsTable');
            const tbody = table ? table.getElementsByTagName('tbody')[0] : null;

            if (!tbody) return;

            // Store all rows
            allRows = Array.from(tbody.getElementsByTagName('tr'));
            filteredRows = [...allRows];

            // Initial pagination setup
            updatePagination();
            showPage(1);

            function filterTable() {
                const searchTerm = searchInput.value.toLowerCase();
                const credentialValue = credentialFilter.value;

                filteredRows = allRows.filter(row => {
                    const cells = row.getElementsByTagName('td');
                    if (cells.length === 0) return false;

                    const seid = cells[0].textContent.toLowerCase();
                    const firstName = cells[1].textContent.toLowerCase();
                    const lastName = cells[2].textContent.toLowerCase();
                    const credentialArea = cells[3].textContent;

                    const matchesSearch = searchTerm === '' ||
                        seid.includes(searchTerm) ||
                        firstName.includes(searchTerm) ||
                        lastName.includes(searchTerm) ||
                        credentialArea.toLowerCase().includes(searchTerm);

                    const matchesCredential = credentialValue === '' || credentialArea === credentialValue;

                    return matchesSearch && matchesCredential;
                });

                currentPage = 1;
                updatePagination();
                showPage(1);
            }

            // Add event listeners
            searchInput.addEventListener('keyup', filterTable);
            credentialFilter.addEventListener('change', filterTable);
        });

        function updatePagination() {
            const totalPages = Math.ceil(filteredRows.length / ROWS_PER_PAGE) || 1;
            document.getElementById('totalPages').textContent = totalPages;
            document.getElementById('totalRecords').textContent = filteredRows.length;
            document.getElementById('prevPage').disabled = currentPage <= 1;
            document.getElementById('nextPage').disabled = currentPage >= totalPages;
        }

        function showPage(page) {
            currentPage = page;
            const startIndex = (page - 1) * ROWS_PER_PAGE;
            const endIndex = startIndex + ROWS_PER_PAGE;

            // Hide all rows first
            allRows.forEach(row => row.style.display = 'none');

            // Show only filtered rows for current page
            filteredRows.forEach((row, index) => {
                if (index >= startIndex && index < endIndex) {
                    row.style.display = '';
                }
            });

            // Update pagination info
            document.getElementById('currentPage').textContent = page;
            document.getElementById('showingStart').textContent = filteredRows.length > 0 ? startIndex + 1 : 0;
            document.getElementById('showingEnd').textContent = Math.min(endIndex, filteredRows.length);
            updatePagination();
        }

        function changePage(delta) {
            const totalPages = Math.ceil(filteredRows.length / ROWS_PER_PAGE) || 1;
            const newPage = currentPage + delta;
            if (newPage >= 1 && newPage <= totalPages) {
                showPage(newPage);
            }
        }
    </script>

    <style>
        /* Back button fix */
        .page-actions .r4-button-secondary {
            background-color: var(--gray-100) !important;
            color: var(--gray-700) !important;
            border: 1px solid var(--gray-300) !important;
        }

        .page-actions .r4-button-secondary:hover {
            background-color: var(--gray-200) !important;
            color: var(--gray-800) !important;
        }

        /* Info Grid - Submission Information */
        .info-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 0.5rem 2rem;
        }

        .info-item {
            display: flex;
            flex-direction: column;
            padding: 0.5rem 0;
            border-bottom: 1px solid var(--gray-200);
        }

        .info-item-full {
            grid-column: 1 / -1;
        }

        .info-label {
            font-size: 0.75rem;
            color: var(--gray-600);
            font-weight: 500;
            margin-bottom: 0.125rem;
            text-transform: uppercase;
            letter-spacing: 0.025em;
        }

        .info-value {
            font-size: 0.95rem;
            color: var(--gray-900);
        }

        .info-value-highlight {
            font-weight: 600;
            color: var(--ctc-blue);
        }

        /* Table full width */
        .table-wrapper {
            width: 100%;
            overflow-x: auto;
        }

        @@media (max-width: 768px) {
            .info-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
}
