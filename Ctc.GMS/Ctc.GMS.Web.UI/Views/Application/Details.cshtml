@* ~/Views/Application/Details.cshtml *@
@model ApplicationViewModel

@{
    ViewData["Title"] = "Application Details";

    var pendingLEACount = Model.Students.Count(s => s.Status == "PENDING_LEA");
    var draftCount = Model.Students.Count(s => s.Status == "DRAFT");
    var approvedCount = Model.Students.Count(s => s.Status == "APPROVED");
    var submittedCount = Model.Students.Count(s => s.Status == "SUBMITTED" || s.Status == "UNDER_REVIEW");
    var totalStudents = Model.Students.Count;
}

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Application" asp-action="Index">Applications</a></li>
        <li class="breadcrumb-item active">Application Details</li>
    </ol>
}

@* Page Header *@
<div class="page-header">
    <h2><i class="mdi mdi-file-document-outline"></i> Application Details</h2>
    <p class="subtitle">@Model.IHE.Name â†’ @Model.LEA.Name</p>
</div>

@* Action Button *@
<div class="page-actions">
    <a asp-controller="Application" asp-action="Index" class="r4-button r4-button-secondary">
        <i class="mdi mdi-arrow-left"></i> Back to Applications
    </a>
</div>

@* Application Information Card *@
<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-information-outline"></i> Application Information</h4>
    </div>
    <div class="r4-card-body">
        <dl class="r4-dl-horizontal">
            <dt>Application ID:</dt>
            <dd><strong>#@Model.Id</strong></dd>

            <dt>Grant Cycle:</dt>
            <dd>@Model.GrantCycle.Name</dd>

            <dt>Status:</dt>
            <dd>
                <span class="badge badge-success">
                    <i class="mdi mdi-check-circle"></i> @Model.Status
                </span>
            </dd>

            <dt>IHE Institution:</dt>
            <dd>@Model.IHE.Name</dd>

            <dt>LEA District:</dt>
            <dd>@Model.LEA.Name</dd>

            <dt>Created Date:</dt>
            <dd>@Model.CreatedAt.ToShortDateString()</dd>

            <dt>Last Modified:</dt>
            <dd>@Model.LastModified.ToShortDateString()</dd>

            <dt>Created By:</dt>
            <dd>@Model.CreatedBy</dd>
        </dl>
    </div>
</div>

@* Application Progress Card *@
<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-chart-timeline-variant"></i> Application Progress</h4>
    </div>
    <div class="r4-card-body">
        <div class="dashboard-grid">
            <div class="metric-card">
                <div class="metric-icon">
                    <i class="mdi mdi-account-group-outline"></i>
                </div>
                <div class="metric-content">
                    <div class="metric-value">@totalStudents</div>
                    <div class="metric-label">Total Students</div>
                </div>
            </div>
            <div class="metric-card">
                <div class="metric-icon">
                    <i class="mdi mdi-file-document-edit-outline"></i>
                </div>
                <div class="metric-content">
                    <div class="metric-value">@draftCount</div>
                    <div class="metric-label">Drafts</div>
                </div>
            </div>
            <div class="metric-card">
                <div class="metric-icon">
                    <i class="mdi mdi-clock-outline"></i>
                </div>
                <div class="metric-content">
                    <div class="metric-value">@pendingLEACount</div>
                    <div class="metric-label">Pending LEA</div>
                </div>
            </div>
            <div class="metric-card metric-review">
                <div class="metric-icon">
                    <i class="mdi mdi-magnify"></i>
                </div>
                <div class="metric-content">
                    <div class="metric-value">@submittedCount</div>
                    <div class="metric-label">Under Review</div>
                </div>
            </div>
            <div class="metric-card metric-approved">
                <div class="metric-icon">
                    <i class="mdi mdi-check-circle-outline"></i>
                </div>
                <div class="metric-content">
                    <div class="metric-value">@approvedCount</div>
                    <div class="metric-label">Approved</div>
                </div>
            </div>
        </div>
    </div>
</div>

@* Student List *@
<div class="r4-card">
    <div class="r4-card-header">
        <h4><i class="mdi mdi-account-group-outline"></i> Students</h4>
    </div>
    <div class="r4-card-body">
        @if (!Model.Students.Any())
        {
            <div class="alert alert-info">
                <i class="mdi mdi-information-outline"></i>
                No students have been added to this application yet.
            </div>
        }
        else
        {
            @* Search and Filter Bar *@
            <div style="display: grid; grid-template-columns: 1fr 200px 250px; gap: 1rem; margin-bottom: 1.5rem; align-items: end;">
                <div>
                    <label for="studentSearch" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">
                        <i class="mdi mdi-magnify"></i> Search
                    </label>
                    <input type="text" id="studentSearch" class="r4-input" placeholder="Search by name, SEID, or credential area..." style="width: 100%;">
                </div>
                <div>
                    <label for="statusFilter" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">
                        <i class="mdi mdi-filter-outline"></i> Status
                    </label>
                    <select id="statusFilter" class="r4-select" style="width: 100%;">
                        <option value="">All Statuses</option>
                        <option value="SUBMITTED">Submitted</option>
                        <option value="APPROVED">Approved</option>
                        <option value="UNDER_REVIEW">Under Review</option>
                        <option value="PENDING_LEA">Pending LEA</option>
                        <option value="DRAFT">Draft</option>
                    </select>
                </div>
                <div>
                    <label for="credentialFilter" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">
                        <i class="mdi mdi-school-outline"></i> Credential Area
                    </label>
                    <select id="credentialFilter" class="r4-select" style="width: 100%;">
                        <option value="">All Credential Areas</option>
                        <option value="Multiple Subject">Multiple Subject</option>
                        <option value="Single Subject">Single Subject</option>
                        <option value="Single Subject - Mathematics">Single Subject - Mathematics</option>
                        <option value="Education Specialist">Education Specialist</option>
                    </select>
                </div>
            </div>

            <table class="r4-table" id="studentsTable">
                <thead>
                    <tr>
                        <th>SEID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Credential Area</th>
                        <th>Status</th>
                        <th class="text-right">Award Amount</th>
                        <th>Submitted</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model.Students.OrderByDescending(s => s.Status == "SUBMITTED").ThenBy(s => s.LastName))
                    {
                        <tr>
                            <td>@student.SEID</td>
                            <td>@student.FirstName</td>
                            <td>@student.LastName</td>
                            <td>@student.CredentialArea</td>
                            <td>
                                <span class="badge badge-@(GetStatusBadgeClass(student.Status))">
                                    @student.Status
                                </span>
                            </td>
                            <td class="text-right">
                                @if (student.Status == "SUBMITTED" || student.Status == "UNDER_REVIEW")
                                {
                                    <span class="text-muted">Pending</span>
                                }
                                else
                                {
                                    <text>$10,000</text>
                                }
                            </td>
                            <td>@(student.SubmittedAt?.ToShortDateString() ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Student table filtering
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('studentSearch');
            const statusFilter = document.getElementById('statusFilter');
            const credentialFilter = document.getElementById('credentialFilter');
            const table = document.getElementById('studentsTable');
            const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

            function filterTable() {
                const searchTerm = searchInput.value.toLowerCase();
                const statusValue = statusFilter.value.toUpperCase();
                const credentialValue = credentialFilter.value;

                for (let i = 0; i < rows.length; i++) {
                    const row = rows[i];
                    const cells = row.getElementsByTagName('td');

                    if (cells.length > 0) {
                        const seid = cells[0].textContent.toLowerCase();
                        const firstName = cells[1].textContent.toLowerCase();
                        const lastName = cells[2].textContent.toLowerCase();
                        const credentialArea = cells[3].textContent;
                        const status = cells[4].textContent.trim().toUpperCase();

                        // Check search term
                        const matchesSearch = searchTerm === '' ||
                            seid.includes(searchTerm) ||
                            firstName.includes(searchTerm) ||
                            lastName.includes(searchTerm) ||
                            credentialArea.toLowerCase().includes(searchTerm);

                        // Check status filter
                        const matchesStatus = statusValue === '' || status === statusValue;

                        // Check credential filter
                        const matchesCredential = credentialValue === '' || credentialArea === credentialValue;

                        // Show/hide row based on all filters
                        if (matchesSearch && matchesStatus && matchesCredential) {
                            row.style.display = '';
                        } else {
                            row.style.display = 'none';
                        }
                    }
                }
            }

            // Add event listeners
            searchInput.addEventListener('keyup', filterTable);
            statusFilter.addEventListener('change', filterTable);
            credentialFilter.addEventListener('change', filterTable);
        });
    </script>
}

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "APPROVED" => "success",
            "SUBMITTED" => "warning",
            "UNDER_REVIEW" => "info",
            "REJECTED" => "danger",
            "PENDING_LEA" => "warning",
            "DRAFT" => "secondary",
            _ => "secondary"
        };
    }
}
