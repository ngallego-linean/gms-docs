</div>

@section Scripts {
    <script>
        // Column definitions
        const columnDefs = {
            candidates: [
                { key: 'seid', label: 'SEID', default: true },
                { key: 'firstName', label: 'First Name', default: true },
                { key: 'lastName', label: 'Last Name', default: true },
                { key: 'status', label: 'Status', default: true },
                { key: 'credentialArea', label: 'Credential', default: true },
                { key: 'ihe', label: 'IHE', default: true },
                { key: 'lea', label: 'LEA', default: true },
                { key: 'awardAmount', label: 'Award', default: true },
                { key: 'grantProgramHours', label: 'Grant Hours', default: false },
                { key: 'credentialProgramHours', label: 'Cred Hours', default: false },
                { key: 'met500Hours', label: '500hr', default: false },
                { key: 'met600Hours', label: '600hr', default: false },
                { key: 'credentialEarned', label: 'Credential Earned', default: false },
                { key: 'employmentStatus', label: 'Employment', default: false },
                { key: 'submittedAt', label: 'Submitted', default: false },
                { key: 'approvedAt', label: 'Approved', default: false },
                { key: 'lastActionDate', label: 'Last Action', default: false }
            ],
            leas: [
                { key: 'name', label: 'Name', default: true },
                { key: 'cdsCode', label: 'CDS Code', default: true },
                { key: 'county', label: 'County', default: true },
                { key: 'ihePartners', label: 'IHE Partners', default: true },
                { key: 'totalCandidates', label: 'Candidates', default: true },
                { key: 'approved', label: 'Approved', default: true },
                { key: 'paid', label: 'Paid', default: true },
                { key: 'totalAwards', label: 'Total Awards', default: true },
                { key: 'compliancePercent', label: 'Compliance', default: true },
                { key: 'pendingReview', label: 'Pending', default: false },
                { key: 'inDisbursement', label: 'In Disbursement', default: false },
                { key: 'reportsOverdue', label: 'Overdue', default: false }
            ],
            ihes: [
                { key: 'name', label: 'Name', default: true },
                { key: 'code', label: 'Code', default: true },
                { key: 'leaPartners', label: 'LEA Partners', default: true },
                { key: 'totalCandidates', label: 'Candidates', default: true },
                { key: 'submitted', label: 'Submitted', default: true },
                { key: 'approved', label: 'Approved', default: true },
                { key: 'completionRate', label: 'Completion', default: true },
                { key: 'credentialRate', label: 'Credential', default: true },
                { key: 'employmentRate', label: 'Employment', default: false },
                { key: 'reportsOverdue', label: 'Overdue', default: false }
            ]
        };

        // Quick filter mappings
        const quickFilterStatuses = {
            submission: ['DRAFT', 'IHE_SUBMITTED', 'LEA_REVIEWING', 'LEA_APPROVED', 'CTC_SUBMITTED'],
